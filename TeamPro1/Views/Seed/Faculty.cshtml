@{
    ViewData["Title"] = "Faculty Seeder";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Faculty Data Seeder - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --success-green: #28a745;
            --error-red: #dc3545;
        }

        body {
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(135deg, var(--cream) 0%, var(--warm-gold) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 20px;
            padding: 40px;
            max-width: 800px;
            width: 100%;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        }

        h1 {
            color: var(--royal-blue);
            text-align: center;
            margin-bottom: 30px;
        }

        .success-message {
            background: rgba(40, 167, 69, 0.1);
            border: 2px solid var(--success-green);
            color: var(--success-green);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            font-weight: 600;
        }

        .error-message {
            background: rgba(220, 53, 69, 0.1);
            border: 2px solid var(--error-red);
            color: var(--error-red);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            font-weight: 600;
        }

        .faculty-list {
            margin-top: 30px;
        }

        .faculty-card {
            background: var(--cream);
            border: 2px solid var(--slate);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 15px;
        }

        .faculty-card h3 {
            color: var(--royal-blue);
            margin: 0 0 10px 0;
        }

        .faculty-card p {
            margin: 5px 0;
            color: #666;
        }

        .credentials {
            background: rgba(111, 66, 193, 0.1);
            border-left: 4px solid #6f42c1;
            padding: 10px 15px;
            border-radius: 5px;
            margin-top: 10px;
        }

        .credentials strong {
            color: #6f42c1;
        }

        .btn {
            display: inline-block;
            background: linear-gradient(90deg, var(--royal-blue), var(--warm-gold));
            color: white;
            padding: 12px 30px;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            margin-top: 20px;
            transition: transform 0.3s;
        }

        .btn:hover {
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        .text-center {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>?? Faculty Data Seeder</h1>

        @if (ViewBag.Message != null)
        {
            <div class="success-message">
                ? @ViewBag.Message
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="error-message">
                ? @ViewBag.Error
            </div>
        }

        @if (ViewBag.Faculties != null)
        {
            <div class="faculty-list">
                <h2>Seeded Faculty Members:</h2>
                @foreach (var faculty in ViewBag.Faculties as List<TeamPro1.Models.Faculty>)
                {
                    <div class="faculty-card">
                        <h3>@faculty.FullName</h3>
                        <p><strong>ID:</strong> @faculty.Id</p>
                        <p><strong>Department:</strong> @faculty.Department</p>
                        <p><strong>Created:</strong> @faculty.CreatedAt.ToString("MMM dd, yyyy")</p>
                        <div class="credentials">
                            <strong>Login Credentials:</strong><br/>
                            Email: <code>@faculty.Email</code><br/>
                            Password: <code>test123</code> or <code>password123</code>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center">
                <a href="@Url.Action("Login", "Faculty")" class="btn">Go to Faculty Login</a>
            </div>
        }
        else
        {
            <p style="text-align: center; color: #666;">
                Refresh this page or navigate to <strong>/Seed/Faculty</strong> to seed faculty data.
            </p>
        }
    </div>
</body>
</html>
