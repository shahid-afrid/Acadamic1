@* Faculty Notification Bell Component - Reusable across all faculty pages *@

<style>
    .faculty-notification-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .faculty-notification-bell-icon {
        position: relative;
        cursor: pointer;
        background: linear-gradient(135deg, #6f42c1, #563d7c);
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(111, 66, 193, 0.3);
        transition: all 0.3s ease;
    }

    .faculty-notification-bell-icon:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 6px 20px rgba(111, 66, 193, 0.4);
    }

    .faculty-notification-bell-icon i {
        font-size: 1.3em;
    }

    .faculty-notification-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75em;
        font-weight: 700;
        box-shadow: 0 2px 8px rgba(220, 53, 69, 0.4);
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    .faculty-logout-btn-bell {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 12px 20px;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        transition: all 0.3s ease;
        font-size: 0.95em;
    }

    .faculty-logout-btn-bell:hover {
        background: linear-gradient(135deg, #c82333, #dc3545);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(220, 53, 69, 0.4);
        text-decoration: none;
        color: white;
    }

    .faculty-logout-btn-bell i {
        font-size: 1.1em;
    }

    .faculty-notification-dropdown {
        position: absolute;
        top: 60px;
        right: 0;
        width: 400px;
        max-height: 550px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        display: none;
        animation: slideDown 0.3s ease;
    }

    .faculty-notification-dropdown.show {
        display: block;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .faculty-notification-header {
        background: linear-gradient(135deg, #6f42c1, #563d7c);
        color: white;
        padding: 18px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid var(--warm-gold);
    }

    .faculty-notification-header h4 {
        margin: 0;
        font-size: 1.1em;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .faculty-notification-close {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .faculty-notification-close:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: rotate(90deg);
    }

    .faculty-notification-list {
        max-height: 450px;
        overflow-y: auto;
    }

    .faculty-notification-item {
        padding: 15px 20px;
        border-bottom: 1px solid #eee;
        transition: background 0.3s ease;
    }

    .faculty-notification-item:hover {
        background: rgba(111, 66, 193, 0.05);
    }

    .faculty-notification-item.unread {
        background: rgba(111, 66, 193, 0.08);
        border-left: 4px solid #6f42c1;
    }

    .faculty-notification-item-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 8px;
    }

    .faculty-notification-title {
        font-weight: 700;
        color: #6f42c1;
        font-size: 0.95em;
        flex: 1;
    }

    .faculty-notification-time {
        font-size: 0.75em;
        color: #999;
        white-space: nowrap;
        margin-left: 10px;
    }

    .faculty-notification-message {
        font-size: 0.85em;
        color: #666;
        line-height: 1.5;
        margin-bottom: 8px;
    }

    .faculty-notification-meta {
        display: flex;
        gap: 12px;
        font-size: 0.8em;
        color: #888;
        margin-top: 8px;
    }

    .faculty-notification-meta .meta-item {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .faculty-notification-status {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.75em;
        font-weight: 600;
        margin-top: 8px;
    }

    .status-accepted {
        background: rgba(40, 167, 69, 0.15);
        color: #28a745;
        border: 1px solid #28a745;
    }

    .status-rejected {
        background: rgba(220, 53, 69, 0.15);
        color: #dc3545;
        border: 1px solid #dc3545;
    }

    .status-attended {
        background: rgba(32, 201, 151, 0.15);
        color: #20c997;
        border: 1px solid #20c997;
    }

    .status-added {
        background: rgba(111, 66, 193, 0.15);
        color: #6f42c1;
        border: 1px solid #6f42c1;
    }

    .faculty-notification-empty {
        padding: 40px 20px;
        text-align: center;
        color: #999;
    }

    .faculty-notification-empty i {
        font-size: 3em;
        color: #ddd;
        margin-bottom: 10px;
        display: block;
    }

    .faculty-loading-spinner {
        text-align: center;
        padding: 30px;
        color: #999;
    }

    .faculty-loading-spinner i {
        font-size: 2em;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        100% { transform: rotate(360deg); }
    }

    @@media (max-width: 768px) {
        .faculty-notification-container {
            top: 10px;
            right: 10px;
            flex-direction: column-reverse;
            gap: 10px;
        }

        .faculty-notification-dropdown {
            width: calc(100vw - 20px);
            right: -15px;
        }

        .faculty-logout-btn-bell {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            padding: 0;
            justify-content: center;
        }

        .faculty-logout-btn-bell span {
            display: none;
        }

        .faculty-logout-btn-bell i {
            margin: 0;
        }
    }
</style>

<div class="faculty-notification-container">
    <!-- Logout Button -->
    <a href="@Url.Action("Logout", "Faculty")" class="faculty-logout-btn-bell" 
       onclick="return confirm('Are you sure you want to logout?')">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
    </a>

    <!-- Notification Bell -->
    <div class="faculty-notification-bell-icon" onclick="toggleFacultyNotifications()">
        <i class="fas fa-bell"></i>
        <span id="facultyNotificationBadge" class="faculty-notification-badge" style="display: none;">0</span>
    </div>

    <div id="facultyNotificationDropdown" class="faculty-notification-dropdown">
        <div class="faculty-notification-header">
            <h4>
                <i class="fas fa-bell"></i>
                Activity Updates
            </h4>
            <button class="faculty-notification-close" onclick="closeFacultyNotifications()">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="faculty-notification-list" id="facultyNotificationList">
            <div class="faculty-loading-spinner">
                <i class="fas fa-spinner fa-spin"></i>
                <p>Loading notifications...</p>
            </div>
        </div>
    </div>
</div>

<script>
    let facultyNotificationDropdownOpen = false;
    let facultyLastNotificationCheck = null;
    let facultyHasViewedNotifications = false;

    // Toggle notification dropdown
    function toggleFacultyNotifications() {
        facultyNotificationDropdownOpen = !facultyNotificationDropdownOpen;
        const dropdown = document.getElementById('facultyNotificationDropdown');
        
        if (facultyNotificationDropdownOpen) {
            dropdown.classList.add('show');
            loadFacultyNotifications();
            facultyHasViewedNotifications = true;
        } else {
            dropdown.classList.remove('show');
        }
    }

    // Close notification dropdown
    function closeFacultyNotifications() {
        facultyNotificationDropdownOpen = false;
        document.getElementById('facultyNotificationDropdown').classList.remove('show');
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function(event) {
        const container = document.querySelector('.faculty-notification-container');
        if (container && !container.contains(event.target) && facultyNotificationDropdownOpen) {
            closeFacultyNotifications();
        }
    });

    // Load faculty notifications
    async function loadFacultyNotifications() {
        const listDiv = document.getElementById('facultyNotificationList');
        
        try {
            const response = await fetch('@Url.Action("GetFacultyNotifications", "Faculty")');
            const result = await response.json();
            
            if (result.success && result.notifications && result.notifications.length > 0) {
                // Filter out notifications older than 48 hours
                const now = new Date();
                const cutoff48Hours = new Date(now.getTime() - (48 * 60 * 60 * 1000));
                
                const validNotifications = result.notifications.filter(notif => {
                    try {
                        const notifDate = new Date(notif.timestamp);
                        return notifDate >= cutoff48Hours;
                    } catch (e) {
                        return true;
                    }
                });
                
                if (validNotifications.length > 0) {
                    let html = '';
                    
                    validNotifications.forEach(notif => {
                        const isUnread = !notif.isRead;
                        const unreadClass = isUnread ? 'unread' : '';
                        
                        html += `<div class="faculty-notification-item ${unreadClass}">`;
                        html += `  <div class="faculty-notification-item-header">`;
                        html += `    <div class="faculty-notification-title">`;
                        html += `      ${getNotificationIcon(notif.type)} ${notif.title}`;
                        html += `    </div>`;
                        html += `    <div class="faculty-notification-time">`;
                        html += `      <i class="fas fa-clock"></i> ${getTimeAgo(notif.timestamp)}`;
                        html += `    </div>`;
                        html += `  </div>`;
                        html += `  <div class="faculty-notification-message">`;
                        html += `    ${notif.message}`;
                        html += `  </div>`;
                        
                        if (notif.teamNumber) {
                            html += `  <div class="faculty-notification-meta">`;
                            html += `    <span class="meta-item"><i class="fas fa-users"></i> Team #${notif.teamNumber}</span>`;
                            if (notif.studentName) {
                                html += `    <span class="meta-item"><i class="fas fa-user"></i> ${notif.studentName}</span>`;
                            }
                            html += `  </div>`;
                        }
                        
                        if (notif.status) {
                            html += `  <span class="faculty-notification-status status-${notif.status.toLowerCase()}">`;
                            html += `    ${getStatusIcon(notif.status)} ${notif.status}`;
                            html += `  </span>`;
                        }
                        
                        html += `</div>`;
                    });
                    
                    listDiv.innerHTML = html;
                    
                    // Mark notifications as read after viewing
                    markFacultyNotificationsAsRead();
                } else {
                    listDiv.innerHTML = `
                        <div class="faculty-notification-empty">
                            <i class="fas fa-inbox"></i>
                            <p>No new notifications</p>
                        </div>
                    `;
                }
            } else {
                listDiv.innerHTML = `
                    <div class="faculty-notification-empty">
                        <i class="fas fa-inbox"></i>
                        <p>No new notifications</p>
                    </div>
                `;
            }
        } catch (error) {
            console.error('Error loading faculty notifications:', error);
            listDiv.innerHTML = `
                <div class="faculty-notification-empty">
                    <i class="fas fa-exclamation-triangle"></i>
                    <p>Error loading notifications</p>
                </div>
            `;
        }
    }

    // Update notification badge count
    async function updateFacultyNotificationBadge() {
        try {
            const response = await fetch('@Url.Action("GetFacultyNotifications", "Faculty")');
            const result = await response.json();
            
            if (result.success && result.notifications) {
                // Filter out notifications older than 48 hours
                const now = new Date();
                const cutoff48Hours = new Date(now.getTime() - (48 * 60 * 60 * 1000));
                
                const validNotifications = result.notifications.filter(notif => {
                    try {
                        const notifDate = new Date(notif.timestamp);
                        return notifDate >= cutoff48Hours;
                    } catch (e) {
                        return true;
                    }
                });
                
                // Count only unread notifications
                const unreadCount = validNotifications.filter(n => !n.isRead).length;
                const badge = document.getElementById('facultyNotificationBadge');
                
                if (unreadCount > 0 && !facultyHasViewedNotifications) {
                    // Show badge only if user hasn't viewed notifications yet
                    badge.textContent = unreadCount;
                    badge.style.display = 'flex';
                    
                    // Show toast notification for new updates
                    if (facultyLastNotificationCheck && validNotifications.length > 0) {
                        const latestNotif = validNotifications[0];
                        showFacultyToastNotification(latestNotif);
                    }
                } else {
                    // Hide badge after user views notifications or if no unread
                    badge.style.display = 'none';
                }
                
                facultyLastNotificationCheck = Date.now();
            }
        } catch (error) {
            console.error('Error updating faculty badge:', error);
        }
    }

    // Mark faculty notifications as read
    async function markFacultyNotificationsAsRead() {
        try {
            await fetch('@Url.Action("MarkFacultyNotificationsAsRead", "Faculty")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            // Update badge after marking as read
            setTimeout(() => updateFacultyNotificationBadge(), 500);
            
            facultyHasViewedNotifications = true; // Mark as viewed
        } catch (error) {
            console.error('Error marking notifications as read:', error);
        }
    }

    // Show toast notification for new activity
    function showFacultyToastNotification(notification) {
        const toast = document.createElement('div');
        toast.style.cssText = `
            position: fixed;
            top: 80px;
            right: 20px;
            background: white;
            padding: 15px 20px;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0,0,0,0.2);
            border-left: 4px solid #6f42c1;
            z-index: 10000;
            max-width: 350px;
            animation: slideInRight 0.3s ease;
        `;
        
        toast.innerHTML = `
            <div style="display: flex; align-items: start; gap: 12px;">
                <i class="fas fa-bell" style="color: #6f42c1; font-size: 1.5em; margin-top: 2px;"></i>
                <div style="flex: 1;">
                    <div style="font-weight: 700; color: #6f42c1; margin-bottom: 5px;">
                        ${notification.title}
                    </div>
                    <div style="font-size: 0.9em; color: #666;">
                        ${notification.message.substring(0, 80)}${notification.message.length > 80 ? '...' : ''}
                    </div>
                </div>
                <button onclick="this.parentElement.parentElement.remove()" 
                        style="background: none; border: none; color: #999; cursor: pointer; font-size: 1.2em;">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        `;
        
        document.body.appendChild(toast);
        
        setTimeout(() => {
            toast.style.animation = 'slideOutRight 0.3s ease';
            setTimeout(() => toast.remove(), 300);
        }, 5000);
    }

    // Helper: Get notification icon based on type
    function getNotificationIcon(type) {
        const icons = {
            'accepted': '<i class="fas fa-check-circle" style="color: #28a745;"></i>',
            'rejected': '<i class="fas fa-times-circle" style="color: #dc3545;"></i>',
            'attended': '<i class="fas fa-user-check" style="color: #20c997;"></i>',
            'added_progress': '<i class="fas fa-tasks" style="color: #6f42c1;"></i>',
            'meeting_completed': '<i class="fas fa-calendar-check" style="color: #17a2b8;"></i>'
        };
        return icons[type] || '<i class="fas fa-bell"></i>';
    }

    // Helper: Get status icon
    function getStatusIcon(status) {
        const icons = {
            'Accepted': '<i class="fas fa-check"></i>',
            'Rejected': '<i class="fas fa-times"></i>',
            'Attended': '<i class="fas fa-user-check"></i>',
            'Added': '<i class="fas fa-plus-circle"></i>'
        };
        return icons[status] || '';
    }

    // Helper: Get relative time
    function getTimeAgo(timestamp) {
        const date = new Date(timestamp);
        const now = new Date();
        const diffMs = now - date;
        const diffMins = Math.floor(diffMs / (1000 * 60));
        const diffHours = Math.floor(diffMs / (1000 * 60 * 60));
        const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
        
        if (diffMins < 1) return 'just now';
        if (diffMins < 60) return `${diffMins} min${diffMins > 1 ? 's' : ''} ago`;
        if (diffHours < 24) return `${diffHours} hour${diffHours > 1 ? 's' : ''} ago`;
        if (diffDays < 7) return `${diffDays} day${diffDays > 1 ? 's' : ''} ago`;
        return date.toLocaleDateString();
    }

    // CSS animations
    const style = document.createElement('style');
    style.textContent = `
        @@keyframes slideInRight {
            from { transform: translateX(400px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        @@keyframes slideOutRight {
            from { transform: translateX(0); opacity: 1; }
            to { transform: translateX(400px); opacity: 0; }
        }
    `;
    document.head.appendChild(style);

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        updateFacultyNotificationBadge();
        
        // Update badge every 15 seconds
        setInterval(updateFacultyNotificationBadge, 15000);
    });

    // Reset the "viewed" flag when user navigates away and comes back
    window.addEventListener('focus', function() {
        if (!facultyNotificationDropdownOpen) {
            facultyHasViewedNotifications = false;
            updateFacultyNotificationBadge();
        }
    });
</script>
