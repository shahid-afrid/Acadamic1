@model TeamPro1.Models.StudentRegistrationModel

@{
    ViewBag.Title = "Student Registration";
    Layout = null;
    var fullName = Model?.FullName ?? "";
    var regdNumber = Model?.RegdNumber ?? "";
    var year = Model?.Year ?? "";
    var semester = Model?.Semester ?? "";
    var department = Model?.Department ?? "";
    var email = Model?.Email ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Student registration for TutorLiveMentor - RGMCET" />
    <title>Student Registration - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --warning-orange: #fd7e14;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .glass-card {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 16px 48px var(--card-shadow);
            border-radius: 26px;
            padding: 40px;
            backdrop-filter: blur(12px);
            max-width: 500px;
            width: 90vw;
            margin: 60px auto;
            position: relative;
            z-index: 1;
            border: 2px solid var(--slate);
        }

        .logo {
            width: 60px;
            height: 60px;
            margin: 0 auto 20px auto;
            display: block;
            filter: drop-shadow(2px 6px 18px var(--royal-blue));
            object-fit: contain;
            background: var(--cream);
            border-radius: 12px;
            padding: 6px;
        }

        h2 {
            font-size: 1.8em;
            font-weight: 700;
            color: var(--royal-blue);
            text-align: center;
            margin-bottom: 30px;
            letter-spacing: 1px;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        label {
            display: block;
            font-weight: 600;
            color: var(--royal-blue);
            margin-bottom: 8px;
            font-size: 0.95em;
        }

        .required::after {
            content: " *";
            color: var(--error-red);
        }

        input[type="text"], input[type="email"], input[type="password"], select {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--slate);
            border-radius: 12px;
            font-size: 1em;
            font-family: 'Montserrat', sans-serif;
            background: rgba(249,250,242,0.8);
            transition: border-color 0.3s, box-shadow 0.3s;
            box-sizing: border-box;
        }

        input[type="text"]:focus, input[type="email"]:focus, input[type="password"]:focus, select:focus {
            outline: none;
            border-color: var(--warm-gold);
            box-shadow: 0 0 0 3px rgba(255, 200, 87, 0.2);
        }

        .input-valid {
            border-color: var(--success-green) !important;
            box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.2) !important;
        }

        .input-invalid {
            border-color: var(--error-red) !important;
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.2) !important;
        }

        .password-container {
            position: relative;
            display: flex;
            align-items: center;
        }

        .password-container input {
            padding-right: 90px;
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 18px;
            z-index: 3;
            padding: 4px 8px;
            border-radius: 4px;
            transition: background-color 0.2s;
            color: var(--royal-blue);
        }

        .password-toggle:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

        .password-toggle:focus {
            outline: 2px solid var(--warm-gold);
            outline-offset: 2px;
        }

        .validation-icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.1em;
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: 2;
        }

        .validation-icon.show {
            opacity: 1;
        }

        .validation-icon.valid {
            color: var(--success-green);
        }

        .validation-icon.invalid {
            color: var(--error-red);
        }

        /* Special positioning for password field validation icon */
        #passwordIcon {
            right: 45px !important;
            z-index: 2;
        }

        .glass-btn {
            width: 100%;
            background: linear-gradient(90deg, var(--success-green) 74%, var(--warm-gold) 100%);
            color: #fff;
            border: none;
            border-radius: 15px;
            padding: 16px 24px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 8px 24px var(--card-shadow);
            border: 2px solid var(--slate);
            transition: all 0.3s ease;
            margin-top: 20px;
            font-family: 'Montserrat', sans-serif;
        }

        .glass-btn:hover:not(:disabled) {
            box-shadow: 0 16px 32px rgba(40, 167, 69, 0.3);
            background: linear-gradient(90deg, var(--warm-gold) 62%, var(--success-green) 100%);
            color: var(--royal-blue);
            transform: translateY(-3px);
            border: 2px solid var(--success-green);
        }

        .glass-btn:disabled {
            cursor: not-allowed;
            opacity: 0.7;
            transform: none;
        }

        .validation-summary-errors {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid var(--error-red);
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 20px;
            color: var(--error-red);
            transition: opacity 0.5s ease;
        }

        .validation-summary-valid {
            display: none;
        }

        .validation-summary-errors ul {
            margin: 10px 0 0 20px;
            padding: 0;
        }

        .field-validation-error, .real-time-error {
            color: var(--error-red);
            font-size: 0.85em;
            margin-top: 5px;
            display: block;
            font-weight: 500;
        }

        .field-validation-success {
            color: var(--success-green);
            font-size: 0.85em;
            margin-top: 5px;
            display: block;
            font-weight: 500;
        }

        .nav-link {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 8px 16px;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
            border: 1px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        .form-progress {
            margin-bottom: 20px;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: var(--slate);
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--royal-blue), var(--warm-gold));
            width: 0%;
            transition: width 0.3s ease;
        }

        .progress-text {
            text-align: center;
            font-size: 0.85em;
            color: var(--royal-blue);
            margin-top: 5px;
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .glass-card {
                margin: 20px auto;
                padding: 30px 20px;
            }

            h2 {
                font-size: 1.5em;
            }

            .nav-link {
                position: static;
                margin-bottom: 20px;
                display: inline-flex;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Student")" class="nav-link"><i class="fas fa-arrow-left"></i> Back to Student</a>
    
    <div class="glass-card">
        <img src="~/images/RGMCET.jpg" alt="RGMCET Logo" class="logo" />
        <h2>Student Registration</h2>

        <!-- Progress Indicator -->
        <div class="form-progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-fill" id="progressFill"></div>
            </div>
            <div class="progress-text" id="progressText">Complete all fields to register</div>
        </div>
        
        @using (Html.BeginForm("Register", "Student", FormMethod.Post, new { @class = "registration-form", autocomplete = "on", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "validation-summary-errors", id = "validationSummary" })

            <div class="form-group">
                <label for="FullName" class="required">Full Name</label>
                <input type="text" id="FullName" name="FullName" value="@fullName" 
                       required oninput="validateFullName(this)" autocomplete="name" 
                       aria-describedby="fullNameError" aria-required="true" />
                <span class="validation-icon" id="FullNameIcon" role="status" aria-live="polite"></span>
                <span id="fullNameError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessage("FullName", "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="regdnum" class="required">Registration Number</label>
                <input type="text" id="regdnum" name="RegdNumber" value="@regdNumber" 
                       maxlength="10" required oninput="validateRegdNum(this)" 
                       style="text-transform: uppercase;" autocomplete="off" 
                       aria-describedby="regdError" aria-required="true" placeholder="E.G., 23091A32D4" />
                <span class="validation-icon" id="regdnumIcon" role="status" aria-live="polite"></span>
                <span id="regdError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessage("RegdNumber", "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="Year" class="required">Year</label>
                <select id="Year" name="Year" required onchange="validateYear(this)" 
                        aria-describedby="yearError" aria-required="true">
                    <option value="">Select Year</option>
                    @if (year == "II Year")
                    {
                        <option value="II Year" selected>II Year</option>
                    }
                    else
                    {
                        <option value="II Year">II Year</option>
                    }
                    @if (year == "III Year")
                    {
                        <option value="III Year" selected>III Year</option>
                    }
                    else
                    {
                        <option value="III Year">III Year</option>
                    }
                    @if (year == "IV Year")
                    {
                        <option value="IV Year" selected>IV Year</option>
                    }
                    else
                    {
                        <option value="IV Year">IV Year</option>
                    }
                </select>
                <span class="validation-icon" id="YearIcon" role="status" aria-live="polite"></span>
                <span id="yearError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessage("Year", "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="Semester" class="required">Semester</label>
                <select id="Semester" name="Semester" required onchange="validateSemester(this)" 
                        aria-describedby="semesterError" aria-required="true">
                    <option value="">Select Semester</option>
                    @if (semester == "I Semester")
                    {
                        <option value="I Semester" selected>I Semester</option>
                    }
                    else
                    {
                        <option value="I Semester">I Semester</option>
                    }
                    @if (semester == "II Semester")
                    {
                        <option value="II Semester" selected>II Semester</option>
                    }
                    else
                    {
                        <option value="II Semester">II Semester</option>
                    }
                </select>
                <span class="validation-icon" id="SemesterIcon" role="status" aria-live="polite"></span>
                <span id="semesterError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessage("Semester", "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="Department" class="required">Department</label>
                <select id="Department" name="Department" required onchange="validateDepartment(this)" 
                        aria-describedby="deptError" aria-required="true">
                    <option value="">Select Department</option>
                    @if (department == "CSE")
                    {
                        <option value="CSE" selected>CSE</option>
                    }
                    else
                    {
                        <option value="CSE">CSE</option>
                    }
                    @if (department == "CSE(DS)")
                    {
                        <option value="CSE(DS)" selected>CSE(DS)</option>
                    }
                    else
                    {
                        <option value="CSE(DS)">CSE(DS)</option>
                    }
                    @if (department == "CSE(AIML)")
                    {
                        <option value="CSE(AIML)" selected>CSE(AIML)</option>
                    }
                    else
                    {
                        <option value="CSE(AIML)">CSE(AIML)</option>
                    }
                    @if (department == "CSE(CS)")
                    {
                        <option value="CSE(CS)" selected>CSE(CS)</option>
                    }
                    else
                    {
                        <option value="CSE(CS)">CSE(CS)</option>
                    }
                    @if (department == "CSE(BS)")
                    {
                        <option value="CSE(BS)" selected>CSE(BS)</option>
                    }
                    else
                    {
                        <option value="CSE(BS)">CSE(BS)</option>
                    }
                    @if (department == "ECE")
                    {
                        <option value="ECE" selected>ECE</option>
                    }
                    else
                    {
                        <option value="ECE">ECE</option>
                    }
                    @if (department == "EEE")
                    {
                        <option value="EEE" selected>EEE</option>
                    }
                    else
                    {
                        <option value="EEE">EEE</option>
                    }
                    @if (department == "MECH")
                    {
                        <option value="MECH" selected>MECH</option>
                    }
                    else
                    {
                        <option value="MECH">MECH</option>
                    }
                    @if (department == "CIVIL")
                    {
                        <option value="CIVIL" selected>CIVIL</option>
                    }
                    else
                    {
                        <option value="CIVIL">CIVIL</option>
                    }
                </select>
                <span class="validation-icon" id="DepartmentIcon" role="status" aria-live="polite"></span>
                <span id="deptError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessage("Department", "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="email" class="required">College Email (must end with @@rgmcet.edu.in)</label>
                <input type="email" id="email" name="Email" value="@email" 
                       required oninput="validateEmail(this)" placeholder="yourname@@rgmcet.edu.in" 
                       autocomplete="email" aria-describedby="emailError" aria-required="true" />
                <span class="validation-icon" id="emailIcon" role="status" aria-live="polite"></span>
                <span id="emailError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessage("Email", "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                <label for="password" class="required">Password (8+ chars, 1 uppercase, 1 digit, 1 special character)</label>
                <div class="password-container">
                    <input type="password" id="password" name="Password" required 
                           oninput="validatePassword(this)" autocomplete="new-password" 
                           aria-describedby="passwordError" aria-required="true" />
                    <span class="validation-icon" id="passwordIcon" role="status" aria-live="polite"></span>
                    <button type="button" class="password-toggle" onclick="togglePassword()" 
                            aria-label="Toggle password visibility" aria-pressed="false" id="passwordToggleBtn">
                        <i class="fas fa-eye-slash" id="eyeIcon"></i>
                    </button>
                </div>
                <span id="passwordError" class="real-time-error" role="alert"></span>
                @Html.ValidationMessage("Password", "", new { @class = "field-validation-error" })
            </div>

            <button type="submit" class="glass-btn" id="submitBtn" aria-label="Submit registration form">
                <i class="fas fa-user-plus"></i> Register Account
            </button>
        }
    </div>

    <script type="text/javascript">
        var validationState = {
            fullName: false,
            regdNumber: false,
            year: false,
            semester: false,
            department: false,
            email: false,
            password: false
        };

        // Prevent double submission
        var isSubmitting = false;

        function updateProgress() {
            var validCount = Object.values(validationState).filter(function(v) { return v; }).length;
            var progress = (validCount / 7) * 100;
            
            var progressFill = document.getElementById('progressFill');
            var progressText = document.getElementById('progressText');
            var progressBar = progressFill ? progressFill.parentElement : null;
            
            if (progressFill) progressFill.style.width = progress + '%';
            if (progressBar) progressBar.setAttribute('aria-valuenow', progress);
            
            if (progressText) {
                if (progress === 100) {
                    progressText.textContent = 'Ready to register!';
                } else {
                    progressText.textContent = validCount + '/7 fields completed';
                }
            }
        }

        function showValidation(fieldId, isValid, message) {
            message = message || '';
            var field = document.getElementById(fieldId) || document.querySelector('[name="' + fieldId + '"]');
            var icon = document.getElementById(fieldId + 'Icon');
            var errorId = fieldId === 'regdnum' ? 'regdError' : fieldId.toLowerCase() + 'Error';
            var errorEl = document.getElementById(errorId);
            
            if (field) {
                field.classList.remove('input-valid', 'input-invalid');
                field.classList.add(isValid ? 'input-valid' : 'input-invalid');
                field.setAttribute('aria-invalid', isValid ? 'false' : 'true');
            }
            
            if (icon) {
                icon.innerHTML = isValid ? '<i class="fas fa-check-circle"></i>' : '<i class="fas fa-times-circle"></i>';
                icon.classList.remove('valid', 'invalid');
                icon.classList.add('show', isValid ? 'valid' : 'invalid');
            }
            
            if (errorEl) {
                errorEl.textContent = message;
                errorEl.className = isValid ? 'field-validation-success' : 'real-time-error';
            }
        }

        function validateFullName(input) {
            var value = input.value.trim();
            var isValid = value.length >= 2 && /^[a-zA-Z\s.]+$/.test(value);
            var message = isValid ? 'Valid name' : 'Name must be at least 2 characters and contain only letters, spaces, and dots';
            
            validationState.fullName = isValid;
            showValidation('FullName', isValid, message);
            updateProgress();
        }

        function validateRegdNum(input) {
            input.value = input.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
            
            var isValid = input.value.length === 10 && /^[A-Z0-9]+$/.test(input.value);
            var message = isValid ? 'Valid registration number' : 'Must be exactly 10 alphanumeric characters (e.g., 23091A32D4)';
            
            validationState.regdNumber = isValid;
            showValidation('regdnum', isValid, message);
            updateProgress();

            // Auto-fill email from registration number
            var emailField = document.getElementById('email');
            if (emailField) {
                if (isValid) {
                    emailField.value = input.value.toLowerCase() + '@@rgmcet.edu.in';
                    validateEmail(emailField);
                } else if (emailField.value && emailField.value.endsWith('@@rgmcet.edu.in')) {
                    // Clear auto-filled email if regd number becomes invalid
                    var currentPrefix = emailField.value.replace('@@rgmcet.edu.in', '');
                    // Only clear if the email prefix matches a partial regd number (user didn't manually type something else)
                    if (input.value.toLowerCase().indexOf(currentPrefix) === 0 || currentPrefix.indexOf(input.value.toLowerCase()) === 0) {
                        emailField.value = '';
                        validationState.email = false;
                        showValidation('email', false, '');
                        // Reset email field styling
                        emailField.classList.remove('input-valid', 'input-invalid');
                        var emailIcon = document.getElementById('emailIcon');
                        if (emailIcon) { emailIcon.classList.remove('show'); }
                        var emailError = document.getElementById('emailError');
                        if (emailError) { emailError.textContent = ''; }
                        updateProgress();
                    }
                }
            }
        }

        function validateYear(select) {
            var isValid = select.value !== '';
            var message = isValid ? 'Year selected' : 'Please select your year';
            
            validationState.year = isValid;
            showValidation('Year', isValid, message);
            updateProgress();
        }

        function validateSemester(select) {
            var isValid = select.value !== '';
            var message = isValid ? 'Semester selected' : 'Please select your semester';
            
            validationState.semester = isValid;
            showValidation('Semester', isValid, message);
            updateProgress();
        }

        function validateDepartment(select) {
            var isValid = select.value !== '';
            var message = isValid ? 'Department selected' : 'Please select your department';
            
            validationState.department = isValid;
            showValidation('Department', isValid, message);
            updateProgress();
        }

        function validateEmail(input) {
            var emailPattern = /^[a-zA-Z0-9._%+-]+@@rgmcet\.edu\.in$/;
            var isValid = emailPattern.test(input.value);
            var message;
            
            if (!input.value) {
                message = 'Email is required';
            } else if (!input.value.includes('@@')) {
                message = 'Invalid email format';
            } else if (!input.value.endsWith('@@rgmcet.edu.in')) {
                message = 'Must use college email ending with @@rgmcet.edu.in';
            } else if (isValid) {
                message = 'Valid college email';
            } else {
                message = 'Invalid email format';
            }
            
            validationState.email = isValid;
            showValidation('email', isValid, message);
            updateProgress();
        }

        function validatePassword(input) {
            var minLength = input.value.length >= 8;
            var hasUppercase = /[A-Z]/.test(input.value);
            var hasDigit = /\d/.test(input.value);
            var hasSpecial = /[^\w\s]/.test(input.value);
            
            var isValid = minLength && hasUppercase && hasDigit && hasSpecial;
            var message;
            
            if (!input.value) {
                message = 'Password is required';
            } else if (!minLength) {
                message = 'Password too short (' + input.value.length + '/8 characters)';
            } else if (!hasUppercase) {
                message = 'Must contain at least 1 uppercase letter';
            } else if (!hasDigit) {
                message = 'Must contain at least 1 digit';
            } else if (!hasSpecial) {
                message = 'Must contain at least 1 special character';
            } else {
                message = 'Strong password';
            }
            
            validationState.password = isValid;
            showValidation('password', isValid, message);
            updateProgress();
        }

        function togglePassword() {
            var pwd = document.getElementById("password");
            var eyeIcon = document.getElementById("eyeIcon");
            var toggleBtn = document.getElementById("passwordToggleBtn");
            
            if (pwd && eyeIcon && toggleBtn) {
                if (pwd.type === "password") {
                    pwd.type = "text";
                    eyeIcon.className = "fas fa-eye";
                    toggleBtn.setAttribute('aria-pressed', 'true');
                    toggleBtn.setAttribute('aria-label', 'Hide password');
                } else {
                    pwd.type = "password";
                    eyeIcon.className = "fas fa-eye-slash";
                    toggleBtn.setAttribute('aria-pressed', 'false');
                    toggleBtn.setAttribute('aria-label', 'Show password');
                }
            }
        }

        // Initialize form validation and submit handler on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateProgress();

            // Hide empty validation summary (red block) on initial load
            var validationSummary = document.getElementById('validationSummary');
            if (validationSummary) {
                var listItems = validationSummary.querySelectorAll('li');
                var hasContent = false;
                for (var i = 0; i < listItems.length; i++) {
                    if (listItems[i].textContent.trim() !== '') {
                        hasContent = true;
                        break;
                    }
                }
                if (!hasContent) {
                    validationSummary.style.display = 'none';
                }
            }

            var form = document.querySelector('.registration-form');
            if (form) {
                form.addEventListener('submit', function(event) {
                    var isValidForm = !Object.values(validationState).includes(false);
                    
                    if (!isValidForm || isSubmitting) {
                        event.preventDefault();
                        
                        if (!isValidForm) {
                            var firstInvalidField = Object.keys(validationState).find(function(key) {
                                return !validationState[key];
                            });
                            
                            var fieldToFocus = document.getElementById(firstInvalidField) || document.querySelector('[name="' + firstInvalidField + '"]');
                            if (fieldToFocus) {
                                fieldToFocus.scrollIntoView({ behavior: 'smooth', block: 'center' });
                                fieldToFocus.focus();
                            }
                        }
                    } else {
                        isSubmitting = true;
                    }
                });
            }
        });
    </script>
