        }

        .status-completed {
            background: linear-gradient(135deg, var(--success-green), #66bb6a);
            color: white;
        }

        .review-box {
            background: #f8f9fa;
            border-left: 4px solid var(--info-blue);
            padding: 15px;
            border-radius: 8px;
            font-size: 0.95em;
            line-height: 1.6;
            color: #555;
        }

        .review-box.empty {
            color: #999;
            font-style: italic;
            border-left-color: var(--slate);
