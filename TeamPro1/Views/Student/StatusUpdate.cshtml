        .footer-line.copyright {
            margin-top: 15px;
            font-size: 0.85em;
            color: #999;
        }
    </style>
</head>
<body>
    @Html.Partial("_NotificationBell")
    
    <div class="main-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1><i class="fas fa-chart-line"></i> Project Status</h1>
            <a asp-controller="Student" asp-action="MainDashboard" class="home-btn">
                <i class="fas fa-home"></i> Home
            </a>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-message alert-success">
                <i class="fas fa-check-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-message alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert-message alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                <span>@TempData["WarningMessage"]</span>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert-message alert-info">
                <i class="fas fa-info-circle"></i>
                <span>@TempData["InfoMessage"]</span>
            </div>
        }

        @if (!ViewBag.HasTeam)
        {
            <!-- No Team Message -->
            <div class="status-card">
                <div class="no-team-message">
                    <i class="fas fa-users-slash"></i>
                    <h3>No Team Found</h3>
                    <p>@ViewBag.Message</p>
                    <a asp-controller="Student" asp-action="PoolOfStudents" class="btn-primary">
                        <i class="fas fa-user-plus"></i> View Pool of Students
                    </a>
                </div>
            </div>
        }
        else
        {
            var team = ViewBag.Team as TeamPro1.Models.Team;
            var progress = ViewBag.ProjectProgress as TeamPro1.Models.ProjectProgress;
            var meetings = ViewBag.TeamMeetings as List<TeamPro1.Models.TeamMeeting> ?? new List<TeamPro1.Models.TeamMeeting>();
            var student1 = team.Student1;
            var student2 = team.Student2;
            var mentor = progress?.AssignedFaculty;

            <!-- Project Information Cards -->
            <div class="status-card">
                <div class="section-title">
                    <i class="fas fa-info-circle"></i>
                    Team Information
                </div>

                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-hashtag"></i> Team Number
                        </div>
                        <div class="info-value">Team @team.TeamNumber</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-users"></i> Team Members
                        </div>
                        <div class="info-value team-members-list">
                            <div class="member-item">@student1.RegdNumber - @student1.FullName</div>
                            @if (student2 != null)
                            {
                                <div class="member-item">@student2.RegdNumber - @student2.FullName</div>
                            }
                            else
                            {
                                <div class="member-item" style="color: #6f42c1; font-style: italic;">
                                    <i class="fas fa-user"></i> Individual Team
                                </div>
                            }
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-user-tie"></i> Mentor
                        </div>
                        <div class="info-value">
                            @if (mentor != null)
                            {
                                @mentor.FullName
                            }
                            else
                            {
                                <span style="color: #999; font-size: 0.9em;">Not Assigned Yet</span>
                            }
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-calendar-alt"></i> Formed On
                        </div>
                        <div class="info-value">@team.CreatedAt.ToString("MMM dd, yyyy")</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-tasks"></i> Current Status
                        </div>
                        <div class="info-value">
                            @if (progress != null)
                            {
                                @if (progress.Status == "Not Started")
                                {
                                    <span class="status-badge status-not-started">@progress.Status</span>
                                }
                                else if (progress.Status == "In Progress")
                                {
                                    <span class="status-badge status-in-progress">@progress.Status</span>
                                }
                                else if (progress.Status == "Completed")
                                {
                                    <span class="status-badge status-completed">@progress.Status</span>
                                }
                                else
                                {
                                    <span class="status-badge status-not-started">@progress.Status</span>
                                }
                            }
                            else
                            {
                                <span class="status-badge status-not-started">Pending</span>
                            }
                        </div>
                    </div>

                    <div class="info-item" style="cursor: pointer; text-align: center; display: flex; flex-direction: column; align-items: center; justify-content: center;" onclick="showLogsModal(@team.Id)">
                        <div class="info-label">
                            <i class="fas fa-history"></i> Activity Logs
                        </div>
                        <div class="info-value">
                            <button type="button" style="background: linear-gradient(135deg, var(--info-blue), #20c1da); color: white; border: none; border-radius: 20px; padding: 10px 25px; font-weight: 700; font-size: 0.95em; cursor: pointer; display: inline-flex; align-items: center; gap: 8px; box-shadow: 0 4px 12px rgba(23,162,184,0.3); transition: all 0.3s ease; font-family: 'Montserrat', sans-serif;" onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='none'">
                                <i class="fas fa-clipboard-list"></i> View Logs
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- MEETING INVITATIONS SECTION (NEW) -->
            <div class="status-card">
                <div class="section-title">
                    <i class="fas fa-calendar-check"></i>
                    Scheduled Meetings
                </div>

                <div id="meetingInvitationsContainer">
                    <div style="text-align:center;padding:30px;">
                        <i class="fas fa-spinner fa-spin" style="font-size:2em;color:var(--royal-blue);"></i>
                        <p style="margin-top:15px;color:#666;">Loading scheduled meetings...</p>
                    </div>
                </div>
            </div>

            <!-- Project Progress Details - Meeting Table -->
            <div class="status-card">
                <div class="section-title">
                    <i class="fas fa-clipboard-list"></i>
                    Project Progress Details
                </div>

                @{
                    var canAddMeeting = !string.IsNullOrEmpty(progress?.ProblemStatement) && mentor != null;
                    var nextMeetingNumber = meetings.Count > 0 ? meetings.Max(m => m.MeetingNumber) + 1 : 1;
                    var lastCompletionPercentage = meetings.Count > 0 ? meetings.OrderBy(m => m.MeetingNumber).Last().CompletionPercentage : 0;
                    var latestMeetingNumber = meetings.Count > 0 ? meetings.Max(m => m.MeetingNumber) : 0;
                }

                <div class="status-table-container">
                    <table class="status-table">
                        <thead>
                            <tr>
                                <th style="width: 120px;"><i class="fas fa-hashtag"></i> Meeting</th>
                                <th style="width: 150px;"><i class="fas fa-calendar"></i> Date</th>
                                <th style="width: 150px;"><i class="fas fa-percentage"></i> Completion</th>
                                <th style="width: 280px;"><i class="fas fa-file-alt"></i> Notes / Problem Statement</th>
                                <th style="width: 120px;"><i class="fas fa-upload"></i> Proof</th>
                                <th style="width: 250px;"><i class="fas fa-comments"></i> Faculty Review</th>
                                <th style="width: 80px; text-align: center;"><i class="fas fa-edit"></i> Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (meetings.Count > 0)
                            {
                                @foreach (var meeting in meetings)
                                {
                                    var canEdit = canAddMeeting;
                                    var isLatest = meeting.MeetingNumber == latestMeetingNumber;
                                    <tr>
                                        <!-- Meeting Number -->
                                        <td>
                                            <div class="meeting-number-badge">
                                                Meeting @meeting.MeetingNumber
                                            </div>
                                        </td>

                                        <!-- Date -->
                                        <td>
                                            <div class="meeting-date-sm">
                                                <i class="fas fa-calendar-day"></i>
                                                @meeting.MeetingDate.ToString("MMM dd, yyyy")
                                            </div>
                                        </td>

                                        <!-- Completion -->
                                        <td>
                                            <div class="progress-container-sm">
                                                <div class="progress-bar-bg-sm">
                                                    <div class="progress-bar-fill-sm" style="width: @meeting.CompletionPercentage%"></div>
                                                </div>
                                                <div class="progress-text-sm">@meeting.CompletionPercentage%</div>
                                            </div>
                                        </td>

                                        <!-- Notes -->
                                        <td>
                                            <div class="problem-text">
                                                @(string.IsNullOrEmpty(meeting.Notes) ? "No notes" : meeting.Notes)
                                            </div>
                                        </td>

                                        <!-- Proof -->
                                        <td style="text-align: center;">
                                            @if (meeting.ProofImageData != null && meeting.ProofImageData.Length > 0 || !string.IsNullOrEmpty(meeting.ProofUploads))
                                            {
                                                <a href="@Url.Action("GetProofImage", "Student", new { id = meeting.Id })" target="_blank" class="proof-link">
                                                    <i class="fas fa-file-image"></i> View
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="no-data">No proof</span>
                                            }
                                        </td>

                                        <!-- Faculty Review -->
                                        <td>
                                            @if (!string.IsNullOrEmpty(meeting.FacultyReview))
                                            {
                                                <div class="review-box-sm">@meeting.FacultyReview</div>
                                            }
                                            else
                                            {
                                                <div class="review-box-sm empty">
                                                    <i class="fas fa-comment-slash"></i> No review
                                                </div>
                                            }
                                        </td>

                                        <!-- Edit -->
                                        <td style="text-align: center;">
                                            @if (canEdit)
                                            {
                                                <button type="button" class="btn-edit-table" onclick="showEditMeetingModal(@meeting.Id, @meeting.MeetingNumber, '@meeting.MeetingDate.ToString("yyyy-MM-dd")', '@(meeting.Notes?.Replace("'", "\\'").Replace("\n", "\\n").Replace("\r", ""))', @meeting.CompletionPercentage, @(isLatest ? "true" : "false"))">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="no-data">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <!-- No meetings yet - show placeholder row -->
                                <tr>
                                    <td colspan="7" style="text-align: center; padding: 40px;">
                                        @if (!canAddMeeting)
                                        {
                                            <div class="no-meetings-placeholder">
                                                <i class="fas fa-lock" style="font-size: 40px; color: var(--slate); margin-bottom: 15px;"></i>
                                                <h4 style="color: var(--royal-blue); margin-bottom: 10px;">Waiting for Assignment</h4>
                                                <p style="color: #666;">Problem statement and mentor must be assigned by HoD before you can add meetings.</p>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="no-meetings-placeholder">
                                                <i class="fas fa-calendar-plus" style="font-size: 40px; color: var(--warm-gold); margin-bottom: 15px;"></i>
                                                <h4 style="color: var(--royal-blue); margin-bottom: 10px;">No Meetings Yet</h4>
                                                <p style="color: #666;">Click "Add Meeting" below to record your first team meeting.</p>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Add Meeting Button -->
                <div class="add-meeting-section">
                    @if (canAddMeeting)
                    {
                        <button type="button" class="btn-add-meeting" onclick="showAddMeetingModal()">
                            <i class="fas fa-plus-circle"></i> Add Meeting
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn-add-meeting" disabled style="opacity: 0.5; cursor: not-allowed;" title="Problem statement and mentor must be assigned first">
                            <i class="fas fa-lock"></i> Add Meeting (Locked)
                        </button>
                        <p style="text-align: center; color: #666; margin-top: 10px; font-size: 0.9em;">
                            <i class="fas fa-info-circle"></i> Waiting for HoD to assign problem statement and mentor
                        </p>
                    }
                </div>
            </div>

            <!-- Add Meeting Modal -->
            <div id="addMeetingModal" class="modal-overlay" style="display: none;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3><i class="fas fa-plus-circle"></i> Add New Meeting</h3>
                        <button type="button" class="modal-close" onclick="hideAddMeetingModal()">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <form id="addMeetingForm" method="post" action="@Url.Action("AddMeeting", "Student")" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="TeamId" value="@team.Id" />
                        <input type="hidden" id="addMeetingInvitationId" name="MeetingInvitationId" value="" />

                        <div class="form-group">
                            <label><i class="fas fa-hashtag"></i> Meeting Number</label>
                            <input type="number" name="MeetingNumber" class="form-control" value="@nextMeetingNumber" readonly style="background: #e9ecef; cursor: not-allowed;" />
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-calendar-alt"></i> Meeting Date</label>
                            <input type="date" name="MeetingDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-file-alt"></i> Problem Statement / Notes</label>
                            <textarea name="Notes" class="form-control" rows="3" placeholder="Enter meeting agenda or problem statement"></textarea>
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-percentage"></i> Project Completion (%)</label>
                            <input type="number" id="addCompletionPercentage" name="CompletionPercentage" class="form-control" min="@(lastCompletionPercentage > 0 && lastCompletionPercentage < 100 ? lastCompletionPercentage + 1 : lastCompletionPercentage)" max="100" value="@(lastCompletionPercentage > 0 && lastCompletionPercentage < 100 ? lastCompletionPercentage + 1 : lastCompletionPercentage)" required />
                            @if (lastCompletionPercentage > 0)
                            {
                                <small class="form-text"><i class="fas fa-info-circle"></i> Must be greater than @lastCompletionPercentage% (previous meeting progress)</small>
                            }
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-upload"></i> Upload Proof (JPG only)</label>
                            <input type="file" name="ProofFile" class="form-control" accept=".jpg,.jpeg" />
                            <small class="form-text">Only JPG/JPEG files are accepted</small>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn-secondary" onclick="hideAddMeetingModal()">Cancel</button>
                            <button type="submit" class="btn-primary">
                                <i class="fas fa-save"></i> Add Meeting
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Edit Meeting Modal -->
            <div id="editMeetingModal" class="modal-overlay" style="display: none;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3><i class="fas fa-edit"></i> Edit Meeting</h3>
                        <button type="button" class="modal-close" onclick="hideEditMeetingModal()">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <form id="editMeetingForm" method="post" action="@Url.Action("UpdateMeeting", "Student")" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="editMeetingId" name="MeetingId" />
                        <input type="hidden" name="TeamId" value="@team.Id" />
                        
                        <div class="form-group">
                            <label><i class="fas fa-hashtag"></i> Meeting Number</label>
                            <input type="number" id="editMeetingNumber" name="MeetingNumber" class="form-control" readonly style="background: #e9ecef; cursor: not-allowed;" />
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-calendar-alt"></i> Meeting Date</label>
                            <input type="date" id="editMeetingDate" name="MeetingDate" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-file-alt"></i> Problem Statement / Notes</label>
                            <textarea id="editMeetingNotes" name="Notes" class="form-control" rows="3" placeholder="Enter meeting agenda or problem statement"></textarea>
                        </div>

                        <div class="form-group" id="editCompletionGroup">
                            <label><i class="fas fa-percentage"></i> Project Completion (%)</label>
                            <input type="number" id="editCompletionPercentage" name="CompletionPercentage" class="form-control" min="0" max="100" required />
                            <small id="editCompletionHint" class="form-text" style="display: none;">
                                <i class="fas fa-lock"></i> Completion percentage can only be changed on the latest meeting
                            </small>
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-upload"></i> Upload New Proof (JPG only)</label>
                            <input type="file" name="ProofFile" class="form-control" accept=".jpg,.jpeg" />
                            <small class="form-text">Leave empty to keep existing proof. Only JPG/JPEG files are accepted</small>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn-secondary" onclick="hideEditMeetingModal()">Cancel</button>
                            <button type="submit" class="btn-primary">
                                <i class="fas fa-save"></i> Update Meeting
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Activity Logs Modal -->
            <div id="logsModal" class="modal-overlay" style="display: none;">
                <div class="modal-content" style="max-width: 700px;">
                    <div class="modal-header" style="background: linear-gradient(135deg, var(--info-blue), #20c1da);">
                        <h3><i class="fas fa-history"></i> Activity Logs</h3>
                        <button type="button" class="modal-close" onclick="hideLogsModal()">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div id="logsModalBody" style="padding: 0;">
                    </div>
                </div>
            </div>

            <script>
                var nextMeetingNumber = @nextMeetingNumber;
                var lastCompletionPercentage = @lastCompletionPercentage;

                // Load meeting invitations on page load
                document.addEventListener('DOMContentLoaded', function() {
                    loadMeetingInvitations();
                });

                // Load meeting invitations
                async function loadMeetingInvitations() {
                    const container = document.getElementById('meetingInvitationsContainer');
                    
                    try {
                        const response = await fetch('@Url.Action("GetMeetingInvitations", "Student")');
                        const result = await response.json();
                        
                        if (result.success && result.invitations && result.invitations.length > 0) {
                            let html = '';
                            
                            result.invitations.forEach(invite => {
                                const myResponse = invite.myResponse || 'Pending';
                                const canRespond = invite.canRespond;
                                const isAccepted = myResponse === 'Accepted';
                                const isPending = myResponse === 'Pending';
                                const isAttended = myResponse === 'Attended';
                                const isCompleted = invite.status === 'Completed';
                                
                                let statusClass = isPending ? 'pending' : (isAccepted ? 'accepted' : 'attended');
                                let statusText = isPending ? 'Awaiting Response' : (isAccepted ? 'Accepted' : (isCompleted ? 'Completed' : myResponse));
                                
                                html += `<div class="meeting-invitation-card ${statusClass}">`;
                                html += `  <div class="meeting-inv-header">`;
                                html += `    <div class="meeting-inv-title">`;
                                html += `      <i class="fas fa-calendar-check"></i>`;
                                html += `      ${invite.title}`;
                                html += `    </div>`;
                                html += `    <div class="meeting-inv-status ${statusClass}">`;
                                html += `      ${statusText}`;
                                html += `    </div>`;
                                html += `  </div>`;
                                
                                html += `  <div class="meeting-inv-body">`;
                                html += `    <div class="meeting-inv-detail">`;
                                html += `      <i class="fas fa-user-tie"></i>`;
                                html += `      <div class="meeting-inv-detail-content">`;
                                html += `        <div class="meeting-inv-detail-label">Faculty</div>`;
                                html += `        <div class="meeting-inv-detail-value">${invite.facultyName}</div>`;
                                html += `      </div>`;
                                html += `    </div>`;
                                
                                html += `    <div class="meeting-inv-detail">`;
                                html += `      <i class="fas fa-calendar-alt"></i>`;
                                html += `      <div class="meeting-inv-detail-content">`;
                                html += `        <div class="meeting-inv-detail-label">Date & Time</div>`;
                                html += `        <div class="meeting-inv-detail-value">${invite.meetingDateTime}</div>`;
                                html += `      </div>`;
                                html += `    </div>`;
                                
                                if (invite.location) {
                                    html += `    <div class="meeting-inv-detail">`;
                                    html += `      <i class="fas fa-map-marker-alt"></i>`;
                                    html += `      <div class="meeting-inv-detail-content">`;
                                    html += `        <div class="meeting-inv-detail-label">Location</div>`;
                                    html += `        <div class="meeting-inv-detail-value">${invite.location}</div>`;
                                    html += `      </div>`;
                                    html += `    </div>`;
                                }
                                
                                if (invite.durationMinutes) {
                                    html += `    <div class="meeting-inv-detail">`;
                                    html += `      <i class="fas fa-hourglass-half"></i>`;
                                    html += `      <div class="meeting-inv-detail-content">`;
                                    html += `        <div class="meeting-inv-detail-label">Duration</div>`;
                                    html += `        <div class="meeting-inv-detail-value">${invite.durationMinutes} minutes</div>`;
                                    html += `      </div>`;
                                    html += `    </div>`;
                                }
                                html += `  </div>`;
                                
                                if (invite.description) {
                                    html += `  <div class="meeting-inv-description">`;
                                    html += `    <strong><i class="fas fa-clipboard-list"></i> Agenda:</strong>`;
                                    html += `    ${invite.description}`;
                                    html += `  </div>`;
                                }
                                
                                html += `  <div class="meeting-inv-actions">`;
                                if (canRespond) {
                                    html += `    <button class="meeting-inv-btn meeting-inv-btn-accept" onclick="respondToMeetingInvite(${invite.id}, 'Accepted')">`;
                                    html += `      <i class="fas fa-check"></i> Accept`;
                                    html += `    </button>`;
                                    html += `    <button class="meeting-inv-btn meeting-inv-btn-reject" onclick="respondToMeetingInvite(${invite.id}, 'Rejected')">`;
                                    html += `      <i class="fas fa-times"></i> Decline`;
                                    html += `    </button>`;
                                } else if (isAccepted) {
                                    html += `    <button class="meeting-inv-btn meeting-inv-btn-attended" onclick="markAsAttended(${invite.id})">`;
                                    html += `      <i class="fas fa-user-check"></i> Mark as Attended`;
                                    html += `    </button>`;
                                } else if (isAttended || isCompleted) {
                                    html += `    <span style="color: var(--info-blue); font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">`;
                                    html += `      <i class="fas fa-check-circle"></i> You attended this meeting`;
                                    html += `    </span>`;
                                    html += `    <button class="meeting-inv-btn" onclick="addAttendedMeetingToProgress(${invite.id}, '${invite.title}', '${invite.meetingDateOnly || ''}', '${invite.description ? invite.description.replace(/'/g, "\\\\'").replace(/\n/g, "\\\\n") : ''}')" style="background: linear-gradient(135deg, var(--success-green), #66bb6a); color: white; box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3); margin-left: 8px;">`;
                                    html += `      <i class="fas fa-plus"></i> Add to Progress`;
                                    html += `    </button>`;
                                } else {
                                    html += `    <span style="color: #666; font-style: italic;">`;
                                    html += `      <i class="fas fa-info-circle"></i> You ${myResponse.toLowerCase()} this meeting`;
                                    html += `    </span>`;
                                }
                                html += `  </div>`;
                                
                                html += `</div>`;
                            });
                            
                            container.innerHTML = html;
                        } else {
                            container.innerHTML = `
                                <div class="no-invitations-message">
                                    <i class="fas fa-calendar-times"></i>
                                    <h4 style="color: var(--royal-blue); margin-bottom: 10px;">No Scheduled Meetings</h4>
                                    <p>Your faculty hasn't scheduled any meetings yet.</p>
                                </div>
                            `;
                        }
                    } catch (error) {
                        console.error('Error loading meeting invitations:', error);
                        container.innerHTML = `
                            <div class="no-invitations-message">
                                <i class="fas fa-exclamation-triangle"></i>
                                <h4 style="color: var(--error-red); margin-bottom: 10px;">Error Loading Meetings</h4>
                                <p>Unable to load scheduled meetings. Please refresh the page.</p>
                            </div>
                        `;
                    }
                }

                // Respond to meeting invitation
                async function respondToMeetingInvite(invitationId, response) {
                    const action = response === 'Accepted' ? 'accept' : 'decline';
                    if (!confirm(`Are you sure you want to ${action} this meeting invitation?`)) {
                        return;
                    }

                    try {
                        const formData = new FormData();
                        formData.append('invitationId', invitationId);
                        formData.append('response', response);
                        
                        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                        if (tokenInput) {
                            formData.append('__RequestVerificationToken', tokenInput.value);
                        }

                        const result = await fetch('@Url.Action("RespondToMeetingInvite", "Student")', {
                            method: 'POST',
                            body: formData
                        });

                        const data = await result.json();

                        if (data.success) {
                            showNotification(data.message, 'success');
                            loadMeetingInvitations(); // Reload invitations
                        } else {
                            showNotification(data.message, 'error');
                        }
                    } catch (error) {
                        console.error('Error responding to invitation:', error);
                        showNotification('Error responding to invitation. Please try again.', 'error');
                    }
                }

                // Mark meeting as attended - just open the modal, don't mark in DB yet
                // The actual marking happens when the student saves the meeting form
                async function markAsAttended(invitationId) {
                    // Check if add meeting is possible
                    var canAdd = @(canAddMeeting ? "true" : "false");
                    if (!canAdd) {
                        alert('Cannot add meeting.\n\nProblem statement and mentor must be assigned by faculty first.');
                        return;
                    }

                    // Fetch the invitation data to get the meeting date
                    var meetingDate = '';
                    try {
                        const invResponse = await fetch('@Url.Action("GetMeetingInvitations", "Student")');
                        const invResult = await invResponse.json();
                        if (invResult.success && invResult.invitations) {
                            var matchedInvite = invResult.invitations.find(i => i.id === invitationId);
                            if (matchedInvite) {
                                meetingDate = matchedInvite.meetingDateOnly || '';
                            }
                        }
                    } catch (e) { /* ignore, will default to today */ }

                    // Open the Add Meeting modal directly (NO server call to mark attended)
                    openAttendedMeetingModal(invitationId, meetingDate);
                }

                // Open Add Meeting modal for an attended meeting with correct values
                function openAttendedMeetingModal(invitationId, meetingDate) {
                    // Check if add meeting is possible
                    var canAdd = @(canAddMeeting ? "true" : "false");
                    if (!canAdd) {
                        alert('Cannot add meeting.\n\nProblem statement and mentor must be assigned by faculty first.');
                        return;
                    }

                    // Reset form
                    document.getElementById('addMeetingForm').reset();

                    // Set the meeting invitation ID
                    var invitationInput = document.getElementById('addMeetingInvitationId');
                    if (invitationInput) {
                        invitationInput.value = invitationId;
                    }

                    // Set auto-calculated meeting number (readonly)
                    var meetingNumberInput = document.querySelector('#addMeetingForm input[name="MeetingNumber"]');
                    if (meetingNumberInput) {
                        meetingNumberInput.value = nextMeetingNumber;
                        meetingNumberInput.readOnly = true;
                    }

                    // Set meeting date from the scheduled meeting (NOT today)
                    var dateInput = document.querySelector('#addMeetingForm input[name="MeetingDate"]');
                    if (dateInput) {
                        if (meetingDate) {
                            dateInput.value = meetingDate;
                        } else {
                            dateInput.value = new Date().toISOString().split('T')[0];
                        }
                    }

                    // Notes should be EMPTY - student writes their own notes
                    var notesInput = document.querySelector('#addMeetingForm textarea[name="Notes"]');
                    if (notesInput) {
                        notesInput.value = '';
                        notesInput.placeholder = 'Write your meeting notes here (what was discussed, progress made, etc.)';
                    }

                    // Set completion percentage - must be greater than previous
                    var completionInput = document.getElementById('addCompletionPercentage');
                    if (completionInput) {
                        var minValue = lastCompletionPercentage > 0 ? lastCompletionPercentage + 1 : 0;
                        if (minValue > 100) minValue = 100;
                        completionInput.value = minValue;
                        completionInput.min = minValue;
                    }

                    // Update the hint text for completion
                    var hintEl = completionInput?.parentElement?.querySelector('.form-text');
                    if (hintEl) {
                        hintEl.innerHTML = '<i class="fas fa-info-circle"></i> Must be greater than ' + lastCompletionPercentage + '% (previous meeting progress)';
                    }

                    document.getElementById('addMeetingModal').style.display = 'flex';
                }

                function showAddMeetingModal() {
                    // Check if button is disabled
                    var btn = event.target.closest('button');
                    if (btn && btn.disabled) {
                        alert('Cannot add meeting.\n\nProblem statement and mentor must be assigned by faculty first.');
                        return false;
                    }

                    // Reset form but preserve computed values
                    document.getElementById('addMeetingForm').reset();

                    // Clear the meeting invitation ID (this is a manual add, not from invitation)
                    var invitationInput = document.getElementById('addMeetingInvitationId');
                    if (invitationInput) {
                        invitationInput.value = '';
                    }

                    // Set auto-calculated meeting number (readonly)
                    var meetingNumberInput = document.querySelector('#addMeetingForm input[name="MeetingNumber"]');
                    if (meetingNumberInput) {
                        meetingNumberInput.value = nextMeetingNumber;
                        meetingNumberInput.readOnly = true;
                    }

                    // Set completion percentage - must be greater than previous
                    var completionInput = document.getElementById('addCompletionPercentage');
                    if (completionInput) {
                        var minValue = lastCompletionPercentage > 0 ? lastCompletionPercentage + 1 : 0;
                        if (minValue > 100) minValue = 100;
                        completionInput.value = minValue;
                        completionInput.min = minValue;
                    }

                    // Reset notes placeholder
                    var notesInput = document.querySelector('#addMeetingForm textarea[name="Notes"]');
                    if (notesInput) {
                        notesInput.placeholder = 'Enter meeting agenda or problem statement';
                    }

                    // Update the hint text for completion
                    var hintEl = completionInput?.parentElement?.querySelector('.form-text');
                    if (hintEl && lastCompletionPercentage > 0) {
                        hintEl.innerHTML = '<i class="fas fa-info-circle"></i> Must be greater than ' + lastCompletionPercentage + '% (previous meeting progress)';
                    }

                    // Set today's date
                    var dateInput = document.querySelector('#addMeetingForm input[name="MeetingDate"]');
                    if (dateInput) {
                        dateInput.value = new Date().toISOString().split('T')[0];
                    }

                    document.getElementById('addMeetingModal').style.display = 'flex';
                }

                // Hide Add Meeting Modal
                function hideAddMeetingModal() {
                    document.getElementById('addMeetingModal').style.display = 'none';
                }

                // Show Edit Meeting Modal
                function showEditMeetingModal(meetingId, meetingNumber, meetingDate, notes, completionPercentage, isLatest) {
                    document.getElementById('editMeetingId').value = meetingId;
                    document.getElementById('editMeetingNumber').value = meetingNumber;
                    document.getElementById('editMeetingDate').value = meetingDate;
                    document.getElementById('editMeetingNotes').value = notes || '';
                    document.getElementById('editCompletionPercentage').value = completionPercentage;

                    // If not latest meeting, disable completion percentage editing
                    if (!isLatest) {
                        document.getElementById('editCompletionPercentage').readOnly = true;
                        document.getElementById('editCompletionPercentage').style.background = '#e9ecef';
                        document.getElementById('editCompletionPercentage').style.cursor = 'not-allowed';
                        document.getElementById('editCompletionHint').style.display = 'block';
                    } else {
                        document.getElementById('editCompletionPercentage').readOnly = false;
                        document.getElementById('editCompletionPercentage').style.background = '';
                        document.getElementById('editCompletionPercentage').style.cursor = '';
                        document.getElementById('editCompletionHint').style.display = 'none';
                    }

                    document.getElementById('editMeetingModal').style.display = 'flex';
                }

                // Hide Edit Meeting Modal
                function hideEditMeetingModal() {
                    document.getElementById('editMeetingModal').style.display = 'none';
                }

                // Show Activity Logs Modal
                async function showLogsModal(teamId) {
                    var modal = document.getElementById('logsModal');
                    var body = document.getElementById('logsModalBody');
                    body.innerHTML = '<div style="text-align:center;padding:40px;"><i class="fas fa-spinner fa-spin" style="font-size:2em;color:var(--info-blue);"></i><p style="margin-top:15px;color:#666;">Loading logs...</p></div>';
                    modal.style.display = 'flex';

                    try {
                        var response = await fetch('@Url.Action("GetTeamLogs", "Student")' + '?teamId=' + teamId);
                        var result = await response.json();
                        if (result.success && result.logs.length > 0) {
                            var html = '<div style="max-height:60vh;overflow-y:auto;">';
                            result.logs.forEach(function(log) {
                                var roleColor = log.performedByRole === 'Student' ? '#274060' : log.performedByRole === 'Faculty' ? '#6f42c1' : '#e67e22';
                                var roleIcon = log.performedByRole === 'Student' ? 'fa-user-graduate' : log.performedByRole === 'Faculty' ? 'fa-chalkboard-teacher' : 'fa-user-shield';
                                html += '<div style="padding:15px 20px;border-bottom:1px solid #eee;transition:background 0.2s;" onmouseover="this.style.background=\'rgba(23,162,184,0.05)\'" onmouseout="this.style.background=\'transparent\'">';
                                html += '<div style="display:flex;align-items:center;gap:10px;">';
                                html += '<div style="width:40px;height:40px;display:flex;align-items:center;justify-content:center;background:'+roleColor+'20;border-radius:50%;">';
                                html += '<i class="fas '+roleIcon+'" style="color:'+roleColor+';font-size:1.2em;"></i>';
                                html += '</div>';
                                html += '<div style="flex:1;">';
                                html += '<div style="font-weight:600;color:#274060;">'+(log.performedByName || 'Unknown')+'</div>';
                                html += '<div style="font-size:0.9em;color:#666;">'+log.action+'</div>';
                                if (log.details) {
                                    html += '<div style="font-size:0.8em;color:#999;margin-top:3px;">'+log.details+'</div>';
                                }
                                html += '</div>';
                                html += '</div>';
                                html += '<div style="margin-top:8px;font-size:0.85em;color:#888;">';
                                html += '<i class="fas fa-clock" style="color:#fea116;"></i> ';
                                html += log.timestamp;
                                html += '</div>';
                                html += '</div>';
                            });
                            html += '</div>';
                            body.innerHTML = html;
                        } else {
                            body.innerHTML = '<div style="padding:40px;color:#666;text-align:center;"><i class="fas fa-inbox" style="font-size:3em;color:#ddd;display:block;margin-bottom:15px;"></i>No activity logs found for this team.</div>';
                        }
                    } catch (error) {
                        body.innerHTML = '<div style="padding:40px;color:#666;text-align:center;">Error loading logs. Please try again.</div>';
                    }
                }

                // Hide Activity Logs Modal
                function hideLogsModal() {
                    document.getElementById('logsModal').style.display = 'none';
                }

                // Show notification toast
                function showNotification(message, type) {
                    var color = type === 'success' ? '#28a745' : '#dc3545';
                    var icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

                    var msgDiv = document.createElement('div');
                    msgDiv.style.cssText = 'position:fixed;top:80px;right:20px;background:white;padding:18px 25px;border-radius:12px;box-shadow:0 6px 25px rgba(0,0,0,0.2);border-left:5px solid '+color+';z-index:10001;animation:slideIn 0.3s ease;display:flex;align-items:center;gap:12px;max-width:400px;font-family:Montserrat,sans-serif;';
                    msgDiv.innerHTML = '<i class="fas '+icon+'" style="color:'+color+';font-size:1.3em;"></i><span style="color:#333;font-weight:600;font-size:0.95em;">'+message+'</span>';

                    document.body.appendChild(msgDiv);

                    setTimeout(function() {
                        msgDiv.style.opacity = '0';
                        msgDiv.style.transform = 'translateX(100px)';
                        msgDiv.style.transition = 'all 0.3s ease';
                        setTimeout(function() { msgDiv.remove(); }, 300);
                    }, 4000);
                }
            </script>
        }
