        }

        .meeting-inv-title {
            font-size: 1.2em;
            font-weight: 700;
            color: var(--royal-blue);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .meeting-inv-status {
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 700;
            text-transform: uppercase;
        }

        .meeting-inv-status.pending {
            background: linear-gradient(135deg, rgba(255, 152, 0, 0.2), rgba(255, 152, 0, 0.3));
            color: var(--warning-orange);
            border: 2px solid var(--warning-orange);
        }

        .meeting-inv-status.accepted {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.2), rgba(40, 167, 69, 0.3));
            color: var(--success-green);
            border: 2px solid var(--success-green);
        }

        .meeting-inv-status.attended {
            background: linear-gradient(135deg, rgba(23,162,184,0.2), rgba(23,162,184,0.3));
            color: var(--info-blue);
            border: 2px solid var(--info-blue);
        }

        .meeting-inv-body {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-bottom: 15px;
        }

        .meeting-inv-detail {
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

        .meeting-inv-detail i {
            color: var(--warm-gold);
            font-size: 1.1em;
            margin-top: 2px;
        }

        .meeting-inv-detail-content {
            flex: 1;
        }

        .meeting-inv-detail-label {
            font-size: 0.8em;
            color: #666;
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 3px;
        }

        .meeting-inv-detail-value {
            color: #333;
            font-weight: 600;
        }

        .meeting-inv-description {
            background: rgba(255, 200, 87, 0.1);
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 3px solid var(--warm-gold);
        }

        .meeting-inv-description strong {
            color: var(--royal-blue);
            display: block;
            margin-bottom: 5px;
        }

        .meeting-inv-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .meeting-inv-btn {
            padding: 10px 24px;
            border: none;
            border-radius: 25px;
            font-weight: 700;
            font-size: 0.9em;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .meeting-inv-btn-accept {
            background: linear-gradient(135deg, var(--success-green), #66bb6a);
            color: white;
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        }

        .meeting-inv-btn-accept:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(40, 167, 69, 0.4);
        }

        .meeting-inv-btn-reject {
            background: linear-gradient(135deg, var(--error-red), #c82333);
            color: white;
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        }

        .meeting-inv-btn-reject:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(220, 53, 69, 0.4);
        }

        .meeting-inv-btn-attended {
            background: linear-gradient(135deg, var(--info-blue), #20c1da);
            color: white;
            box-shadow: 0 4px 12px rgba(23, 162, 184, 0.3);
        }

        .meeting-inv-btn-attended:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(23, 162, 184, 0.4);
        }

        .no-invitations-message {
            text-align: center;
            padding: 40px 20px;
            color: #666;
        }

        .no-invitations-message i {
            font-size: 3em;
            color: var(--slate);
            margin-bottom: 15px;
            display: block;
        }

        /* Footer Styling */
        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--warm-gold);
            padding: 30px 20px;
            margin-top: 50px;
            box-shadow: 0 -4px 20px var(--card-shadow);
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        .footer-line {
            margin: 8px 0;
            color: #666;
            font-size: 0.95em;
            line-height: 1.6;
        }

        .footer-line.guidance {
            font-weight: 600;
            color: var(--royal-blue);
        }

        .footer-highlight,
        .footer-name {
            color: var(--warm-gold);
            font-weight: 700;
