@{
    ViewData["Title"] = "Pool of Students";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Pool of Students - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --info-blue: #17a2b8;
            --warning-orange: #ff9800;
        }

        * {
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h2 {
            font-size: 2.3em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1px;
        }

        .dashboard-header p {
            color: #666;
            font-size: 1em;
            margin: 5px 0;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        .alert {
            padding: 18px 24px;
            margin-bottom: 25px;
            border: 3px solid transparent;
            border-radius: 15px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1em;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
            animation: slideDown 0.5s ease;
        }

        .alert-success {
            color: #155724;
            background: linear-gradient(135deg, rgba(212, 237, 218, 0.98), rgba(195, 230, 203, 0.98));
            border-color: var(--success-green);
        }

        .alert-danger {
            color: #721c24;
            background: linear-gradient(135deg, rgba(248, 215, 218, 0.98), rgba(242, 200, 203, 0.98));
            border-color: var(--error-red);
        }

        .alert-warning {
            color: #856404;
            background: linear-gradient(135deg, rgba(255, 243, 205, 0.98), rgba(255, 236, 179, 0.98));
            border-color: var(--warning-orange);
        }

        .alert-info {
            color: #0c5460;
            background: linear-gradient(135deg, rgba(209, 236, 241, 0.98), rgba(190, 229, 235, 0.98));
            border-color: var(--info-blue);
        }

        @@keyframes slideDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .info-card {
            background: rgba(249,250,242,0.95);
            border-radius: 15px;
            padding: 20px 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 6px 25px var(--card-shadow);
            margin-bottom: 30px;
        }

        .info-card h4 {
            color: var(--royal-blue);
            font-size: 1.2em;
            margin: 0 0 15px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .info-card ul {
            margin: 0;
            padding-left: 20px;
            color: #555;
            line-height: 1.8;
        }

        .info-card ul li {
            margin-bottom: 8px;
        }

        /* Table Container */
        .table-container {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            overflow-x: auto;
            margin-bottom: 30px;
        }

        /* Students Table */
        .students-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            font-size: 0.95em;
        }

        .students-table thead {
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
        }

        .students-table thead th {
            padding: 18px 15px;
            text-align: left;
            font-weight: 700;
            font-size: 1em;
            letter-spacing: 0.5px;
            border: none;
        }

        .students-table thead th:first-child {
            border-top-left-radius: 12px;
        }

        .students-table thead th:last-child {
            border-top-right-radius: 12px;
        }

        .students-table tbody tr {
            background: rgba(255, 255, 255, 0.7);
            transition: all 0.3s ease;
        }

        .students-table tbody tr:hover:not(.row-disabled) {
            background: rgba(255, 255, 255, 0.95);
            transform: scale(1.01);
            box-shadow: 0 4px 15px var(--card-shadow);
        }

        .students-table tbody tr.row-disabled {
            opacity: 0.5;
            background: rgba(200, 200, 200, 0.3);
        }

        .students-table tbody td {
            padding: 18px 15px;
            border-bottom: 1px solid var(--slate);
            vertical-align: middle;
        }

        .students-table tbody tr:last-child td:first-child {
            border-bottom-left-radius: 12px;
        }

        .students-table tbody tr:last-child td:last-child {
            border-bottom-right-radius: 12px;
        }

        .students-table tbody tr:last-child td {
            border-bottom: none;
        }

        /* Table cell styles */
        .text-center {
            text-align: center !important;
        }

        .font-bold {
            font-weight: 700;
        }

        .text-royal {
            color: var(--royal-blue);
        }

        /* Status Badges */
        .badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 600;
            white-space: nowrap;
        }

        .badge-green {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.15), rgba(40, 167, 69, 0.25));
            color: var(--success-green);
            border: 2px solid var(--success-green);
        }

        .badge-orange {
            background: linear-gradient(135deg, rgba(255, 152, 0, 0.15), rgba(255, 152, 0, 0.25));
            color: var(--warning-orange);
            border: 2px solid var(--warning-orange);
        }

        .badge-gray {
            background: linear-gradient(135deg, rgba(108, 117, 125, 0.15), rgba(108, 117, 125, 0.25));
            color: #6c757d;
            border: 2px solid #6c757d;
        }

        /* Table Action Buttons */
        .btn-table {
            border: none;
            border-radius: 20px;
            padding: 8px 16px;
            font-size: 0.85em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            white-space: nowrap;
        }

        .btn-send-small {
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
            box-shadow: 0 3px 10px var(--card-shadow);
        }

        .btn-send-small:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 200, 87, 0.4);
        }

        .btn-send-small:disabled {
            background: #ccc;
            cursor: not-allowed;
            opacity: 0.6;
            transform: none;
        }

        .btn-cancel-small {
            background: linear-gradient(135deg, var(--error-red), #c82333);
            color: white;
            box-shadow: 0 3px 10px rgba(220, 53, 69, 0.3);
        }

        .btn-cancel-small:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.5);
        }

        .btn-disabled-small {
            background: #ccc;
            color: #666;
            cursor: not-allowed;
            opacity: 0.6;
        }

        .btn-notification-ok {
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 28px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(39, 64, 96, 0.3);
        }

        .btn-notification-ok:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 200, 87, 0.5);
        }

        /* Be Individual Button */
        .btn-individual {
            background: linear-gradient(135deg, #6f42c1, #9b59b6);
            color: white;
            border: none;
            padding: 12px 28px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 0.95em;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(111, 66, 193, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-family: 'Montserrat', Arial, sans-serif;
        }

        .btn-individual:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(111, 66, 193, 0.5);
            background: linear-gradient(135deg, #5a32a3, #8e44ad);
        }

        .btn-individual:disabled {
            background: #ccc;
            cursor: not-allowed;
            opacity: 0.6;
            transform: none;
        }

        /* Search Bar Styles */
        .search-container {
            background: rgba(249,250,242,0.95);
            border-radius: 15px;
            padding: 20px 25px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 6px 25px var(--card-shadow);
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
        }

        .search-container label {
            font-weight: 700;
            color: var(--royal-blue);
            font-size: 1em;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .search-input-wrapper {
            flex: 1;
            min-width: 250px;
            position: relative;
        }

        .search-input {
            width: 100%;
            padding: 12px 45px 12px 18px;
            border: 2px solid var(--slate);
            border-radius: 25px;
            font-size: 1em;
            font-family: 'Montserrat', Arial, sans-serif;
            transition: all 0.3s ease;
            background: white;
            outline: none;
        }

        .search-input:focus {
            border-color: var(--warm-gold);
            box-shadow: 0 0 0 3px rgba(255, 200, 87, 0.25);
        }

        .search-input::placeholder {
            color: #999;
        }

        .search-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--royal-blue);
            font-size: 1.1em;
            pointer-events: none;
        }

        .search-clear {
            position: absolute;
            right: 40px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #999;
            cursor: pointer;
            font-size: 1em;
            padding: 5px;
            display: none;
        }

        .search-clear:hover {
            color: var(--error-red);
        }

        .search-clear.visible {
            display: block;
        }

        .search-results-count {
            font-size: 0.9em;
            color: #666;
            padding: 8px 15px;
            background: rgba(39, 64, 96, 0.08);
            border-radius: 20px;
            white-space: nowrap;
        }

        .search-results-count strong {
            color: var(--royal-blue);
        }

        .no-search-results {
            text-align: center;
            padding: 40px 20px;
            color: #666;
            display: none;
        }

        .no-search-results.visible {
            display: block;
        }

        .no-search-results i {
            font-size: 3em;
            color: var(--slate);
            margin-bottom: 15px;
        }

        .no-search-results h4 {
            color: var(--royal-blue);
            margin-bottom: 10px;
        }

        /* Responsive Styles */
        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .dashboard-header {
                padding: 20px 15px;
            }

            .dashboard-header h2 {
                font-size: 1.8em;
            }

            .nav-link {
                position: static;
                display: inline-block;
                margin-bottom: 15px;
            }

            .notification-bell {
                position: static;
                display: inline-flex;
                margin-bottom: 15px;
                margin-left: 10px;
            }

            .info-card {
                padding: 15px 20px;
            }

            .search-container {
                flex-direction: column;
                align-items: stretch;
            }

            .search-input-wrapper {
                min-width: 100%;
            }

            .table-container {
                padding: 15px;
                overflow-x: auto;
            }

            .students-table {
                font-size: 0.85em;
            }

            .students-table thead th,
            .students-table tbody td {
                padding: 12px 8px;
            }

            .btn-table {
                font-size: 0.75em;
                padding: 6px 12px;
            }
        }

        /* App Footer Styling */
        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate);
            box-shadow: 0 -8px 32px var(--card-shadow);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            font-family: 'Montserrat', Arial, sans-serif;
            color: #274060;
            position: relative;
            border-radius: 20px 20px 0 0;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-line {
            margin: 8px 0;
            line-height: 1.6;
        }

        .footer-line.guidance {
            font-size: 1em;
            font-weight: 600;
            color: #444;
            margin-bottom: 12px;
        }

        .footer-line.team {
            font-size: 0.95em;
            font-weight: 500;
            color: #444;
        }

        .footer-line.copyright {
            font-size: 0.9em;
            font-weight: 600;
            color: #274060;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid rgba(39,64,96,0.1);
        }

        .footer-highlight {
            color: #274060;
            font-weight: 700;
        }

        .footer-name {
            color: #274060;
            font-weight: 600;
        }

        /* Notification Bell Icon */
        .notification-bell {
            position: fixed;
            top: 20px;
            right: 20px;
            background: rgba(249,250,242,0.95);
            color: var(--royal-blue);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5em;
            cursor: pointer;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
            box-shadow: 0 4px 15px var(--card-shadow);
        }

        .notification-bell:hover {
            background: var(--warm-gold);
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 6px 20px rgba(255, 200, 87, 0.4);
        }

        .notification-bell .badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--error-red);
            color: white;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7em;
            font-weight: 700;
            border: 2px solid white;
            animation: pulse 2s infinite;
            padding: 0;
        }

        /* Notification Popup/Modal Styles */
        .notification-popup-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(39, 64, 96, 0.8);
            backdrop-filter: blur(5px);
            z-index: 10000;
            align-items: center;
            justify-content: center;
            animation: fadeIn 0.3s ease;
        }

        .notification-popup-overlay.show {
            display: flex;
        }

        .notification-popup {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
            max-width: 500px;
            width: 90%;
            animation: slideIn 0.3s ease;
            overflow: hidden;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @@keyframes slideIn {
            from {
                transform: translateY(-30px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .notification-popup-header {
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
            padding: 25px 30px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .notification-popup-header i {
            font-size: 2em;
        }

        .notification-popup-header h3 {
            margin: 0;
            font-size: 1.4em;
            font-weight: 700;
            color: white;
        }

        .notification-popup-body {
            padding: 30px;
            text-align: center;
        }

        .notification-popup-body p {
            font-size: 1.1em;
            color: #333;
            margin: 0 0 25px 0;
            line-height: 1.6;
        }

        .notification-popup-footer {
            padding: 20px 30px;
            background: #f8f9fa;
            display: flex;
            justify-content: center;
        }

        /* Notification Modal */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(39, 64, 96, 0.75);
            backdrop-filter: blur(4px);
            z-index: 9999;
            align-items: center;
            justify-content: center;
        }

        .modal-dialog {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 600px;
            width: 90%;
            overflow: hidden;
            animation: slideDown 0.3s ease-out;
        }

        .modal-header {
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
            padding: 25px 30px;
            border-radius: 24px 24px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }

        .modal-header h3 {
            margin: 0;
            font-size: 1.4em;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .modal-header .modal-close {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 1.2em;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            flex-shrink: 0;
            position: relative;
        }

        .modal-header .modal-close:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(90deg);
        }

        .modal-body {
            padding: 30px;
            max-height: 500px;
            overflow-y: auto;
        }

        .request-card {
            background: rgba(249,250,242,0.5);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 15px;
            border: 2px solid var(--slate);
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
        }

        .request-info {
            flex: 1;
            min-width: 200px;
        }

        .request-info .request-from {
            font-weight: 700;
            color: var(--royal-blue);
            font-size: 1.1em;
            margin-bottom: 5px;
        }

        .request-info .request-regd {
            color: #666;
            font-size: 0.9em;
            font-family: 'Courier New', monospace;
        }

        .request-actions {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .btn-accept,
        .btn-reject {
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            font-family: 'Montserrat', sans-serif;
        }

        .btn-accept {
            background: linear-gradient(135deg, var(--success-green), #20c997);
        }

        .btn-accept:hover {
            opacity: 0.9;
        }

        .btn-reject {
            background: linear-gradient(135deg, var(--error-red), #c82333);
        }

        .btn-reject:hover {
            opacity: 0.9;
        }

        /* Close button for modal */
        .modal-close {
            position: absolute;
            top: 15px;
            right: 15px;
            background: none;
            border: none;
            color: #666;
            cursor: pointer;
            font-size: 1.5em;
            padding: 0;
            transition: color 0.3s ease;
        }

        .modal-close:hover {
            color: var(--error-red);
        }
    </style>
</head>
<body>
    <a href="@Url.Action("MainDashboard", "Student")" class="nav-link">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>

    <!-- Notification Bell Icon -->
    <div class="notification-bell" onclick="openNotificationModal()" title="Team Requests">
        <i class="fas fa-bell"></i>
        @if (ViewBag.ReceivedRequestsCount != null && ViewBag.ReceivedRequestsCount > 0)
        {
            <span class="badge">@ViewBag.ReceivedRequestsCount</span>
        }
    </div>

    <div class="main-container">
        <div class="dashboard-header">
            <h2><i class="fas fa-users"></i> Pool of Students</h2>
            <p>
                <strong>@ViewBag.CurrentStudentName</strong> (@ViewBag.CurrentStudentRegdNumber)
            </p>
            <p style="font-size: 0.9em; color: #888;">Select Your Perfect Teammate for Project Collaboration</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-times-circle"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        @if (ViewBag.CurrentStudentInTeam)
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                You are already in a team. You cannot send or accept team requests.
            </div>
        }

        <div class="info-card">
            <h4><i class="fas fa-info-circle"></i> How it works:</h4>
            <ul>
                <li>You can send a team request to <strong>one student at a time</strong> from your year and semester.</li>
                <li>Once you send a request, wait for the other student to accept or reject it.</li>
                <li>You can <strong>cancel your request</strong> if the other student hasn't responded yet.</li>
                <li>Students already in a team are marked as <strong>"In Team"</strong> and cannot receive requests.</li>
                <li>After your request is accepted, a team will be formed automatically.</li>
                <li>If you prefer to work alone, click <strong>"Be Individual"</strong> to register as a solo team.</li>
            </ul>

            @if (!ViewBag.CurrentStudentInTeam)
            {
                <div style="margin-top: 20px; padding-top: 18px; border-top: 2px solid var(--slate); display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; gap: 12px;">
                    <div style="display: flex; align-items: center; gap: 10px; color: #555; font-size: 0.95em;">
                        <i class="fas fa-user" style="color: var(--royal-blue); font-size: 1.2em;"></i>
                        <span>Prefer to work alone? Register as an <strong>individual team</strong>.</span>
                    </div>
                    <button type="button" class="btn-individual" onclick="beIndividual()">
                        <i class="fas fa-user"></i> Be Individual
                    </button>
                </div>
            }
        </div>

        @if (ViewBag.StudentPool != null && ViewBag.StudentPool.Count > 0)
        {
            <!-- Search Bar -->
            <div class="search-container">
                <label for="studentSearch">
                    <i class="fas fa-search"></i> Search Student:
                </label>
                <div class="search-input-wrapper">
                    <input type="text" 
                           id="studentSearch" 
                           class="search-input" 
                           placeholder="Enter name or registration number..."
                           autocomplete="off">
                    <button type="button" class="search-clear" id="searchClear" onclick="clearSearch()">
                        <i class="fas fa-times"></i>
                    </button>
                    <i class="fas fa-search search-icon"></i>
                </div>
                <div class="search-results-count" id="searchResultsCount">
                    Showing <strong id="visibleCount">@ViewBag.StudentPool.Count</strong> of <strong>@ViewBag.StudentPool.Count</strong> students
                </div>
            </div>

            <div class="table-container">
                <table class="students-table" id="studentsTable">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Registration Number</th>
                            <th>Student Name</th>
                            <th>Department</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int serialNo = 1;
                        }
                        @foreach (var item in ViewBag.StudentPool)
                        {
                            var student = item.Student;
                            var hasPendingRequest = item.HasPendingRequest;
                            var isInTeam = item.IsInTeam;

                            <tr class="@(isInTeam ? "row-disabled" : "")" data-name="@student.FullName" data-regdnumber="@student.RegdNumber">
                                <td class="text-center">@serialNo</td>
                                <td class="font-bold text-royal">@student.RegdNumber</td>
                                <td>@student.FullName</td>
                                <td>@student.Department</td>
                                <td class="text-center">
                                    @if (isInTeam)
                                    {
                                        <span class="badge badge-gray">
                                            <i class="fas fa-user-check"></i> In Team
                                        </span>
                                    }
                                    else if (hasPendingRequest)
                                    {
                                        <span class="badge badge-orange">
                                            <i class="fas fa-clock"></i> Request Sent
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-green">
                                            <i class="fas fa-check"></i> Available
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!ViewBag.CurrentStudentInTeam && !isInTeam)
                                    {
                                        @if (hasPendingRequest)
                                        {
                                            <button class="btn-table btn-cancel-small" onclick="cancelRequest(@student.Id, '@student.RegdNumber')">
                                                <i class="fas fa-times"></i> Cancel
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn-table btn-send-small" 
                                                    onclick="sendRequest(@student.Id, '@student.RegdNumber')"
                                                    @(ViewBag.HasPendingRequest && !hasPendingRequest ? "disabled" : "")>
                                                <i class="fas fa-paper-plane"></i> Send Request
                                            </button>
                                        }
                                    }
                                    else
                                    {
                                        <button class="btn-table btn-disabled-small" disabled>
                                            <i class="fas fa-lock"></i> Unavailable
                                        </button>
                                    }
                                </td>
                            </tr>
                            serialNo++;
                        }
                    </tbody>
                </table>
            </div>

            <!-- No Search Results Message -->
            <div class="no-search-results" id="noSearchResults">
                <i class="fas fa-search"></i>
                <h4>No Students Found</h4>
                <p>No students match your search criteria. Try a different name or registration number.</p>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-user-slash"></i>
                <h3>No Students Available</h3>
                <p>There are no other students in your year and semester at the moment.</p>
            </div>
        }
    </div>

    <!-- Notification Modal -->
    <div class="modal-overlay" id="notificationModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(39, 64, 96, 0.75); backdrop-filter: blur(4px); z-index: 9999; align-items: center; justify-content: center;">
        <div class="modal-dialog" style="background: white; border-radius: 24px; box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3); max-width: 600px; width: 90%; overflow: hidden; animation: slideDown 0.3s ease-out;">
            <div class="modal-header" style="background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold)); color: white; padding: 25px 30px; display: flex; justify-content: space-between; align-items: center; position: relative;">
                <h3 style="margin: 0; font-size: 1.4em; font-weight: 700; display: flex; align-items: center; gap: 10px;">
                    <i class="fas fa-bell"></i> Team Requests
                </h3>
                <button class="modal-close" onclick="closeNotificationModal()" aria-label="Close" style="background: rgba(255, 255, 255, 0.2); border: none; color: white; width: 36px; height: 36px; border-radius: 50%; cursor: pointer; font-size: 1.2em; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease; flex-shrink: 0;">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" style="padding: 30px; max-height: 500px; overflow-y: auto;">
                @if (ViewBag.ReceivedRequests != null && ViewBag.ReceivedRequests.Count > 0)
                {
                    foreach (var request in ViewBag.ReceivedRequests)
                    {
                        <div class="request-card" id="request-@request.Id" style="background: rgba(249,250,242,0.5); border-radius: 12px; padding: 20px; margin-bottom: 15px; border: 2px solid var(--slate); display: flex; justify-content: space-between; align-items: center; gap: 15px; flex-wrap: wrap;">
                            <div class="request-info" style="flex: 1; min-width: 200px;">
                                <div class="request-from" style="font-weight: 700; color: var(--royal-blue); font-size: 1.1em; margin-bottom: 5px;">@request.Sender.FullName</div>
                                <div class="request-regd" style="color: #666; font-size: 0.9em; font-family: 'Courier New', monospace;">@request.Sender.RegdNumber</div>
                            </div>
                            <div class="request-actions" style="display: flex; gap: 8px; flex-wrap: wrap;">
                                <button class="btn-accept" onclick="acceptRequest(@request.Id, '@request.Sender.RegdNumber')" style="background: linear-gradient(135deg, var(--success-green), #20c997); color: white; border: none; border-radius: 20px; padding: 10px 20px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 6px; font-family: 'Montserrat', sans-serif;">
                                    <i class="fas fa-check"></i> Accept
                                </button>
                                <button class="btn-reject" onclick="rejectRequest(@request.Id, '@request.Sender.RegdNumber')" style="background: linear-gradient(135deg, var(--error-red), #c82333); color: white; border: none; border-radius: 20px; padding: 10px 20px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 6px; font-family: 'Montserrat', sans-serif;">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-requests" style="text-align: center; padding: 40px 20px; color: #666;">
                        <i class="fas fa-inbox" style="font-size: 3em; color: var(--slate); margin-bottom: 15px; display: block;"></i>
                        <h4 style="color: var(--royal-blue); margin-bottom: 10px; font-size: 1.2em;">No Pending Requests</h4>
                        <p style="margin: 0;">You don't have any team requests at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Notification Pop-up Overlay -->
    <div class="notification-popup-overlay" id="notificationPopupOverlay">
        <div class="notification-popup">
            <div class="notification-popup-header">
                <i class="fas fa-bell"></i>
                <h3 id="popupTitle">Notification</h3>
            </div>
            <div class="notification-popup-body">
                <p id="popupMessage"></p>
            </div>
            <div class="notification-popup-footer">
                <button type="button" class="btn-notification-ok" onclick="closePopup()">OK</button>
            </div>
        </div>
    </div>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">
                Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET
            </div>
            <div class="footer-line team">
                With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)
            </div>
            <div class="footer-line copyright">
                &copy; All Rights Reserved @@2025
            </div>
        </div>
    </footer>

    @Html.AntiForgeryToken()

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script>
        // Search functionality
        const searchInput = document.getElementById('studentSearch');
        const searchClear = document.getElementById('searchClear');
        const tableRows = document.querySelectorAll('#studentsTable tbody tr');
        const visibleCountSpan = document.getElementById('visibleCount');
        const noResultsDiv = document.getElementById('noSearchResults');

        searchInput?.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            let visibleCount = 0;

            tableRows.forEach(row => {
                const name = row.getAttribute('data-name')?.toLowerCase() || '';
                const regdNumber = row.getAttribute('data-regdnumber')?.toLowerCase() || '';
                
                if (name.includes(searchTerm) || regdNumber.includes(searchTerm)) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            visibleCountSpan.textContent = visibleCount;
            
            if (searchClear) {
                searchClear.classList.toggle('visible', searchTerm.length > 0);
            }

            if (noResultsDiv) {
                noResultsDiv.classList.toggle('visible', visibleCount === 0 && searchTerm.length > 0);
            }
        });

        function clearSearch() {
            if (searchInput) {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
                searchInput.focus();
            }
        }

        // Notification Modal functions
        function openNotificationModal() {
            const modal = document.getElementById('notificationModal');
            if (modal) {
                modal.style.display = 'flex';
            }
        }

        function closeNotificationModal() {
            const modal = document.getElementById('notificationModal');
            if (modal) {
                modal.style.display = 'none';
            }
        }

        // Close modal when clicking outside (on the overlay)
        document.getElementById('notificationModal')?.addEventListener('click', function(e) {
            if (e.target === this) {
                closeNotificationModal();
            }
        });

        // Close modal when pressing Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeNotificationModal();
                closePopup();
            }
        });

        // Popup functions
        function showPopup(title, message) {
            document.getElementById('popupTitle').textContent = title;
            document.getElementById('popupMessage').textContent = message;
            document.getElementById('notificationPopupOverlay').classList.add('show');
        }

        function closePopup() {
            document.getElementById('notificationPopupOverlay').classList.remove('show');
        }

        // Team request functions
        async function sendRequest(studentId, regdNumber) {
            if (!confirm('Send team request to ' + regdNumber + '?')) return;

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('receiverId', studentId);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('@Url.Action("SendTeamRequest", "Student")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                if (result.success) {
                    showPopup('Success', result.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showPopup('Error', result.message);
                }
            } catch (error) {
                showPopup('Error', 'An error occurred. Please try again.');
            }
        }

        async function cancelRequest(studentId, regdNumber) {
            if (!confirm('Cancel team request to ' + regdNumber + '?')) return;

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('receiverId', studentId);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('@Url.Action("CancelTeamRequest", "Student")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                if (result.success) {
                    showPopup('Success', result.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showPopup('Error', result.message);
                }
            } catch (error) {
                showPopup('Error', 'An error occurred. Please try again.');
            }
        }

        async function acceptRequest(requestId, senderRegdNumber) {
            if (!confirm('Accept team request from ' + senderRegdNumber + '?')) return;

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('requestId', requestId);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('@Url.Action("AcceptRequest", "Student")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                if (result.success) {
                    showPopup('Success', result.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showPopup('Error', result.message);
                }
            } catch (error) {
                showPopup('Error', 'An error occurred. Please try again.');
            }
        }

        async function rejectRequest(requestId, senderRegdNumber) {
            if (!confirm('Reject team request from ' + senderRegdNumber + '?')) return;

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('requestId', requestId);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('@Url.Action("RejectRequest", "Student")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                if (result.success) {
                    showPopup('Success', result.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showPopup('Error', result.message);
                }
            } catch (error) {
                showPopup('Error', 'An error occurred. Please try again.');
            }
        }

        async function beIndividual() {
            if (!confirm('Register as an individual team? You will work alone on your project.')) return;

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('@Url.Action("BeIndividual", "Student")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                if (result.success) {
                    showPopup('Success', result.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showPopup('Error', result.message);
                }
            } catch (error) {
                showPopup('Error', 'An error occurred. Please try again.');
            }
        }
    </script>
</body>
</html>
