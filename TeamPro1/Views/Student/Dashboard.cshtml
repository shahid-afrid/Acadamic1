@model TeamPro1.Models.Student
@{
    ViewData["Title"] = "Student Profile";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student Profile - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .container {
            position: relative;
            z-index: 1;
            max-width: 900px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .nav-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin: 20px 0;
            background: var(--royal-blue);
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(39, 64, 96, 0.3);
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            text-decoration: none;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(39, 64, 96, 0.4);
        }

        .profile-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 40px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 35px;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5em;
            font-weight: 700;
            margin: 0 auto 20px auto;
            box-shadow: 0 8px 24px var(--card-shadow);
        }

        .profile-header h2 {
            color: var(--royal-blue);
            font-size: 2em;
            margin: 0 0 5px 0;
            font-weight: 700;
        }

        .profile-header p {
            color: #666;
            font-size: 0.95em;
            margin: 0;
        }

        .profile-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .info-item {
            padding: 18px 20px;
            background: rgba(255,255,255,0.6);
            border-radius: 12px;
            border-left: 4px solid var(--royal-blue);
            transition: all 0.3s ease;
        }

        .info-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px var(--card-shadow);
            border-left-color: var(--warm-gold);
        }

        .info-label {
            font-weight: 600;
            color: var(--royal-blue);
            margin-bottom: 6px;
            font-size: 0.85em;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .info-label i {
            color: var(--warm-gold);
        }

        .info-value {
            color: #333;
            font-size: 1.15em;
            font-weight: 600;
        }

        .profile-actions {
            margin-top: 30px;
            text-align: center;
            padding-top: 25px;
            border-top: 2px solid var(--slate);
        }

        .btn-change-password {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, var(--warm-gold), #ffb84d);
            color: var(--royal-blue);
            padding: 14px 30px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 700;
            font-size: 1em;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(255, 200, 87, 0.3);
            border: none;
            cursor: pointer;
        }

        .btn-change-password:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 200, 87, 0.5);
            color: var(--royal-blue);
            text-decoration: none;
        }

        /* Alert Messages */
        .alert-message {
            padding: 15px 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-weight: 600;
            animation: slideIn 0.4s ease;
        }

        .alert-success {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            color: #155724;
            border: 2px solid var(--success-green);
        }

        .alert-error {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            color: #721c24;
            border: 2px solid var(--error-red);
        }

        @@keyframes slideIn {
            from { transform: translateY(-20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        @@media (max-width: 768px) {
            .profile-card {
                padding: 25px 20px;
            }

            .profile-info {
                grid-template-columns: 1fr;
            }

            .profile-header h2 {
                font-size: 1.6em;
            }

            .profile-avatar {
                width: 80px;
                height: 80px;
                font-size: 2em;
            }
        }

        /* App Footer Styling */
        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            font-family: 'Montserrat', Arial, sans-serif;
            color: #274060;
            border-radius: 20px 20px 0 0;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-line {
            margin: 8px 0;
            line-height: 1.6;
        }

        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444; margin-bottom: 12px; }
        .footer-line.team { font-size: 0.95em; font-weight: 500; color: #444; }
        .footer-line.copyright { font-size: 0.9em; font-weight: 600; color: #274060; margin-top: 15px; padding-top: 15px; border-top: 2px solid rgba(39,64,96,0.1); }
        .footer-highlight { color: #274060; font-weight: 700; }
        .footer-name { color: #274060; font-weight: 600; }
    </style>
</head>
<body>
    @Html.Partial("_NotificationBell")
    
    <div class="container">
        <a href="@Url.Action("MainDashboard", "Student")" class="nav-link">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-message alert-success">
                <i class="fas fa-check-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-message alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }

        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-avatar">
                    @(Model.FullName?.Length > 0 ? Model.FullName[0].ToString().ToUpper() : "S")
                </div>
                <h2>Student Profile</h2>
                <p>Your personal information</p>
            </div>

            <div class="profile-info">
                <div class="info-item">
                    <div class="info-label"><i class="fas fa-user"></i> Full Name</div>
                    <div class="info-value">@Model.FullName</div>
                </div>

                <div class="info-item">
                    <div class="info-label"><i class="fas fa-id-card"></i> Registration Number</div>
                    <div class="info-value">@Model.RegdNumber</div>
                </div>

                <div class="info-item">
                    <div class="info-label"><i class="fas fa-envelope"></i> Email Address</div>
                    <div class="info-value">@Model.Email</div>
                </div>

                <div class="info-item">
                    <div class="info-label"><i class="fas fa-calendar-alt"></i> Year</div>
                    <div class="info-value">Year @Model.Year</div>
                </div>

                <div class="info-item">
                    <div class="info-label"><i class="fas fa-book"></i> Semester</div>
                    <div class="info-value">Semester @Model.Semester</div>
                </div>

                <div class="info-item">
                    <div class="info-label"><i class="fas fa-building"></i> Department</div>
                    <div class="info-value">@Model.Department</div>
                </div>
            </div>

            <div class="profile-actions">
                <a href="@Url.Action("ChangePassword", "Student")" class="btn-change-password">
                    <i class="fas fa-key"></i> Change Password
                </a>
            </div>
        </div>
    </div>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">
                Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET
            </div>
            <div class="footer-line team">
                With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)
            </div>
            <div class="footer-line copyright">
                &copy; All Rights Reserved @@2025
            </div>
        </div>
    </footer>
</body>
</html>