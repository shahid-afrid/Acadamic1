            border-color: var(--faculty-purple);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.2);
        }

        textarea.form-control {
            min-height: 100px;
            resize: vertical;
        }

        .btn-row {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .glass-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(90deg, var(--faculty-purple) 74%, var(--warm-gold) 100%);
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 12px 20px;
            font-size: 0.95em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .glass-btn:hover {
            background: linear-gradient(90deg, var(--warm-gold) 0%, var(--faculty-purple) 100%);
            color: white;
            transform: translateY(-2px);
            text-decoration: none;
        }

        .glass-btn.success {
            background: linear-gradient(90deg, var(--success-green) 74%, var(--info-blue) 100%);
        }

        .glass-btn.success:hover {
            background: linear-gradient(90deg, var(--info-blue) 0%, var(--success-green) 100%);
        }

        .glass-btn.warning {
            background: linear-gradient(90deg, #f39c12 74%, #e67e22 100%);
        }

        .glass-btn.warning:hover {
            background: linear-gradient(90deg, #e67e22 0%, #f39c12 100%);
        }

        .progress-display {
            margin: 20px 0;
        }

        .progress-bar-container {
            background: var(--slate);
            border-radius: 15px;
            height: 20px;
            overflow: hidden;
            margin-bottom: 10px;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, var(--faculty-purple), var(--success-green));
            border-radius: 15px;
            transition: width 0.5s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.8em;
            font-weight: 600;
        }

        .meetings-table {
