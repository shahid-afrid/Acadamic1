        .sched-inv-footer { display: flex; justify-content: space-between; align-items: center; }
        .sched-inv-footer .created-at { font-size: 0.8em; color: #999; }
        .btn-cancel-invite { background: linear-gradient(135deg, var(--error-red), #c82333); color: white; border: none; border-radius: 10px; padding: 8px 18px; font-weight: 600; font-size: 0.85em; cursor: pointer; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 6px; }

