<body>
    <a href="@Url.Action("AssignedTeams", "Faculty")" class="nav-link"><i class="fas fa-arrow-left"></i> Back to Assigned Teams</a>

    <div class="main-container">
        <div class="page-header">
            <h2><i class="fas fa-users-cog"></i> Team #@team?.TeamNumber Details</h2>
        </div>

        <div id="alertContainer"></div>

        <!-- Team Members Section -->
        <div class="detail-section">
            <div class="section-title" style="display: flex; justify-content: space-between; align-items: center;">
                <span><i class="fas fa-users"></i> Team Members</span>
                <button type="button" onclick="showLogsModal(@team.Id)" style="background: linear-gradient(135deg, var(--info-blue), #20c1da); color: white; border: none; border-radius: 20px; padding: 10px 22px; font-weight: 700; font-size: 0.85em; cursor: pointer; display: inline-flex; align-items: center; gap: 8px; box-shadow: 0 4px 12px rgba(23,162,184,0.3); transition: all 0.3s ease; font-family: 'Montserrat', sans-serif;" onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='none'">
                    <i class="fas fa-history"></i> Activity Logs
                </button>
            </div>
            
            @if (team?.Student1 != null)
            {
                <div class="student-row">
                    <div class="student-avatar"><i class="fas fa-user"></i></div>
                    <div class="student-details">
                        <h4>@team.Student1.FullName</h4>
                        <p>@team.Student1.RegdNumber | @team.Student1.Email</p>
                        <p>Year @team.Student1.Year, Semester @team.Student1.Semester | @team.Student1.Department</p>
                    </div>
                </div>
            }

            @if (team?.Student2 != null)
            {
                <div class="student-row">
                    <div class="student-avatar"><i class="fas fa-user"></i></div>
                    <div class="student-details">
                        <h4>@team.Student2.FullName</h4>
                        <p>@team.Student2.RegdNumber | @team.Student2.Email</p>
                        <p>Year @team.Student2.Year, Semester @team.Student2.Semester | @team.Student2.Department</p>
                    </div>
                </div>
            }
        </div>

        <!-- Problem Statement Section -->
        <div class="detail-section">
            <div class="section-title"><i class="fas fa-lightbulb"></i> Problem Statement</div>
            
            @if (!string.IsNullOrEmpty(projectProgress?.ProblemStatement))
            {
                <div class="current-value">
                    <div class="current-label">Current Problem Statement</div>
                    <div class="current-text">@projectProgress.ProblemStatement</div>
                </div>
            }

            <form id="problemStatementForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="teamId" value="@team?.Id" />
                <div class="form-group">
                    <label>@(string.IsNullOrEmpty(projectProgress?.ProblemStatement) ? "Assign" : "Update") Problem Statement</label>
                    <textarea name="problemStatement" class="form-control" placeholder="Enter the problem statement for this team...">@projectProgress?.ProblemStatement</textarea>
                </div>
                <button type="submit" class="glass-btn">
                    <i class="fas fa-save"></i> Save Problem Statement
                </button>
            </form>
        </div>

        <!-- Mentor Assignment Section -->
        <div class="detail-section">
            <div class="section-title"><i class="fas fa-user-tie"></i> Mentor Assignment</div>
            
            @if (projectProgress?.AssignedFaculty != null)
            {
                <div class="current-value">
                    <div class="current-label">Current Mentor</div>
                    <div class="current-text">@projectProgress.AssignedFaculty.FullName (@projectProgress.AssignedFaculty.Department)</div>
                </div>
            }

            @if (isCurrentFacultyAssigned)
            {
                <div style="padding: 12px 16px; background: rgba(40, 167, 69, 0.1); border-radius: 10px; border-left: 4px solid var(--success-green); margin-bottom: 15px;">
                    <p style="margin: 0; color: var(--success-green); font-weight: 600;">
                        <i class="fas fa-check-circle"></i> You are assigned as the mentor for this team.
                    </p>
                </div>
            }
            else
            {
                <form id="mentorForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="teamId" value="@team?.Id" />
                    <div class="form-group">
                        <label>@(projectProgress?.AssignedFaculty == null ? "Assign" : "Change") Mentor</label>
                        <select name="mentorId" class="form-control">
                            <option value="">-- Select Mentor --</option>
                            @if (availableFaculties != null)
                            {
                                @foreach (var faculty in availableFaculties)
                                {
                                    <option value="@faculty.Id">@faculty.FullName (@faculty.Department)</option>
                                }
                            }
                        </select>
                    </div>
                    <button type="submit" class="glass-btn">
                        <i class="fas fa-user-check"></i> Assign Mentor
                    </button>
                </form>
            }
        </div>

        <!-- Progress Section -->
        <div class="detail-section">
            <div class="section-title"><i class="fas fa-chart-line"></i> Project Progress</div>
            
            <div class="progress-display">
                <div class="progress-bar-container">
                    <div class="progress-bar" id="progressBar" style="width: @(projectProgress?.CompletionPercentage ?? 0)%">
                        @(projectProgress?.CompletionPercentage ?? 0)%
                    </div>
                </div>
                <p>Current Status: <strong>@(projectProgress?.Status ?? "Not Started")</strong></p>
            </div>

            <form id="progressForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="teamId" value="@team?.Id" />
                <div class="form-group">
                    <label>Completion Percentage</label>
                    <input type="range" name="completionPercentage" class="form-control" min="0" max="100" 
                           value="@(projectProgress?.CompletionPercentage ?? 0)" 
                           oninput="document.getElementById('percentageValue').textContent = this.value + '%'" 
                           style="padding: 0;" />
                    <span id="percentageValue">@(projectProgress?.CompletionPercentage ?? 0)%</span>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <select name="status" class="form-control">
                        @{
                            var currentStatus = projectProgress?.Status ?? "Not Started";
                            var statusOptions = new[] { "Not Started", "Problem Statement Assigned", "Mentor Assigned", "In Progress", "Under Review", "Completed" };
                        }
                        @foreach (var opt in statusOptions)
                        {
                            if (currentStatus == opt)
                            {
                                <option value="@opt" selected="selected">@opt</option>
                            }
                            else
                            {
                                <option value="@opt">@opt</option>
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="glass-btn success">
                    <i class="fas fa-sync-alt"></i> Update Progress
                </button>
            </form>
        </div>

        <!-- Meetings Section -->
        <div class="detail-section">
            <div class="section-title"><i class="fas fa-calendar-check"></i> Team Meetings</div>
            
            @if (teamMeetings == null || teamMeetings.Count == 0)
            {
                <div class="no-data">
                    <i class="fas fa-calendar-times"></i>
                    <p>No meetings recorded yet for this team.</p>
                </div>
            }
            else
            {
                <div style="overflow-x: auto;">
                    <table class="meetings-table">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag"></i> Meeting</th>
                                <th><i class="fas fa-calendar"></i> Date</th>
                                <th><i class="fas fa-percentage"></i> Completion</th>
                                <th><i class="fas fa-file-alt"></i> Notes</th>
                                <th><i class="fas fa-upload"></i> Proof</th>
                                <th><i class="fas fa-comments"></i> Faculty Review</th>
                                <th style="text-align: center;"><i class="fas fa-edit"></i> Review</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var meeting in teamMeetings)
                            {
                                <tr>
                                    <td>
                                        <div class="meeting-number-badge">
                                            Meeting @meeting.MeetingNumber
                                        </div>
                                    </td>
                                    <td>@meeting.MeetingDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="progress-container-sm">
                                            <div class="progress-bar-bg-sm">
                                                <div class="progress-bar-fill-sm" style="width: @meeting.CompletionPercentage%"></div>
                                            </div>
                                            <div class="progress-text-sm">@meeting.CompletionPercentage%</div>
                                        </div>
                                    </td>
                                    <td>@(string.IsNullOrEmpty(meeting.Notes) ? "-" : meeting.Notes)</td>
                                    <td style="text-align: center;">
                                        @if (meeting.ProofImageData != null && meeting.ProofImageData.Length > 0 || !string.IsNullOrEmpty(meeting.ProofUploads))
                                        {
                                            <a href="@Url.Action("GetProofImage", "Student", new { id = meeting.Id })" target="_blank" class="proof-link">
                                                <i class="fas fa-file-image"></i> View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="no-data-text">No proof</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(meeting.FacultyReview))
                                        {
                                            <div class="review-box-sm">@meeting.FacultyReview</div>
                                        }
                                        else
                                        {
                                            <div class="review-box-sm empty">
                                                <i class="fas fa-comment-slash"></i> No review
                                            </div>
                                        }
                                    </td>
                                    <td style="text-align: center;">
                                        <button type="button" class="btn-edit-table" onclick="showReviewModal(@meeting.Id, @meeting.MeetingNumber, '@(meeting.FacultyReview?.Replace("'", "\\'").Replace("\n", "\\n").Replace("\r", "") ?? "")')">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Faculty Review Modal -->
    <div id="reviewModal" class="modal-overlay" style="display: none;">
        <div class="modal-content">
            <div class="modal-header-review">
                <h3><i class="fas fa-comments"></i> Add/Edit Faculty Review</h3>
                <button type="button" class="modal-close" onclick="hideReviewModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body-review">
                <p style="color: #666; margin-bottom: 15px;">Meeting #<strong id="reviewMeetingNumber"></strong></p>
                <form id="reviewForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="reviewMeetingId" name="meetingId" />
                    <div class="form-group">
                        <label><i class="fas fa-pen"></i> Faculty Review / Feedback</label>
                        <textarea id="reviewText" name="facultyReview" class="form-control" rows="4" placeholder="Enter your review or feedback for this meeting..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer-review">
                <button type="button" class="btn-secondary" onclick="hideReviewModal()">Cancel</button>
                <button type="button" class="glass-btn success" onclick="submitReview()">
                    <i class="fas fa-save"></i> Save Review
                </button>
            </div>
        </div>
    </div>

    <!-- Activity Logs Modal -->
    <div id="logsModal" class="modal-overlay" style="display: none;">
        <div class="modal-content" style="max-width: 700px;">
            <div class="modal-header-review" style="background: linear-gradient(135deg, var(--info-blue), #20c1da);">
                <h3><i class="fas fa-history"></i> Activity Logs</h3>
                <button type="button" class="modal-close" onclick="hideLogsModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div id="logsModalBody" style="padding: 0;">
            </div>
        </div>
    </div>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">
                Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET
            </div>
            <div class="footer-line team">
                With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)
            </div>
            <div class="footer-line copyright">
                &copy; All Rights Reserved @@2025
            </div>
        </div>
    </footer>

    <script>
        function showAlert(message, isSuccess) {
            const alertContainer = document.getElementById('alertContainer');
            const alertClass = isSuccess ? 'alert-success' : 'alert-danger';
            const icon = isSuccess ? 'fa-check-circle' : 'fa-exclamation-circle';
            alertContainer.innerHTML = `<div class="alert ${alertClass}"><i class="fas ${icon}"></i> ${message}</div>`;
            setTimeout(() => alertContainer.innerHTML = '', 5000);
        }

        // Problem Statement Form
        document.getElementById('problemStatementForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            try {
                const response = await fetch('@Url.Action("AssignProblemStatement", "Faculty")', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();
                showAlert(result.message, result.success);
                if (result.success) {
                    setTimeout(() => location.reload(), 1500);
                }
            } catch (error) {
                showAlert('An error occurred. Please try again.', false);
            }
        });

        // Mentor Form (only exists if current faculty is not the assigned mentor)
        var mentorForm = document.getElementById('mentorForm');
        if (mentorForm) {
            mentorForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                const formData = new FormData(this);
                if (!formData.get('mentorId')) {
                    showAlert('Please select a mentor.', false);
                    return;
                }
                try {
                    const response = await fetch('@Url.Action("AssignMentor", "Faculty")', {
                        method: 'POST',
                        body: formData
                    });
                    const result = await response.json();
                    showAlert(result.message, result.success);
                    if (result.success) {
                        setTimeout(() => location.reload(), 1500);
                    }
                } catch (error) {
                    showAlert('An error occurred. Please try again.', false);
                }
            });
        }

        // Progress Form
        document.getElementById('progressForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            try {
                const response = await fetch('@Url.Action("UpdateTeamProgress", "Faculty")', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();
                showAlert(result.message, result.success);
                if (result.success) {
                    const percentage = formData.get('completionPercentage');
                    document.getElementById('progressBar').style.width = percentage + '%';
                    document.getElementById('progressBar').textContent = percentage + '%';
                }
            } catch (error) {
                showAlert('An error occurred. Please try again.', false);
            }
        });

        // Faculty Review Modal
        function showReviewModal(meetingId, meetingNumber, currentReview) {
            document.getElementById('reviewMeetingId').value = meetingId;
            document.getElementById('reviewMeetingNumber').textContent = meetingNumber;
            document.getElementById('reviewText').value = currentReview || '';
            document.getElementById('reviewModal').style.display = 'flex';
        }

        function hideReviewModal() {
            document.getElementById('reviewModal').style.display = 'none';
        }

        async function submitReview() {
            var formData = new FormData(document.getElementById('reviewForm'));
            try {
                const response = await fetch('@Url.Action("AddFacultyReview", "Faculty")', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();
                showAlert(result.message, result.success);
                if (result.success) {
                    hideReviewModal();
                    setTimeout(() => location.reload(), 1500);
                }
            } catch (error) {
                showAlert('An error occurred. Please try again.', false);
            }
        }

        // Logs Modal
        async function showLogsModal(teamId) {
            var modal = document.getElementById('logsModal');
            var body = document.getElementById('logsModalBody');
            body.innerHTML = '<div style="text-align:center;padding:40px;"><i class="fas fa-spinner fa-spin" style="font-size:2em;color:var(--info-blue);"></i><p style="margin-top:15px;color:#666;">Loading logs...</p></div>';
            modal.style.display = 'flex';

            try {
                var response = await fetch('@Url.Action("GetTeamLogs", "Faculty")' + '?teamId=' + teamId);
                var result = await response.json();
                if (result.success && result.logs.length > 0) {
                    var html = '<div style="max-height:60vh;overflow-y:auto;">';
                    result.logs.forEach(function(log) {
                        var roleColor = log.performedByRole === 'Student' ? '#274060' : log.performedByRole === 'Faculty' ? '#6f42c1' : '#e67e22';
                        var roleIcon = log.performedByRole === 'Student' ? 'fa-user-graduate' : log.performedByRole === 'Faculty' ? 'fa-chalkboard-teacher' : 'fa-user-shield';
                        html += '<div style="padding:15px 20px;border-bottom:1px solid #eee;transition:background 0.2s;" onmouseover="this.style.background=\'rgba(23,162,184,0.05)\'" onmouseout="this.style.background=\'transparent\'">';
                        html += '<div style="display:flex;justify-content:space-between;align-items:flex-start;gap:12px;">';
                        html += '<div style="flex:1;">';
                        html += '<div style="font-weight:700;color:#274060;font-size:1em;margin-bottom:4px;"><i class="fas fa-circle" style="font-size:0.5em;color:' + roleColor + ';vertical-align:middle;margin-right:6px;"></i>' + log.action + '</div>';
                        if (log.details) {
                            html += '<div style="font-size:0.9em;color:#555;line-height:1.5;margin-bottom:6px;">' + log.details + '</div>';
                        }
                        html += '<div style="display:flex;align-items:center;gap:12px;flex-wrap:wrap;">';
                        html += '<span style="background:' + roleColor + ';color:white;padding:3px 10px;border-radius:12px;font-size:0.75em;font-weight:600;"><i class="fas ' + roleIcon + '" style="margin-right:4px;"></i>' + log.performedByRole + '</span>';
                        html += '<span style="font-size:0.85em;color:#888;font-weight:500;">' + log.performedByName + '</span>';
                        html += '</div>';
                        html += '</div>';
                        html += '<div style="font-size:0.8em;color:#999;white-space:nowrap;min-width:130px;text-align:right;">';
                        html += '<i class="fas fa-clock" style="margin-right:4px;"></i>' + log.timestamp;
                        html += '</div>';
                        html += '</div>';
                        html += '</div>';
                    });
                    html += '</div>';
                    body.innerHTML = html;
                } else if (result.success && result.logs.length === 0) {
                    body.innerHTML = '<div style="text-align:center;padding:50px 20px;"><i class="fas fa-inbox" style="font-size:3em;color:var(--slate);margin-bottom:15px;display:block;"></i><h4 style="color:#274060;margin-bottom:8px;">No Activity Yet</h4><p style="color:#666;">Activity logs will appear here when changes are made.</p></div>';
                } else {
                    body.innerHTML = '<div style="text-align:center;padding:40px;color:#dc3545;"><i class="fas fa-exclamation-circle" style="font-size:2em;margin-bottom:10px;display:block;"></i>' + (result.message || 'Failed to load logs.') + '</div>';
                }
            } catch (err) {
                body.innerHTML = '<div style="text-align:center;padding:40px;color:#dc3545;"><i class="fas fa-exclamation-circle" style="font-size:2em;margin-bottom:10px;display:block;"></i>Error loading logs.</div>';
            }
        }

        function hideLogsModal() {
            document.getElementById('logsModal').style.display = 'none';
        }

        // Close modal on outside click
        document.getElementById('reviewModal')?.addEventListener('click', function(e) {
            if (e.target.id === 'reviewModal') hideReviewModal();
        });
        document.getElementById('logsModal')?.addEventListener('click', function(e) {
            if (e.target.id === 'logsModal') hideLogsModal();
        });
    </script>
</body>
</html>
