        <script>
            function showAlert(message, isSuccess) {
                const alertContainer = document.getElementById('alertContainer');
                const alertClass = isSuccess ? 'alert-success' : 'alert-danger';
                const icon = isSuccess ? 'fa-check-circle' : 'fa-exclamation-circle';
                alertContainer.innerHTML = `<div class="alert ${alertClass}"><i class="fas ${icon}"></i> ${message}</div>`;
                setTimeout(() => alertContainer.innerHTML = '', 5000);
            }

            // Load Scheduled Meeting Invitations
            async function loadScheduledMeetings() {
                var container = document.getElementById('scheduledInvitationsContainer');
                try {
                    var response = await fetch('@Url.Action("GetMeetingInvitations", "Faculty")?teamId=@team?.Id');
                    var result = await response.json();
                    if (result.success && result.invitations && result.invitations.length > 0) {
                        var html = '';
                        result.invitations.forEach(function(inv) {
                            var statusLower = (inv.status || 'pending').toLowerCase();
                            html += '<div class="sched-inv-card status-' + statusLower + '">';

                            // Header
                            html += '<div class="sched-inv-header">';
                            html += '  <div class="sched-inv-title"><i class="fas fa-calendar-day"></i> ' + inv.title + '</div>';
                            html += '  <span class="sched-inv-badge ' + statusLower + '">' + inv.status + '</span>';
                            html += '</div>';

                            // Details
                            html += '<div class="sched-inv-details">';
                            html += '  <div class="sched-inv-detail-item"><i class="fas fa-clock"></i> <span class="label">Date:</span> <span class="value">' + inv.meetingDateTime + '</span></div>';
                            if (inv.location) {
                                html += '  <div class="sched-inv-detail-item"><i class="fas fa-map-marker-alt"></i> <span class="label">Location:</span> <span class="value">' + inv.location + '</span></div>';
                            }
                            html += '  <div class="sched-inv-detail-item"><i class="fas fa-hourglass-half"></i> <span class="label">Duration:</span> <span class="value">' + inv.durationMinutes + ' min</span></div>';
                            html += '</div>';

                            // Description
                            if (inv.description) {
                                html += '<div style="margin-bottom:14px;font-size:0.9em;color:#555;"><i class="fas fa-align-left" style="color:var(--faculty-purple);margin-right:6px;"></i>' + inv.description + '</div>';
                            }

                            // Student Responses
                            html += '<div class="sched-inv-responses">';
                            if (inv.student1Name) {
                                var s1resp = (inv.student1Response || 'Pending').toLowerCase();
                                html += '<div class="sched-inv-response"><span class="student-name">' + inv.student1Name + ':</span> <span class="response-badge resp-' + s1resp + '">' + inv.student1Response + '</span></div>';
                            }
                            if (inv.student2Name) {
                                var s2resp = (inv.student2Response || 'Pending').toLowerCase();
                                html += '<div class="sched-inv-response"><span class="student-name">' + inv.student2Name + ':</span> <span class="response-badge resp-' + s2resp + '">' + inv.student2Response + '</span></div>';
                            }
                            html += '</div>';

                            // Footer with date and action buttons
                            html += '<div class="sched-inv-footer">';
                            html += '  <span class="created-at"><i class="fas fa-clock"></i> Sent: ' + inv.createdAt + '</span>';
                            html += '  <div style="display:flex; gap:8px; flex-wrap:wrap;">';
                            if (statusLower === 'pending' || statusLower === 'accepted') {
                                html += '  <button type="button" class="btn-edit-invite" onclick=\'showEditMeetingModal(' + JSON.stringify(inv) + ')\'><i class="fas fa-edit"></i> Edit</button>';
                                html += '  <button type="button" class="btn-cancel-invite" onclick="cancelScheduledMeeting(' + inv.id + ')"><i class="fas fa-times"></i> Cancel</button>';
                            }
                            html += '  <button type="button" class="btn-delete-invite" onclick="deleteScheduledMeeting(' + inv.id + ')"><i class="fas fa-trash-alt"></i> Delete</button>';
                            html += '  </div>';
                            html += '</div>';

                            html += '</div>'; // close card
                        });
                        container.innerHTML = html;
                    } else {
                        container.innerHTML = '<div class="no-invitations-msg"><i class="fas fa-calendar-times" style="font-size:2em;color:#ddd;display:block;margin-bottom:10px;"></i><p>No scheduled meeting invitations yet.</p></div>';
                    }
                } catch (error) {
                    container.innerHTML = '<div class="no-invitations-msg"><i class="fas fa-exclamation-triangle" style="font-size:2em;color:#ddd;display:block;margin-bottom:10px;"></i><p>Error loading scheduled meetings.</p></div>';
                }
            }

            // Cancel a scheduled meeting invitation
            async function cancelScheduledMeeting(invitationId) {
                if (!confirm('Are you sure you want to cancel this meeting invitation?')) return;

                try {
                    var formData = new FormData();
                    formData.append('invitationId', invitationId);
                    var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (tokenInput) {
                        formData.append('__RequestVerificationToken', tokenInput.value);
                    }

                    var response = await fetch('@Url.Action("CancelMeetingInvite", "Faculty")', {
                        method: 'POST',
                        body: formData
                    });
                    var result = await response.json();
                    showAlert(result.message, result.success);
                    if (result.success) {
                        loadScheduledMeetings();
                    }
                } catch (error) {
                    showAlert('An error occurred. Please try again.', false);
                }
            }

            // Problem Statement Form
            document.getElementById('problemStatementForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                const formData = new FormData(this);
                try {
                    const response = await fetch('@Url.Action("AssignProblemStatement", "Faculty")', {
                        method: 'POST',
                        body: formData
                    });
                    const result = await response.json();
                    showAlert(result.message, result.success);
                    if (result.success) {
                        setTimeout(() => location.reload(), 1500);
                    }
                } catch (error) {
                    showAlert('An error occurred. Please try again.', false);
                }
            });

            // Mentor Form (only exists if current faculty is not the assigned mentor)
            var mentorForm = document.getElementById('mentorForm');
            if (mentorForm) {
                mentorForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    const formData = new FormData(this);
                    if (!formData.get('mentorId')) {
                        showAlert('Please select a mentor.', false);
                        return;
                    }
                    try {
                        const response = await fetch('@Url.Action("AssignMentor", "Faculty")', {
                            method: 'POST',
                            body: formData
                        });
                        const result = await response.json();
                        showAlert(result.message, result.success);
                        if (result.success) {
                            setTimeout(() => location.reload(), 1500);
                        }
                    } catch (error) {
                        showAlert('An error occurred. Please try again.', false);
                    }
                });
            }

            // Progress Form
            document.getElementById('progressForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                const formData = new FormData(this);
                try {
                    const response = await fetch('@Url.Action("UpdateTeamProgress", "Faculty")', {
                        method: 'POST',
                        body: formData
                    });
                    const result = await response.json();
                    showAlert(result.message, result.success);
                    if (result.success) {
                        const percentage = formData.get('completionPercentage');
                        document.getElementById('progressBar').style.width = percentage + '%';
                        document.getElementById('progressBar').textContent = percentage + '%';
                    }
                } catch (error) {
                    showAlert('An error occurred. Please try again.', false);
                }
            });

            // Faculty Review Modal
            function showReviewModal(meetingId, meetingNumber, currentReview) {
                document.getElementById('reviewMeetingId').value = meetingId;
                document.getElementById('reviewMeetingNumber').textContent = meetingNumber;
                document.getElementById('reviewText').value = currentReview || '';
                document.getElementById('reviewModal').style.display = 'flex';
            }

            function hideReviewModal() {
                document.getElementById('reviewModal').style.display = 'none';
            }

            async function submitReview() {
                var formData = new FormData(document.getElementById('reviewForm'));
                try {
                    const response = await fetch('@Url.Action("AddFacultyReview", "Faculty")', {
                        method: 'POST',
                        body: formData
                    });
                    const result = await response.json();
                    showAlert(result.message, result.success);
                    if (result.success) {
                        hideReviewModal();
                        setTimeout(() => location.reload(), 1500);
                    }
                } catch (error) {
                    showAlert('An error occurred. Please try again.', false);
                }
            }

            // Logs Modal
            async function showLogsModal(teamId) {
                var modal = document.getElementById('logsModal');
                var body = document.getElementById('logsModalBody');
                body.innerHTML = '<div style="text-align:center;padding:40px;"><i class="fas fa-spinner fa-spin" style="font-size:2em;color:var(--info-blue);"></i><p style="margin-top:15px;color:#666;">Loading logs...</p></div>';
                modal.style.display = 'flex';

                try {
                    var response = await fetch('@Url.Action("GetTeamLogs", "Faculty")' + '?teamId=' + teamId);
                    var result = await response.json();
                    if (result.success && result.logs.length > 0) {
                        var html = '<div style="max-height:60vh;overflow-y:auto;">';
                        result.logs.forEach(function(log) {
                            var roleColor = log.performedByRole === 'Student' ? '#274060' : log.performedByRole === 'Faculty' ? '#6f42c1' : '#e67e22';
                            var roleIcon = log.performedByRole === 'Student' ? 'fa-user-graduate' : log.performedByRole === 'Faculty' ? 'fa-chalkboard-teacher' : 'fa-user-shield';
                            html += '<div style="padding:15px 20px;border-bottom:1px solid #eee;transition:background 0.2s;" onmouseover="this.style.background=\'rgba(23,162,184,0.05)\'" onmouseout="this.style.background=\'transparent\'">';
                            html += '<div style="display:flex;align-items:center;gap:10px;">';
                            html += '<div style="width:40px;height:40px;display:flex;align-items:center;justify-content:center;background:'+roleColor+'20;border-radius:50%;">';
                            html += '<i class="fas '+roleIcon+'" style="color:'+roleColor+';font-size:1.2em;"></i>';
                            html += '</div>';
                            html += '<div style="flex:1;">';
                            html += '<div style="font-weight:600;color:#274060;">'+(log.performedByName || 'Unknown')+'</div>';
                            html += '<div style="font-size:0.9em;color:#666;">'+log.action+'</div>';
                            html += '</div>';
                            html += '</div>'; // close flex container
                            html += '<div style="margin-top:8px;font-size:0.85em;color:#888;">';
                            html += '<i class="fas fa-clock" style="color:#fea116;"></i> ';
                            html += log.timestamp;
                            html += '</div>';
                            html += '</div>'; // close log item
                        });
                        html += '</div>'; // close max-height div
                        body.innerHTML = html;
                    } else {
                        body.innerHTML = '<div style="padding:20px;color:#666;text-align:center;">No logs found for this team.</div>';
                    }
                } catch (error) {
                    body.innerHTML = '<div style="padding:20px;color:#666;text-align:center;">Error loading logs. Please try again.</div>';
                }
            }

            function hideLogsModal() {
                document.getElementById('logsModal').style.display = 'none';
            }

            // Schedule Meeting Modal
            function showScheduleMeetingModal() {
                // Set minimum datetime to current datetime
                var now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                document.querySelector('input[name="meetingDateTime"]').min = now.toISOString().slice(0, 16);
                
                document.getElementById('scheduleMeetingModal').style.display = 'flex';
            }

            function hideScheduleMeetingModal() {
                document.getElementById('scheduleMeetingModal').style.display = 'none';
                document.getElementById('scheduleMeetingForm').reset();
            }

            async function submitScheduleMeeting() {
                var formData = new FormData(document.getElementById('scheduleMeetingForm'));
                
                // Validation
                var title = formData.get('title');
                var meetingDateTime = formData.get('meetingDateTime');
                
                if (!title || !meetingDateTime) {
                    showAlert('Please fill in all required fields (Title and Date/Time).', false);
                    return;
                }

                // Check if meeting date is in the future
                var selectedDate = new Date(meetingDateTime);
                var now = new Date();
                if (selectedDate <= now) {
                    showAlert('Meeting date/time must be in the future.', false);
                    return;
                }

                try {
                    const response = await fetch('@Url.Action("SendMeetingInvite", "Faculty")', {
                        method: 'POST',
                        body: formData
                    });
                    const result = await response.json();
                    showAlert(result.message, result.success);
                    if (result.success) {
                        hideScheduleMeetingModal();
                        setTimeout(() => location.reload(), 1500);
                    }
                } catch (error) {
                    showAlert('An error occurred. Please try again.', false);
                }
            }

            // Edit Meeting Modal
            function showEditMeetingModal(inv) {
                document.getElementById('editInvitationId').value = inv.id;
                document.getElementById('editTitle').value = inv.title || '';
                document.getElementById('editDescription').value = inv.description || '';
                document.getElementById('editMeetingDateTime').value = inv.meetingDateTimeRaw || '';
                document.getElementById('editLocation').value = inv.location || '';
                document.getElementById('editDurationMinutes').value = inv.durationMinutes || 60;
                document.getElementById('editMeetingModal').style.display = 'flex';
            }

            function hideEditMeetingModal() {
                document.getElementById('editMeetingModal').style.display = 'none';
            }

            async function submitEditMeeting() {
                var formData = new FormData(document.getElementById('editMeetingForm'));
                var title = formData.get('title');
                var meetingDateTime = formData.get('meetingDateTime');

                if (!title || !meetingDateTime) {
                    showAlert('Please fill in all required fields (Title and Date/Time).', false);
                    return;
                }

                try {
                    const response = await fetch('@Url.Action("EditMeetingInvite", "Faculty")', {
                        method: 'POST',
                        body: formData
                    });
                    const result = await response.json();
                    showAlert(result.message, result.success);
                    if (result.success) {
                        hideEditMeetingModal();
                        loadScheduledMeetings();
                    }
                } catch (error) {
                    showAlert('An error occurred. Please try again.', false);
                }
            }

            // Delete a scheduled meeting invitation permanently
            async function deleteScheduledMeeting(invitationId) {
                if (!confirm('Are you sure you want to permanently delete this meeting invitation? This cannot be undone.')) return;

                try {
                    const formData = new FormData();
                    formData.append('invitationId', invitationId);
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (tokenInput) {
                        formData.append('__RequestVerificationToken', tokenInput.value);
                    }

                    const response = await fetch('@Url.Action("DeleteMeetingInvite", "Faculty")', {
                        method: 'POST',
                        body: formData
                    });
                    const result = await response.json();
                    showAlert(result.message, result.success);
                    if (result.success) {
                        loadScheduledMeetings();
                    }
                } catch (error) {
                    showAlert('An error occurred. Please try again.', false);
                }
            }

            // Close edit meeting modal on outside click
            document.getElementById('editMeetingModal')?.addEventListener('click', function(e) {
                if (e.target.id === 'editMeetingModal') hideEditMeetingModal();
            });

            // Initial load
            loadScheduledMeetings();
        </script>
    </body>
</html>
