            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2em;
        }

        .student-details h4 {
            margin: 0 0 5px 0;
            color: var(--royal-blue);
        }

        .student-details p {
            margin: 0;
            font-size: 0.9em;
            color: #666;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: var(--royal-blue);
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--slate);
            border-radius: 12px;
            font-size: 1em;
            font-family: 'Montserrat', sans-serif;
            background: rgba(249,250,242,0.8);
