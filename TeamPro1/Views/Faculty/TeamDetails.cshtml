            color: var(--faculty-purple);
        }

        .student-row {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: rgba(255,255,255,0.5);
            border-radius: 12px;
            margin-bottom: 10px;
        }

        .student-avatar {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--faculty-purple), var(--info-blue));
            border-radius: 50%;
