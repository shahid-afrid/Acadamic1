            font-size: 0.8em;
            font-weight: 600;
            margin-top: 4px;
            display: none;
        }

        .save-feedback.success { color: var(--success-green); display: block; }
        .save-feedback.error { color: var(--error-red); display: block; }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4em;
            color: var(--faculty-purple);
            margin-bottom: 20px;
        }

        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            color: #274060;
            border-radius: 20px 20px 0 0;
        }
        .footer-content { max-width: 1200px; margin: 0 auto; }
        .footer-line { margin: 8px 0; line-height: 1.6; }
        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444; margin-bottom: 12px; }
        .footer-line.team { font-size: 0.95em; font-weight: 500; color: #444; }
        .footer-line.copyright { font-size: 0.9em; font-weight: 600; color: #274060; margin-top: 15px; padding-top: 15px; border-top: 2px solid rgba(39,64,96,0.1); }
        .footer-highlight { color: #274060; font-weight: 700; }
        .footer-name { color: #274060; font-weight: 600; }

        @@media (max-width: 768px) {
            .main-container { padding: 0 15px; }
            .page-header { flex-direction: column; text-align: center; }
            .page-header h1 { font-size: 1.5em; }
            .filter-grid { grid-template-columns: 1fr; }
            .stats-row { grid-template-columns: 1fr; }
            .btn-group { justify-content: center; }
            .table th, .table td { padding: 10px 8px; font-size: 0.85em; }
            .results-header { flex-direction: column; gap: 15px; }
            .app-footer { padding: 20px 15px; margin-top: 30px; }
            .inline-select { min-width: 160px; font-size: 0.8em; }
        }
    </style>
</head>
<body>
    @Html.Partial("_FacultyNotificationBell")
    
    <div class="main-container">
        <!-- Header Section -->
        <div class="page-header">
            <div>
                <h1><i class="fas fa-file-alt"></i> Assign Problem Statements</h1>
                <p>Assign problem statements from the bank to your assigned teams</p>
            </div>
            <a asp-controller="Faculty" asp-action="MainDashboard" class="glass-btn btn-back">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <!-- Success/Error Messages -->
        <div id="messageContainer"></div>

        <!-- Stats Row -->
        <div class="stats-row">
            <div class="stat-card total">
                <div class="stat-icon"><i class="fas fa-users"></i></div>
                <div class="stat-value">@totalTeams</div>
                <div class="stat-label">Your Teams</div>
            </div>
            <div class="stat-card assigned">
                <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
                <div class="stat-value">@teamsWithPS</div>
                <div class="stat-label">Assigned</div>
            </div>
            <div class="stat-card pending">
                <div class="stat-icon"><i class="fas fa-clock"></i></div>
                <div class="stat-value">@teamsPending</div>
                <div class="stat-label">Pending</div>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="filters-card">
            <div class="filters-header">
                <h4><i class="fas fa-filter"></i> Filter Teams</h4>
            </div>

            <div class="filter-grid">
                <div class="form-group">
                    <label class="form-label">Search Teams</label>
                    <input type="text" id="searchText" class="form-control" placeholder="Search by name or team no..." onkeyup="filterTeams()">
                </div>

                <div class="form-group">
                    <label class="form-label">Assignment Status</label>
                    <select id="filterStatus" class="form-control" onchange="filterTeams()">
                        <option value="">All</option>
                        <option value="assigned">Assigned</option>
                        <option value="pending">Pending</option>
                    </select>
                </div>
            </div>

            <div class="btn-group">
                <button type="button" class="glass-btn" onclick="clearFilters()">
                    <i class="fas fa-eraser"></i> Clear Filters
                </button>
            </div>
        </div>

        <!-- Teams Table -->
        <div class="results-card">
            <div class="results-header">
                <h4><i class="fas fa-table"></i> Assigned Teams</h4>
                <div id="teamCount" class="record-count">Showing: @totalTeams</div>
            </div>

            @if (totalTeams == 0)
            {
                <div class="empty-state">
                    <i class="fas fa-users-slash"></i>
                    <h3>No Teams Assigned</h3>
                    <p>You don't have any teams assigned to you as a mentor yet.</p>
                </div>
            }
            else
            {
                <div class="table-container">
                    <table class="table" id="teamsTable">
                        <thead>
                            <tr>
                                <th style="width: 90px; text-align: center;"><i class="fas fa-hashtag"></i> Team No</th>
                                <th style="width: 240px;"><i class="fas fa-user-graduate"></i> Students</th>
                                <th style="width: 70px; text-align: center;"><i class="fas fa-calendar"></i> Year</th>
                                <th style="min-width: 250px; border-left: 3px solid rgba(255,255,255,0.3);"><i class="fas fa-file-alt"></i> Problem Statement</th>
                                <th style="width: 120px; text-align: center; border-left: 3px solid rgba(255,255,255,0.3);"><i class="fas fa-cogs"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody id="teamsTableBody">
                            @foreach (var projectProgress in assignedTeams)
                            {
                                var team = projectProgress.Team;
                                var hasPS = !string.IsNullOrEmpty(projectProgress.ProblemStatement);
                                var yearVal = team.Student1?.Year ?? 0;

                                <tr data-team-id="@team.Id" data-year="@yearVal" data-assigned="@(hasPS ? "assigned" : "pending")">
                                    <!-- Team No -->
                                    <td style="text-align: center;">
                                        <span class="team-badge">#@team.TeamNumber</span>
                                    </td>

                                    <!-- Students -->
                                    <td>
                                        <div class="student-cell">
                                            @if (team.Student1 != null)
                                            {
                                                <div>
                                                    <span class="student-name">@team.Student1.FullName</span><br />
                                                    <span class="student-regd">@team.Student1.RegdNumber</span>
                                                </div>
                                            }
                                            @if (team.Student2 != null)
                                            {
                                                <div class="student-divider"></div>
                                                <div>
                                                    <span class="student-name">@team.Student2.FullName</span><br />
                                                    <span class="student-regd">@team.Student2.RegdNumber</span>
                                                </div>
                                            }
                                        </div>
                                    </td>

                                    <!-- Year -->
                                    <td style="text-align: center;">
                                        <strong>@yearVal</strong>
                                    </td>

                                    <!-- Problem Statement -->
                                    <td style="border-left: 3px solid var(--slate);">
                                        <select class="inline-select @(hasPS ? "assigned" : "")"
                                                id="ps-@team.Id"
                                                title="Select a problem statement for this team">
                                            <option value="">-- Select Problem Statement --</option>
                                            
                                            @* Show currently assigned problem statement *@
                                            @if (hasPS && availableProblemStatements != null && !availableProblemStatements.Any(ps => ps.Id.ToString() == projectProgress.ProblemStatement || ps.Statement == projectProgress.ProblemStatement))
                                            {
                                                <option value="current" selected="selected" data-statement="@projectProgress.ProblemStatement">
                                                    @projectProgress.ProblemStatement (Current)
                                                </option>
                                            }
                                            
                                            @* Show available problem statements from bank *@
                                            @if (availableProblemStatements != null)
                                            {
                                                foreach (var ps in availableProblemStatements)
                                                {
                                                    var isSelected = projectProgress.ProblemStatement == ps.Statement;
                                                    if (isSelected)
                                                    {
                                                        <option value="@ps.Id" data-statement="@ps.Statement" selected="selected">
                                                            @ps.Statement
                                                        </option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@ps.Id" data-statement="@ps.Statement">
                                                            @ps.Statement
                                                        </option>
                                                    }
                                                }
                                            }
                                        </select>
                                        <div class="save-feedback" id="ps-feedback-@team.Id"></div>
                                    </td>

                                    <!-- Actions -->
                                    <td style="text-align: center; border-left: 3px solid var(--slate);">
                                        <div class="action-buttons" style="justify-content: center;">
                                            <button type="button" class="glass-btn btn-sm btn-success"
                                                    onclick="saveAssignment(@team.Id, @team.TeamNumber)"
                                                    title="Assign Problem Statement">
                                                <i class="fas fa-save"></i> Assign
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET</div>
            <div class="footer-line team">With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)</div>
            <div class="footer-line copyright">&copy; All Rights Reserved @@2025</div>
        </div>
    </footer>

    @Html.AntiForgeryToken()

    <script>
        // ===== FILTER LOGIC =====
        function filterTeams() {
            var searchText = document.getElementById('searchText').value.toLowerCase();
            var filterStatus = document.getElementById('filterStatus').value;
            var rows = document.querySelectorAll('#teamsTableBody tr');
            var visibleCount = 0;

            rows.forEach(function (row) {
                var text = row.textContent.toLowerCase();
                var assigned = row.getAttribute('data-assigned');

                var matchSearch = !searchText || text.includes(searchText);
                var matchStatus = !filterStatus || assigned === filterStatus;

                if (matchSearch && matchStatus) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('teamCount').textContent = 'Showing: ' + visibleCount;
        }

        function clearFilters() {
            document.getElementById('searchText').value = '';
            document.getElementById('filterStatus').value = '';
            filterTeams();
        }

        // ===== SAVE ASSIGNMENT =====
        async function saveAssignment(teamId, teamNumber) {
            var psSelect = document.getElementById('ps-' + teamId);
            var problemStatementId = psSelect.value;
            var psFeedback = document.getElementById('ps-feedback-' + teamId);

            // Reset feedback
            psFeedback.className = 'save-feedback';
            psFeedback.textContent = '';

            if (!problemStatementId || problemStatementId === '') {
                psFeedback.className = 'save-feedback error';
                psFeedback.innerHTML = '<i class="fas fa-times-circle"></i> Please select a problem statement';
                setTimeout(function () {
                    psFeedback.className = 'save-feedback';
                }, 3000);
                return;
            }

            // Don't allow reassigning if "current" is selected
            if (problemStatementId === 'current') {
                psFeedback.className = 'save-feedback error';
                psFeedback.innerHTML = '<i class="fas fa-info-circle"></i> Already assigned';
                setTimeout(function () {
                    psFeedback.className = 'save-feedback';
                }, 3000);
                return;
            }

            try {
                var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                var formData = new FormData();
                formData.append('teamId', teamId);
                formData.append('problemStatementId', problemStatementId);
                formData.append('__RequestVerificationToken', token);

                var response = await fetch('@Url.Action("AssignProblemStatementFromBank", "Faculty")', {
                    method: 'POST',
                    body: formData
                });

                var result = await response.json();

                if (result.success) {
                    psFeedback.className = 'save-feedback success';
                    psFeedback.innerHTML = '<i class="fas fa-check-circle"></i> Assigned Successfully!';
                    psSelect.classList.add('assigned');
                    
                    // Update row status
                    var row = document.querySelector('tr[data-team-id="' + teamId + '"]');
                    if (row) row.setAttribute('data-assigned', 'assigned');
                    
                    showMessage(result.message, 'success');
                    
                    // Reload after 1.5 seconds to refresh the list
                    setTimeout(function () {
                        location.reload();
                    }, 1500);
                } else {
                    psFeedback.className = 'save-feedback error';
                    psFeedback.innerHTML = '<i class="fas fa-times-circle"></i> ' + result.message;
                    showMessage(result.message, 'error');
                }
            } catch (e) {
                psFeedback.className = 'save-feedback error';
                psFeedback.innerHTML = '<i class="fas fa-times-circle"></i> Error saving';
                showMessage('Error assigning problem statement: ' + e.message, 'error');
            }

            // Clear feedback after 5 seconds
            setTimeout(function () {
                psFeedback.className = 'save-feedback';
                psFeedback.textContent = '';
            }, 5000);
        }

        function showMessage(message, type) {
            var container = document.getElementById('messageContainer');
            var iconClass = type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle';
            var title = type === 'success' ? 'Success!' : type === 'error' ? 'Error!' : 'Info';
            var colorCode = type === 'success' ? '#28a745' : type === 'error' ? '#dc3545' : '#6f42c1';
            
            var alert = document.createElement('div');
            alert.className = 'alert-card ' + type;
            alert.innerHTML = `
                <i class="fas fa-${iconClass}" style="font-size: 2em; color: ${colorCode};"></i>
                <div>
                    <h4 style="margin: 0; color: ${colorCode};">${title}</h4>
                    <p style="margin: 5px 0 0 0;">${message}</p>
                </div>
            `;
            
            container.innerHTML = '';
            container.appendChild(alert);

            setTimeout(function () {
                alert.style.transition = 'opacity 0.5s';
                alert.style.opacity = '0';
                setTimeout(function () { alert.remove(); }, 500);
            }, 5000);
        }
    </script>
