            border-top: 1px dashed var(--slate);
            margin: 6px 0;
        }

        /* Inline select dropdowns */
        .inline-select {
            width: 100%;
            padding: 10px 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 0.9em;
            font-family: 'Montserrat', sans-serif;
            background: white;
            transition: all 0.3s ease;
            cursor: pointer;
            min-width: 200px;
            box-sizing: border-box;
        }

        .inline-select:focus {
            outline: none;
            border-color: var(--faculty-purple);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.15);
        }

        .inline-select.assigned {
            border-color: var(--success-green);
            background: rgba(40, 167, 69, 0.05);
        }

        /* Action buttons in table */
        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: center;
        }

        /* Save feedback */
