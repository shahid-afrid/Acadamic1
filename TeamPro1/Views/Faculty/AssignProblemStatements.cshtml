@{
    ViewData["Title"] = "Assign Problem Statements";
    Layout = null;
    
    var assignedTeams = ViewBag.AssignedTeams as List<TeamPro1.Models.ProjectProgress>;
    var availableProblemStatements = ViewBag.AvailableProblemStatements as List<TeamPro1.Models.ProblemStatementBank>;
    
    var totalTeams = assignedTeams?.Count ?? 0;
    var teamsWithPS = assignedTeams?.Count(pp => !string.IsNullOrEmpty(pp.ProblemStatement)) ?? 0;
    var teamsPending = totalTeams - teamsWithPS;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --faculty-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .page-header h1 {
            font-size: 2.2em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0;
            letter-spacing: 1.2px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .page-header p { color: #666; margin: 5px 0 0 0; }

        .glass-btn {
            background: linear-gradient(135deg, var(--faculty-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
            font-family: 'Montserrat', sans-serif;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--faculty-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white;
        }

        .glass-btn:disabled { opacity: 0.6; cursor: not-allowed; transform: none; }

        .btn-success { background: linear-gradient(135deg, #28a745, #20c997); }
        .btn-back { background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%); }
        .btn-back:hover { background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%); }

        .btn-sm {
            padding: 8px 16px;
            font-size: 0.85em;
            border-radius: 18px;
        }

        /* Stats Row */
        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 25px;
            text-align: center;
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            backdrop-filter: blur(12px);
            transition: transform 0.3s ease;
        }

        .stat-card:hover { transform: translateY(-3px); }

        .stat-card .stat-icon {
            font-size: 2em;
            margin-bottom: 10px;
        }

        .stat-card .stat-value {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
        }

        .stat-card .stat-label {
            font-size: 0.9em;
            color: #666;
            margin-top: 5px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-card.total .stat-icon { color: var(--faculty-purple); }
        .stat-card.total .stat-value { color: var(--faculty-purple); }
        .stat-card.assigned .stat-icon { color: var(--success-green); }
        .stat-card.assigned .stat-value { color: var(--success-green); }
        .stat-card.pending .stat-icon { color: #f39c12; }
        .stat-card.pending .stat-value { color: #f39c12; }

        /* Filters Card */
        .filters-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
        }

        .filters-header {
            background: linear-gradient(135deg, var(--faculty-purple), var(--cseds-teal));
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
        }

        .filters-header h4 { margin: 0; }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group { margin-bottom: 0; }

        .form-label {
            display: block;
            font-weight: 600;
            font-size: 0.9em;
            color: var(--royal-blue);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 1em;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--faculty-purple);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
        }

        .btn-group {
            display: flex;
            gap: 15px;
            justify-content: flex-start;
            flex-wrap: wrap;
        }

        /* Alert Messages */
        .alert-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 20px 30px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .alert-card.success {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.1), rgba(32, 201, 151, 0.1));
            border: 2px solid #28a745;
        }

        .alert-card.error {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(231, 76, 60, 0.1));
            border: 2px solid #dc3545;
        }

        .alert-card.info {
            background: linear-gradient(135deg, rgba(111, 66, 193, 0.1), rgba(32, 201, 151, 0.1));
            border: 2px solid var(--faculty-purple);
        }

        /* Results Card (Table) */
        .results-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--slate);
        }

        .results-header h4 {
            margin: 0;
            color: var(--royal-blue);
        }

        .record-count {
            color: #666;
            font-weight: 600;
            padding: 10px;
            background: rgba(111, 66, 193, 0.1);
            border-radius: 8px;
            text-align: center;
        }

        .table-container {
            max-height: 700px;
            overflow-y: auto;
            border: 2px solid var(--slate);
            border-radius: 10px;
            margin-bottom: 15px;
        }

