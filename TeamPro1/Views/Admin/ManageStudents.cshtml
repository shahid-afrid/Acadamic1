@model List<TeamPro1.Models.Student>

@{
    ViewData["Title"] = "Manage Students";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Students - Admin - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #9b59b6;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .page-header h1 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .page-header p { color: #666; margin: 0; }

        .filters-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
        }

        .filters-header {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
        }

        .filters-header h4 { margin: 0; }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }

        .form-group { margin-bottom: 0; }

        .form-label {
            display: block;
            font-weight: 600;
            font-size: 0.9em;
            color: var(--royal-blue);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 1em;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--cseds-purple);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 0 0 3px rgba(155, 89, 182, 0.1);
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
            font-family: 'Montserrat', sans-serif;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(155, 89, 182, 0.4);
            text-decoration: none;
            color: white;
        }

        .glass-btn:disabled { opacity: 0.6; cursor: not-allowed; transform: none; }

        .btn-group {
            display: flex;
            gap: 15px;
            justify-content: flex-start;
            flex-wrap: wrap;
        }

        .btn-success { background: linear-gradient(135deg, #28a745, #20c997); }
        .btn-danger { background: linear-gradient(135deg, #dc3545, #e74c3c); }
        .btn-warning { background: linear-gradient(135deg, #f39c12, #e67e22); }
        .btn-back { background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%); }
        .btn-back:hover { background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%); }

        .results-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--slate);
        }

        .results-header h4 {
            margin: 0;
            color: var(--royal-blue);
        }

        .table-container {
            max-height: 600px;
            overflow-y: auto;
            border: 2px solid var(--slate);
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

        .table th {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 15px 12px;
            text-align: left;
            font-weight: 600;
            border: none;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .table td {
            padding: 12px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .table tr:hover { background: rgba(155, 89, 182, 0.05); }
        .table tr:nth-child(even) { background: rgba(249, 250, 242, 0.3); }

        .record-count {
            color: #666;
            font-weight: 600;
            padding: 10px;
            background: rgba(155, 89, 182, 0.1);
            border-radius: 8px;
            text-align: center;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .btn-sm {
            padding: 10px 16px;
            font-size: 0.9em;
            border-radius: 18px;
            min-width: 80px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .btn-sm i { font-size: 1.1em; }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4em;
            color: var(--cseds-purple);
            margin-bottom: 20px;
        }

        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background-color: rgba(39, 64, 96, 0.75);
            backdrop-filter: blur(4px);
            z-index: 9999;
            align-items: center;
            justify-content: center;
            animation: fadeIn 0.2s ease-out;
        }

        .modal-overlay.show { display: flex; }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .modal-content {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 500px;
            width: 90%;
            overflow: hidden;
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from { transform: translateY(-50px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .modal-header {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 25px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h5 {
            margin: 0;
            font-weight: 700;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .modal-close {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 1.2em;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .modal-close:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(90deg);
        }

        .modal-body {
            padding: 30px;
        }

        .modal-body p { color: #666; margin-bottom: 25px; font-size: 1.05em; }

        .modal-footer {
            padding: 20px 30px;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
            display: flex;
            justify-content: flex-end;
            gap: 12px;
        }

        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            color: #274060;
            border-radius: 20px 20px 0 0;
        }
        .footer-content { max-width: 1200px; margin: 0 auto; }
        .footer-line { margin: 8px 0; line-height: 1.6; }
        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444; margin-bottom: 12px; }
        .footer-line.team { font-size: 0.95em; font-weight: 500; color: #444; }
        .footer-line.copyright { font-size: 0.9em; font-weight: 600; color: #274060; margin-top: 15px; padding-top: 15px; border-top: 2px solid rgba(39,64,96,0.1); }
        .footer-highlight { color: #274060; font-weight: 700; }
        .footer-name { color: #274060; font-weight: 600; }

        @@media (max-width: 768px) {
            .main-container { padding: 0 15px; }
            .filter-grid { grid-template-columns: 1fr; gap: 15px; }
            .btn-group { justify-content: center; }
            .table th, .table td { padding: 8px 6px; font-size: 0.9em; }
            .results-header { flex-direction: column; gap: 15px; }
            .modal-content { width: 95%; margin: 10px; }
            .app-footer { padding: 20px 15px; margin-top: 30px; }
        }
    </style>
</head>
<body>
    @Html.Partial("_AdminBackButton")
    
    <div class="main-container">
        <!-- Header Section -->
        <div class="page-header">
            <h1><i class="fas fa-user-graduate"></i> Manage Students</h1>
            <p>Add, edit, and manage student profiles for <strong>@ViewBag.AdminDepartment</strong></p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="filters-card" style="background: linear-gradient(135deg, rgba(40, 167, 69, 0.1), rgba(32, 201, 151, 0.1)); border: 2px solid #28a745; margin-bottom: 20px;">
                <div style="display: flex; align-items: center; gap: 15px;">
                    <i class="fas fa-check-circle" style="font-size: 2em; color: #28a745;"></i>
                    <div>
                        <h4 style="margin: 0; color: #28a745;">Success!</h4>
                        <p style="margin: 5px 0 0 0; color: #155724;">@TempData["SuccessMessage"]</p>
                        @if (TempData["ErrorDetails"] != null)
                        {
                            <p style="margin: 10px 0 0 0; font-size: 0.9em; color: #856404;">
                                <strong>Warnings:</strong> @TempData["ErrorDetails"]
                            </p>
                        }
                    </div>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="filters-card" style="background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(231, 76, 60, 0.1)); border: 2px solid #dc3545; margin-bottom: 20px;">
                <div style="display: flex; align-items: center; gap: 15px;">
                    <i class="fas fa-exclamation-circle" style="font-size: 2em; color: #dc3545;"></i>
                    <div>
                        <h4 style="margin: 0; color: #dc3545;">Error!</h4>
                        <p style="margin: 5px 0 0 0; color: #721c24;">@TempData["ErrorMessage"]</p>
                    </div>
                </div>
            </div>
        }

        <!-- Filters Section -->
        <div class="filters-card">
            <div class="filters-header">
                <h4 style="margin: 0;"><i class="fas fa-filter"></i> Student Filters & Actions</h4>
            </div>

            <div class="filter-grid">
                <div class="form-group">
                    <label class="form-label">Search Students</label>
                    <input type="text" id="searchText" class="form-control" placeholder="Name, Email, or Reg No" onkeyup="filterTable()">
                </div>

                <div class="form-group">
                    <label class="form-label">Year</label>
                    <select id="filterYear" class="form-control" onchange="filterTable()">
                        <option value="">All Years</option>
                        @foreach (var year in Model.Select(s => s.Year).Distinct().OrderBy(y => y))
                        {
                            <option value="@year">@year</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Semester</label>
                    <select id="filterSemester" class="form-control" onchange="filterTable()">
                        <option value="">All Semesters</option>
                        @foreach (var sem in Model.Select(s => s.Semester).Distinct().OrderBy(s => s))
                        {
                            <option value="@sem">@sem</option>
                        }
                    </select>
                </div>
            </div>

            <div class="btn-group">
                <button type="button" class="glass-btn" onclick="clearFilters()">
                    <i class="fas fa-eraser"></i> Clear Filters
                </button>
                <a href="@Url.Action("AddStudent", "Admin")" class="glass-btn btn-success">
                    <i class="fas fa-user-plus"></i> Add Student
                </a>
                <button type="button" class="glass-btn btn-warning" onclick="document.getElementById('bulkUploadFile').click()">
                    <i class="fas fa-upload"></i> Upload Students Data
                </button>
                <a href="@Url.Action("DownloadStudentTemplate", "Admin")" class="glass-btn" style="background: linear-gradient(135deg, #3498db, #2980b9);">
                    <i class="fas fa-download"></i> Download Template
                </a>
                <button type="button" class="glass-btn btn-success" onclick="exportExcel()" id="exportExcelBtn">
                    <i class="fas fa-file-excel"></i> Export Excel
                </button>
                <button type="button" class="glass-btn btn-danger" onclick="confirmDeleteAll()" id="deleteAllBtn">
                    <i class="fas fa-trash-alt"></i> Delete All Students
                </button>
            </div>

            <!-- Hidden file input for bulk upload -->
            <form id="bulkUploadForm" method="post" action="@Url.Action("BulkUploadStudents", "Admin")" enctype="multipart/form-data" style="display: none;">
                @Html.AntiForgeryToken()
                <input type="file" id="bulkUploadFile" name="excelFile" accept=".xlsx" onchange="handleBulkUpload()" />
            </form>
        </div>

        <!-- Results Section -->
        <div class="results-card">
            <div class="results-header">
                <h4><i class="fas fa-users"></i> @ViewBag.AdminDepartment Students</h4>
                <div id="studentCount" class="record-count">Total Students: @Model.Count</div>
            </div>

            <div class="table-container">
                <table class="table" id="studentsTable">
                    <thead>
                        <tr>
                            <th>Student Details</th>
                            <th>Registration No</th>
                            <th>Email</th>
                            <th>Year</th>
                            <th>Semester</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="studentsTableBody">
                        @foreach (var student in Model)
                        {
                            <tr data-student-id="@student.Id" data-year="@student.Year" data-semester="@student.Semester">
                                <td>
                                    <div><strong>@student.FullName</strong></div>
                                    <div style="font-size: 0.9em; color: #666;">Dept: @student.Department</div>
                                </td>
                                <td><strong>@student.RegdNumber</strong></td>
                                <td>@student.Email</td>
                                <td>@student.Year</td>
                                <td>@student.Semester</td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("EditStudent", "Admin", new { id = student.Id })"
                                           class="glass-btn btn-sm btn-warning"
                                           title="Edit Student">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <button type="button" class="glass-btn btn-sm btn-danger"
                                                onclick="confirmDelete('@student.Id', '@student.FullName.Replace("'", "\\'")') "
                                                title="Delete Student">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Count == 0)
            {
                <div class="empty-state">
                    <i class="fas fa-user-graduate"></i>
                    <h3>No Students Found</h3>
                    <p>No students are currently registered in your department.</p>
                    <a href="@Url.Action("AddStudent", "Admin")" class="glass-btn btn-success">
                        <i class="fas fa-user-plus"></i> Add First Student
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal-overlay" id="deleteModal">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h5>
                <button class="modal-close" onclick="closeModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="deleteStudentName"></strong>? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="glass-btn btn-back" onclick="closeModal()">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="glass-btn btn-danger" id="confirmDeleteBtn">
                    <i class="fas fa-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>

    <!-- Delete All Students Confirmation Modal -->
    <div class="modal-overlay" id="deleteAllModal">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #dc3545, #c0392b);">
                <h5><i class="fas fa-exclamation-triangle"></i> Delete All Students</h5>
                <button class="modal-close" onclick="closeDeleteAllModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <p style="color: #dc3545; font-weight: 700;">?? This is a destructive action!</p>
                <p>This will permanently delete:</p>
                <ul style="color: #555; line-height: 2;">
                    <li><strong>All students</strong> in <strong>@ViewBag.AdminDepartment</strong></li>
                    <li><strong>All formed teams</strong> and team requests</li>
                    <li><strong>All project progress</strong>, meetings, and activity logs</li>
                </ul>
                <p>Faculty, problem statements, and other department data will <strong>NOT</strong> be affected.</p>
                <p style="margin-top: 15px;">Type <strong style="color: #dc3545;">DELETE ALL</strong> below to confirm:</p>
                <input type="text" id="deleteAllConfirmInput" class="form-control" placeholder="Type DELETE ALL" style="border-color: #dc3545;" autocomplete="off">
            </div>
            <div class="modal-footer">
                <button type="button" class="glass-btn btn-back" onclick="closeDeleteAllModal()">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="glass-btn btn-danger" id="confirmDeleteAllBtn" disabled>
                    <i class="fas fa-trash-alt"></i> Delete All Students
                </button>
            </div>
        </div>
    </div>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET</div>
            <div class="footer-line team">With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)</div>
            <div class="footer-line copyright">&copy; All Rights Reserved @@2025</div>
        </div>
    </footer>

    @Html.AntiForgeryToken()

    <script>
        function filterTable() {
            var searchText = document.getElementById('searchText').value.toLowerCase();
            var filterYear = document.getElementById('filterYear').value;
            var filterSemester = document.getElementById('filterSemester').value;
            var rows = document.querySelectorAll('#studentsTableBody tr');
            var visibleCount = 0;

            rows.forEach(function(row) {
                var text = row.textContent.toLowerCase();
                var year = row.getAttribute('data-year');
                var semester = row.getAttribute('data-semester');

                var matchSearch = !searchText || text.includes(searchText);
                var matchYear = !filterYear || year === filterYear;
                var matchSemester = !filterSemester || semester === filterSemester;

                if (matchSearch && matchYear && matchSemester) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('studentCount').textContent = 'Total Students: ' + visibleCount;
        }

        function clearFilters() {
            document.getElementById('searchText').value = '';
            document.getElementById('filterYear').value = '';
            document.getElementById('filterSemester').value = '';
            filterTable();
        }

        var deleteStudentId = 0;
        function confirmDelete(id, name) {
            deleteStudentId = id;
            document.getElementById('deleteStudentName').textContent = name;
            document.getElementById('deleteModal').classList.add('show');
        }

        // ===== Delete All Students =====
        function confirmDeleteAll() {
            document.getElementById('deleteAllConfirmInput').value = '';
            document.getElementById('confirmDeleteAllBtn').disabled = true;
            document.getElementById('deleteAllModal').classList.add('show');
        }

        function closeModal(type = '') {
            if (type === 'all') {
                document.getElementById('deleteAllModal').classList.remove('show');
            } else {
                document.getElementById('deleteModal').classList.remove('show');
            }
        }

        function closeDeleteAllModal() {
            document.getElementById('deleteAllModal').classList.remove('show');
        }

        document.getElementById('deleteAllModal').addEventListener('click', function(e) {
            if (e.target === this) closeDeleteAllModal();
        });

        document.getElementById('deleteAllConfirmInput').addEventListener('input', function() {
            document.getElementById('confirmDeleteAllBtn').disabled = this.value.trim() !== 'DELETE ALL';
        });

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
                closeModal('all');
            }
        });

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
            closeModal();
            try {
                var formData = new FormData();
                formData.append('id', deleteStudentId);
                var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                var response = await fetch('@Url.Action("DeleteStudent", "Admin")', {
                    method: 'POST',
                    body: formData
                });
                var result = await response.json();
                if (result.success) {
                    var row = document.querySelector('tr[data-student-id="' + deleteStudentId + '"]');
                    if (row) row.remove();
                    var currentCount = parseInt(document.getElementById('studentCount').textContent.match(/\d+/)[0]);
                    document.getElementById('studentCount').textContent = 'Total Students: ' + (currentCount - 1);
                    alert('Student deleted successfully!');
                } else {
                    alert(result.message);
                }
            } catch (e) {
                alert('Error deleting student.');
            }
        });

        document.getElementById('confirmDeleteAllBtn').addEventListener('click', async function() {
            closeDeleteAllModal();
            var btn = document.getElementById('deleteAllBtn');
            var originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';
            btn.disabled = true;

            try {
                var formData = new FormData();
                var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                var response = await fetch('@Url.Action("DeleteAllStudents", "Admin")', {
                    method: 'POST',
                    body: formData
                });
                var result = await response.json();
                if (result.success) {
                    alert(result.message);
                    window.location.reload();
                } else {
                    alert(result.message);
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            } catch (e) {
                alert('Error deleting students.');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });

        async function exportExcel() {
            var btn = document.getElementById('exportExcelBtn');
            var originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Exporting...';
            btn.disabled = true;

            try {
                window.location.href = '@Url.Action("ExportStudentsExcel", "Admin")';
            } catch (error) {
                alert('Error exporting Excel file.');
            }

            setTimeout(function() {
                btn.innerHTML = originalText;
                btn.disabled = false;
            }, 2000);
        }

        function handleBulkUpload() {
            var fileInput = document.getElementById('bulkUploadFile');
            var file = fileInput.files[0];

            if (!file) return;

            if (!file.name.endsWith('.xlsx')) {
                alert('Please select a valid Excel file (.xlsx)');
                fileInput.value = '';
                return;
            }

            if (!confirm('Are you sure you want to upload ' + file.name + '?\n\nThis will add all students from the Excel file to the database.')) {
                fileInput.value = '';
                return;
            }

            var uploadBtn = document.querySelector('button[onclick*="bulkUploadFile"]');
            var originalText = uploadBtn.innerHTML;
            uploadBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Uploading...';
            uploadBtn.disabled = true;

            document.getElementById('bulkUploadForm').submit();
        }
    </script>
