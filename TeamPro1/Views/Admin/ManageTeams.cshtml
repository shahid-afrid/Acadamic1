@model List<TeamPro1.Models.Team>

@{
    ViewData["Title"] = "Manage Teams";
    Layout = null;
    var projectProgresses = ViewBag.ProjectProgresses as List<TeamPro1.Models.ProjectProgress>;
    var faculties = ViewBag.Faculties as List<TeamPro1.Models.Faculty>;
    var problemStatements = ViewBag.ProblemStatements as List<TeamPro1.Models.ProblemStatementBank>;

    var assignedCount = projectProgresses?.Count(p => p.AssignedFacultyId != null && !string.IsNullOrEmpty(p.ProblemStatement)) ?? 0;
    var unassignedCount = Model.Count - assignedCount;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Teams - Admin - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #9b59b6;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .page-header h1 {
            font-size: 2.2em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0;
            letter-spacing: 1.2px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .page-header p { color: #666; margin: 5px 0 0 0; }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
            font-family: 'Montserrat', sans-serif;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(155, 89, 182, 0.4);
            text-decoration: none;
            color: white;
        }

        .glass-btn:disabled { opacity: 0.6; cursor: not-allowed; transform: none; }

        .btn-success { background: linear-gradient(135deg, #28a745, #20c997); }
        .btn-danger { background: linear-gradient(135deg, #dc3545, #e74c3c); }
        .btn-warning { background: linear-gradient(135deg, #f39c12, #e67e22); }
        .btn-back { background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%); }
        .btn-back:hover { background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%); }

        .btn-sm {
            padding: 8px 16px;
            font-size: 0.85em;
            border-radius: 18px;
        }

        /* Stats Row */
        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 25px;
            text-align: center;
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            backdrop-filter: blur(12px);
            transition: transform 0.3s ease;
        }

        .stat-card:hover { transform: translateY(-3px); }

        .stat-card .stat-icon {
            font-size: 2em;
            margin-bottom: 10px;
        }

        .stat-card .stat-value {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
        }

        .stat-card .stat-label {
            font-size: 0.9em;
            color: #666;
            margin-top: 5px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-card.total .stat-icon { color: var(--cseds-purple); }
        .stat-card.total .stat-value { color: var(--cseds-purple); }
        .stat-card.assigned .stat-icon { color: var(--success-green); }
        .stat-card.assigned .stat-value { color: var(--success-green); }
        .stat-card.unassigned .stat-icon { color: #f39c12; }
        .stat-card.unassigned .stat-value { color: #f39c12; }

        /* Filters Card */
        .filters-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
        }

        .filters-header {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
        }

        .filters-header h4 { margin: 0; }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group { margin-bottom: 0; }

        .form-label {
            display: block;
            font-weight: 600;
            font-size: 0.9em;
            color: var(--royal-blue);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 1em;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--cseds-purple);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 0 0 3px rgba(155, 89, 182, 0.1);
        }

        .btn-group {
            display: flex;
            gap: 15px;
            justify-content: flex-start;
            flex-wrap: wrap;
        }

        /* Alert Messages */
        .alert-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 20px 30px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .alert-card.success {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.1), rgba(32, 201, 151, 0.1));
            border: 2px solid #28a745;
        }

        .alert-card.error {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(231, 76, 60, 0.1));
            border: 2px solid #dc3545;
        }

        /* Results Card (Table) */
        .results-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--slate);
        }

        .results-header h4 {
            margin: 0;
            color: var(--royal-blue);
        }

        .record-count {
            color: #666;
            font-weight: 600;
            padding: 10px;
            background: rgba(155, 89, 182, 0.1);
            border-radius: 8px;
            text-align: center;
        }

        .table-container {
            max-height: 700px;
            overflow-y: auto;
            border: 2px solid var(--slate);
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

        .table th {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 15px 12px;
            text-align: left;
            font-weight: 600;
            border: none;
            position: sticky;
            top: 0;
            z-index: 10;
            white-space: nowrap;
        }

        .table td {
            padding: 14px 12px;
            border-bottom: 3px solid var(--royal-blue);
            vertical-align: middle;
        }

        .table tr:hover { background: rgba(155, 89, 182, 0.05); }
        .table tr:nth-child(even) { background: rgba(249, 250, 242, 0.3); }
        .table tr:last-child td { border-bottom: none; }

        /* Team Number Badge */
        .team-badge {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.95em;
            display: inline-block;
        }

        /* Student info in table */
        .student-cell {
            line-height: 1.6;
        }

        .student-cell .student-name {
            font-weight: 600;
            color: var(--royal-blue);
        }

        .student-cell .student-regd {
            font-size: 0.85em;
            color: #666;
            font-family: 'Courier New', monospace;
        }

        .student-cell .student-divider {
            border-top: 1px dashed var(--slate);
            margin: 6px 0;
        }

        /* Inline select dropdowns */
        .inline-select {
            width: 100%;
            padding: 10px 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 0.9em;
            font-family: 'Montserrat', sans-serif;
            background: white;
            transition: all 0.3s ease;
            cursor: pointer;
            min-width: 160px;
            box-sizing: border-box;
        }

        .inline-select:focus {
            outline: none;
            border-color: var(--cseds-purple);
            box-shadow: 0 0 0 3px rgba(155, 89, 182, 0.15);
        }

        .inline-select.assigned {
            border-color: var(--success-green);
            background: rgba(40, 167, 69, 0.05);
        }

        /* Inline text input for problem statement */
        .inline-input {
            width: 100%;
            padding: 10px 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 0.9em;
            font-family: 'Montserrat', sans-serif;
            background: white;
            transition: all 0.3s ease;
            resize: vertical;
            min-height: 40px;
            min-width: 180px;
            box-sizing: border-box;
        }

        .inline-input:focus {
            outline: none;
            border-color: var(--cseds-purple);
            box-shadow: 0 0 0 3px rgba(155, 89, 182, 0.15);
        }

        .inline-input.assigned {
            border-color: var(--success-green);
            background: rgba(40, 167, 69, 0.05);
        }

        /* Action buttons in table */
        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: center;
        }

        /* Status indicator */
        .status-dot {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 6px;
        }

        .status-dot.assigned { background: var(--success-green); }
        .status-dot.unassigned { background: #f39c12; }

        /* Save feedback */
        .save-feedback {
            font-size: 0.8em;
            font-weight: 600;
            margin-top: 4px;
            display: none;
        }

        .save-feedback.success { color: var(--success-green); display: block; }
        .save-feedback.error { color: var(--error-red); display: block; }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4em;
            color: var(--cseds-purple);
            margin-bottom: 20px;
        }

        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background-color: rgba(39, 64, 96, 0.75);
            backdrop-filter: blur(4px);
            z-index: 9999;
            align-items: center;
            justify-content: center;
            animation: fadeIn 0.2s ease-out;
        }

        .modal-overlay.show { display: flex; }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .modal-content {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 500px;
            width: 90%;
            overflow: hidden;
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from { transform: translateY(-50px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .modal-header {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 25px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h5 {
            margin: 0;
            font-weight: 700;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .modal-close {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 1.2em;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .modal-close:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(90deg);
        }

        .modal-body { padding: 30px; }
        .modal-body p { color: #666; margin-bottom: 0; font-size: 1.05em; }

        .modal-footer {
            padding: 20px 30px;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
            display: flex;
            justify-content: flex-end;
            gap: 12px;
        }

        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            color: #274060;
            border-radius: 20px 20px 0 0;
        }
        .footer-content { max-width: 1200px; margin: 0 auto; }
        .footer-line { margin: 8px 0; line-height: 1.6; }
        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444; margin-bottom: 12px; }
        .footer-line.team { font-size: 0.95em; font-weight: 500; color: #444; }
        .footer-line.copyright { font-size: 0.9em; font-weight: 600; color: #274060; margin-top: 15px; padding-top: 15px; border-top: 2px solid rgba(39,64,96,0.1); }
        .footer-highlight { color: #274060; font-weight: 700; }
        .footer-name { color: #274060; font-weight: 600; }

        @@media (max-width: 768px) {
            .main-container { padding: 0 15px; }
            .page-header { flex-direction: column; text-align: center; }
            .page-header h1 { font-size: 1.5em; }
            .filter-grid { grid-template-columns: 1fr; }
            .stats-row { grid-template-columns: 1fr; }
            .btn-group { justify-content: center; }
            .table th, .table td { padding: 10px 8px; font-size: 0.85em; }
            .results-header { flex-direction: column; gap: 15px; }
            .modal-content { width: 95%; }
            .app-footer { padding: 20px 15px; margin-top: 30px; }
            .inline-select, .inline-input { min-width: 140px; font-size: 0.8em; }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="page-header">
            <div>
                <h1><i class="fas fa-users-cog"></i> Manage Teams (Assign)</h1>
                <p>Assign problem statements and mentors for <strong>@ViewBag.AdminDepartment</strong></p>
            </div>
            <a href="@Url.Action("Dashboard", "Admin")" class="glass-btn btn-back">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-card success">
                <i class="fas fa-check-circle" style="font-size: 2em; color: #28a745;"></i>
                <div>
                    <h4 style="margin: 0; color: #28a745;">Success!</h4>
                    <p style="margin: 5px 0 0 0; color: #155724;">@TempData["SuccessMessage"]</p>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-card error">
                <i class="fas fa-exclamation-circle" style="font-size: 2em; color: #dc3545;"></i>
                <div>
                    <h4 style="margin: 0; color: #dc3545;">Error!</h4>
                    <p style="margin: 5px 0 0 0; color: #721c24;">@TempData["ErrorMessage"]</p>
                </div>
            </div>
        }

        <!-- Stats Row -->
        <div class="stats-row">
            <div class="stat-card total">
                <div class="stat-icon"><i class="fas fa-users"></i></div>
                <div class="stat-value">@Model.Count</div>
                <div class="stat-label">Total Teams</div>
            </div>
            <div class="stat-card assigned">
                <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
                <div class="stat-value">@assignedCount</div>
                <div class="stat-label">Assigned Teams</div>
            </div>
            <div class="stat-card unassigned">
                <div class="stat-icon"><i class="fas fa-clock"></i></div>
                <div class="stat-value">@unassignedCount</div>
                <div class="stat-label">Unassigned Teams</div>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="filters-card">
            <div class="filters-header">
                <h4 style="margin: 0;"><i class="fas fa-filter"></i> Filter Teams</h4>
            </div>

            <div class="filter-grid">
                <div class="form-group">
                    <label class="form-label">Search Teams</label>
                    <input type="text" id="searchText" class="form-control" placeholder="Search by name or reg no..." onkeyup="filterTeams()">
                </div>

                <div class="form-group">
                    <label class="form-label">Filter by Year</label>
                    <select id="filterYear" class="form-control" onchange="filterTeams()">
                        <option value="">All Years</option>
                        @foreach (var year in Model.Where(t => t.Student1 != null).Select(t => t.Student1!.Year).Distinct().OrderBy(y => y))
                        {
                            <option value="@year">Year @year</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Assignment Status</label>
                    <select id="filterStatus" class="form-control" onchange="filterTeams()">
                        <option value="">All</option>
                        <option value="assigned">Assigned</option>
                        <option value="unassigned">Unassigned</option>
                    </select>
                </div>
            </div>

            <div class="btn-group">
                <button type="button" class="glass-btn" onclick="clearFilters()">
                    <i class="fas fa-eraser"></i> Clear Filters
                </button>
            </div>
        </div>

        <!-- Teams Table -->
        <div class="results-card">
            <div class="results-header">
                <h4><i class="fas fa-table"></i> Teams - @ViewBag.AdminDepartment</h4>
                <div id="teamCount" class="record-count">Showing: @Model.Count</div>
            </div>

            @if (Model.Count == 0)
            {
                <div class="empty-state">
                    <i class="fas fa-users-slash"></i>
                    <h3>No Teams Found</h3>
                    <p>No student teams have been formed yet in your department.</p>
                </div>
            }
            else
            {
                <div class="table-container">
                    <table class="table" id="teamsTable">
                        <thead>
                            <tr>
                                <th style="width: 90px; text-align: center;"><i class="fas fa-hashtag"></i> Team No</th>
                                <th style="width: 240px;"><i class="fas fa-user-graduate"></i> Students & Regd No</th>
                                <th style="width: 70px; text-align: center;"><i class="fas fa-calendar"></i> Year</th>
                                <th style="min-width: 200px; border-left: 3px solid rgba(255,255,255,0.3);"><i class="fas fa-file-alt"></i> Problem Statement</th>
                                <th style="min-width: 180px; border-left: 3px solid rgba(255,255,255,0.3);"><i class="fas fa-chalkboard-teacher"></i> Mentor</th>
                                <th style="width: 120px; text-align: center; border-left: 3px solid rgba(255,255,255,0.3);"><i class="fas fa-cogs"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody id="teamsTableBody">
                            @foreach (var team in Model)
                            {
                                var progress = projectProgresses?.FirstOrDefault(p => p.TeamId == team.Id);
                                var isAssigned = progress?.AssignedFacultyId != null && !string.IsNullOrEmpty(progress?.ProblemStatement);
                                var yearVal = team.Student1?.Year ?? 0;

                                <tr data-team-id="@team.Id" data-year="@yearVal" data-assigned="@(isAssigned ? "assigned" : "unassigned")">
                                    <!-- Team No -->
                                    <td style="text-align: center;">
                                        <span class="team-badge">#@team.TeamNumber</span>
                                    </td>

                                    <!-- Students & Regd No -->
                                    <td>
                                        <div class="student-cell">
                                            @if (team.Student1 != null)
                                            {
                                                <div>
                                                    <span class="student-name">@team.Student1.FullName</span><br />
                                                    <span class="student-regd">@team.Student1.RegdNumber</span>
                                                </div>
                                            }
                                            @if (team.Student2 != null)
                                            {
                                                <div class="student-divider"></div>
                                                <div>
                                                    <span class="student-name">@team.Student2.FullName</span><br />
                                                    <span class="student-regd">@team.Student2.RegdNumber</span>
                                                </div>
                                            }
                                        </div>
                                    </td>

                                    <!-- Year -->
                                    <td style="text-align: center;">
                                        <strong>@(team.Student1?.Year ?? 0)</strong>
                                    </td>

                                    <!-- Problem Statement -->
                                    <td style="border-left: 3px solid var(--slate);">
                                        <select class="inline-select @(string.IsNullOrEmpty(progress?.ProblemStatement) ? "" : "assigned")"
                                                id="ps-@team.Id"
                                                title="Select a problem statement for this team">
                                            <option value="">-- Select Problem Statement --</option>
                                            @if (problemStatements != null)
                                            {
                                                @foreach (var ps in problemStatements)
                                                {
                                                    if (progress?.ProblemStatement == ps.Statement)
                                                    {
                                                        <option value="@ps.Statement" selected="selected">
                                                            @ps.Statement
                                                        </option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@ps.Statement">
                                                            @ps.Statement
                                                        </option>
                                                    }
                                                }
                                                @if (!string.IsNullOrEmpty(progress?.ProblemStatement) && problemStatements.All(ps => ps.Statement != progress.ProblemStatement))
                                                {
                                                    <option value="@progress.ProblemStatement" selected="selected">
                                                        @progress.ProblemStatement
                                                    </option>
                                                }
                                            }
                                        </select>
                                        <div class="save-feedback" id="ps-feedback-@team.Id"></div>
                                    </td>

                                    <!-- Mentor -->
                                    <td style="border-left: 3px solid var(--slate);">
                                        <select class="inline-select @(progress?.AssignedFacultyId != null ? "assigned" : "")"
                                                id="mentor-@team.Id"
                                                title="Select a mentor for this team">
                                            <option value="">-- Select Mentor --</option>
                                            @if (faculties != null)
                                            {
                                                @foreach (var faculty in faculties)
                                                {
                                                    if (progress?.AssignedFacultyId == faculty.Id)
                                                    {
                                                        <option value="@faculty.Id" selected="selected">
                                                            @faculty.FullName
                                                        </option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@faculty.Id">
                                                            @faculty.FullName
                                                        </option>
                                                    }
                                                }
                                            }
                                        </select>
                                        <div class="save-feedback" id="mentor-feedback-@team.Id"></div>
                                    </td>

                                    <!-- Actions -->
                                    <td style="text-align: center; border-left: 3px solid var(--slate);">
                                        <div class="action-buttons" style="justify-content: center;">
                                            <button type="button" class="glass-btn btn-sm btn-success"
                                                    onclick="saveTeamAssignment(@team.Id, @team.TeamNumber)"
                                                    title="Save Assignment">
                                                <i class="fas fa-save"></i> Save
                                            </button>
                                            <button type="button" class="glass-btn btn-sm btn-danger"
                                                    onclick="confirmDelete(@team.Id, @team.TeamNumber)"
                                                    title="Delete Team">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal-overlay" id="deleteModal">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h5>
                <button class="modal-close" onclick="closeModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>Team #<span id="deleteTeamNumber"></span></strong>? This will also remove all related progress, meetings, and team requests. This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="glass-btn btn-back" onclick="closeModal()">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="glass-btn btn-danger" id="confirmDeleteBtn">
                    <i class="fas fa-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET</div>
            <div class="footer-line team">With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)</div>
            <div class="footer-line copyright">&copy; All Rights Reserved @@2025</div>
        </div>
    </footer>

    @Html.AntiForgeryToken()

    <script>
        // ===== FILTER LOGIC =====
        function filterTeams() {
            var searchText = document.getElementById('searchText').value.toLowerCase();
            var filterYear = document.getElementById('filterYear').value;
            var filterStatus = document.getElementById('filterStatus').value;
            var rows = document.querySelectorAll('#teamsTableBody tr');
            var visibleCount = 0;

            rows.forEach(function (row) {
                var text = row.textContent.toLowerCase();
                var year = row.getAttribute('data-year');
                var assigned = row.getAttribute('data-assigned');

                var matchSearch = !searchText || text.includes(searchText);
                var matchYear = !filterYear || year === filterYear;
                var matchStatus = !filterStatus || assigned === filterStatus;

                if (matchSearch && matchYear && matchStatus) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('teamCount').textContent = 'Showing: ' + visibleCount;
        }

        function clearFilters() {
            document.getElementById('searchText').value = '';
            document.getElementById('filterYear').value = '';
            document.getElementById('filterStatus').value = '';
            filterTeams();
        }

        // ===== SAVE ASSIGNMENT (Problem Statement + Mentor) =====
        async function saveTeamAssignment(teamId, teamNumber) {
            var psSelect = document.getElementById('ps-' + teamId);
            var mentorSelect = document.getElementById('mentor-' + teamId);
            var problemStatement = psSelect.value.trim();
            var facultyId = mentorSelect.value;

            var psFeedback = document.getElementById('ps-feedback-' + teamId);
            var mentorFeedback = document.getElementById('mentor-feedback-' + teamId);

            // Reset feedbacks
            psFeedback.className = 'save-feedback';
            psFeedback.textContent = '';
            mentorFeedback.className = 'save-feedback';
            mentorFeedback.textContent = '';

            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            var savedAny = false;
            var hadError = false;

            // Save problem statement if not empty
            if (problemStatement) {
                try {
                    var psFormData = new FormData();
                    psFormData.append('teamId', teamId);
                    psFormData.append('problemStatement', problemStatement);
                    psFormData.append('__RequestVerificationToken', token);

                    var psResponse = await fetch('@Url.Action("SetProblemStatement", "Admin")', {
                        method: 'POST',
                        body: psFormData
                    });
                    var psResult = await psResponse.json();
                    if (psResult.success) {
                        psFeedback.className = 'save-feedback success';
                        psFeedback.innerHTML = '<i class="fas fa-check-circle"></i> Saved';
                        psSelect.classList.add('assigned');
                        savedAny = true;
                    } else {
                        psFeedback.className = 'save-feedback error';
                        psFeedback.innerHTML = '<i class="fas fa-times-circle"></i> ' + psResult.message;
                        hadError = true;
                    }
                } catch (e) {
                    psFeedback.className = 'save-feedback error';
                    psFeedback.innerHTML = '<i class="fas fa-times-circle"></i> Error saving';
                    hadError = true;
                }
            }

            // Save mentor if selected
            if (facultyId) {
                try {
                    var mentorFormData = new FormData();
                    mentorFormData.append('teamId', teamId);
                    mentorFormData.append('facultyId', facultyId);
                    mentorFormData.append('__RequestVerificationToken', token);

                    var mentorResponse = await fetch('@Url.Action("AssignFaculty", "Admin")', {
                        method: 'POST',
                        body: mentorFormData
                    });
                    var mentorResult = await mentorResponse.json();
                    if (mentorResult.success) {
                        mentorFeedback.className = 'save-feedback success';
                        mentorFeedback.innerHTML = '<i class="fas fa-check-circle"></i> Saved';
                        mentorSelect.classList.add('assigned');
                        savedAny = true;
                    } else {
                        mentorFeedback.className = 'save-feedback error';
                        mentorFeedback.innerHTML = '<i class="fas fa-times-circle"></i> ' + mentorResult.message;
                        hadError = true;
                    }
                } catch (e) {
                    mentorFeedback.className = 'save-feedback error';
                    mentorFeedback.innerHTML = '<i class="fas fa-times-circle"></i> Error saving';
                    hadError = true;
                }
            }

            if (!problemStatement && !facultyId) {
                psFeedback.className = 'save-feedback error';
                psFeedback.textContent = 'Please enter a problem statement or select a mentor.';
                return;
            }

            // Update assignment status attribute
            if (problemStatement && facultyId && !hadError) {
                var row = document.querySelector('tr[data-team-id="' + teamId + '"]');
                if (row) row.setAttribute('data-assigned', 'assigned');
            }

            // Clear feedback after 3 seconds
            setTimeout(function () {
                psFeedback.className = 'save-feedback';
                psFeedback.textContent = '';
                mentorFeedback.className = 'save-feedback';
                mentorFeedback.textContent = '';
            }, 3000);
        }

        // ===== DELETE LOGIC =====
        var deleteTeamId = 0;
        function confirmDelete(id, number) {
            deleteTeamId = id;
            document.getElementById('deleteTeamNumber').textContent = number;
            document.getElementById('deleteModal').classList.add('show');
        }

        function closeModal() {
            document.getElementById('deleteModal').classList.remove('show');
        }

        document.getElementById('deleteModal').addEventListener('click', function (e) {
            if (e.target === this) closeModal();
        });

        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') closeModal();
        });

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
            closeModal();
            try {
                var formData = new FormData();
                formData.append('id', deleteTeamId);
                var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                var response = await fetch('@Url.Action("DeleteTeam", "Admin")', {
                    method: 'POST',
                    body: formData
                });
                var result = await response.json();
                if (result.success) {
                    var row = document.querySelector('tr[data-team-id="' + deleteTeamId + '"]');
                    if (row) row.remove();
                    var currentCount = parseInt(document.getElementById('teamCount').textContent.match(/\d+/)[0]);
                    document.getElementById('teamCount').textContent = 'Showing: ' + (currentCount - 1);
                    alert('Team deleted successfully!');
                } else {
                    alert(result.message);
                }
            } catch (e) {
                alert('Error deleting team.');
            }
        });
    </script>
</body>
</html>
