@model TeamPro1.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1600px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h1 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .dashboard-header p {
            color: #666;
            font-size: 1.2em;
            margin: 0;
        }

        /* Welcome Section */
        .welcome-section {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .welcome-section h4 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        .welcome-section p {
            margin: 0;
        }

        /* Statistics Cards */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(249,250,242,0.95);
            border-radius: 15px;
            padding: 25px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(111, 66, 193, 0.3);
        }

        .stat-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .stat-info h6 {
            color: var(--royal-blue);
            font-weight: 600;
            margin-bottom: 5px;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-count {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--cseds-purple);
            margin: 0;
        }

        .stat-icon {
            font-size: 3em;
            color: var(--cseds-teal);
            opacity: 0.8;
        }

        /* Management Cards */
        .management-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .management-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .management-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
        }

        .management-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(111, 66, 193, 0.25);
        }

        .management-card.students-card::before { background: linear-gradient(135deg, #9b59b6, #8e44ad); }
        .management-card.faculty-card::before { background: linear-gradient(135deg, #28a745, #20c997); }
        .management-card.ps-card::before { background: linear-gradient(135deg, #e67e22, #f39c12); }
        .management-card.teams-card::before { background: linear-gradient(135deg, #ffc107, #fd7e14); }
        .management-card.progress-card::before { background: linear-gradient(135deg, #17a2b8, #6f42c1); }

        .students-card .management-icon { color: #9b59b6; }
        .faculty-card .management-icon { color: #28a745; }
        .ps-card .management-icon { color: #e67e22; }
        .teams-card .management-icon { color: #ffc107; }
        .progress-card .management-icon { color: #17a2b8; }

        .management-icon {
            font-size: 3em;
            margin-bottom: 15px;
        }

        .management-title {
            font-size: 1.4em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 10px;
        }

        .management-desc {
            color: #666;
            font-size: 1em;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white;
        }

        /* Logout Controls */
        .logout-controls {
            position: fixed;
            bottom: 20px;
            right: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            z-index: 100;
        }

        .logout-btn {
            background: rgba(220, 53, 69, 0.9);
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: 600;
            text-decoration: none;
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .logout-btn:hover {
            background: rgba(220, 53, 69, 1);
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        .home-btn {
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: 600;
            text-decoration: none;
            backdrop-filter: blur(8px);
            border: 2px solid var(--slate);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .home-btn:hover {
            background: var(--warm-gold);
            transform: translateY(-2px);
            text-decoration: none;
            color: var(--royal-blue);
        }

        .alert { padding: 15px 20px; margin-bottom: 20px; border-radius: 10px; font-weight: 600; }
        .alert-success { background: rgba(40,167,69,0.15); color: var(--success-green); border: 1px solid var(--success-green); }
        .alert-danger { background: rgba(220,53,69,0.15); color: var(--error-red); border: 1px solid var(--error-red); }

        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            color: #274060;
            border-radius: 20px 20px 0 0;
        }
        .footer-content { max-width: 1200px; margin: 0 auto; }
        .footer-line { margin: 8px 0; line-height: 1.6; }
        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444; margin-bottom: 12px; }
        .footer-line.team { font-size: 0.95em; font-weight: 500; color: #444; }
        .footer-line.copyright { font-size: 0.9em; font-weight: 600; color: #274060; margin-top: 15px; padding-top: 15px; border-top: 2px solid rgba(39,64,96,0.1); }
        .footer-highlight { color: #274060; font-weight: 700; }
        .footer-name { color: #274060; font-weight: 600; }

        @@media (max-width: 768px) {
            .main-container { padding: 0 15px; }
            .dashboard-header { padding: 25px 20px; margin-bottom: 25px; }
            .dashboard-header h1 { font-size: 2em; }
            .stats-container { grid-template-columns: 1fr; gap: 15px; }
            .management-container { grid-template-columns: 1fr; gap: 20px; }
            .stat-card, .management-card { padding: 20px; }
            .logout-controls { position: static; margin-top: 30px; flex-direction: row; justify-content: center; }
            .app-footer { padding: 20px 15px; margin-top: 30px; }
        }
    </style>
</head>
<body>
    <div class="main-container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger"><i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]</div>
        }

        <!-- Header Section -->
        <div class="dashboard-header">
            <h1><i class="fas fa-chart-line"></i> @Model.Department Department Dashboard</h1>
        </div>

        <!-- Welcome Section -->
        <div class="welcome-section">
            <h4><i class="fas fa-user-shield"></i> Welcome, @ViewBag.AdminName!</h4>
            <p>
                <strong>Email:</strong> @ViewBag.AdminEmail |
                <strong>Department:</strong> @Model.Department
            </p>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Total Students</h6>
                        <h3 class="stat-count">@Model.TotalStudents</h3>
                    </div>
                    <i class="fas fa-graduation-cap stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Total Faculty</h6>
                        <h3 class="stat-count">@Model.TotalFaculties</h3>
                    </div>
                    <i class="fas fa-chalkboard-teacher stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Total Teams</h6>
                        <h3 class="stat-count">@Model.TotalEnrollments</h3>
                    </div>
                    <i class="fas fa-users stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Pending Requests</h6>
                        <h3 class="stat-count">@ViewBag.TotalTeamRequests</h3>
                    </div>
                    <i class="fas fa-hourglass-half stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Completed Projects</h6>
                        <h3 class="stat-count">@ViewBag.CompletedProjects</h3>
                    </div>
                    <i class="fas fa-check-double stat-icon"></i>
                </div>
            </div>
        </div>

        <!-- Management Actions -->
        <div class="management-container">
            <div class="management-card students-card" onclick="window.location.href='@Url.Action("ManageStudents", "Admin")'">
                <i class="fas fa-user-graduate management-icon"></i>
                <div class="management-title">Student Management</div>
                <div class="management-desc">Add, edit, and manage student profiles. View all registered students and update their information.</div>
                <button class="glass-btn">
                    <i class="fas fa-graduation-cap"></i> Manage Students
                </button>
            </div>

            <div class="management-card faculty-card" onclick="window.location.href='@Url.Action("ManageFaculty", "Admin")'">
                <i class="fas fa-chalkboard-teacher management-icon"></i>
                <div class="management-title">Faculty Management</div>
                <div class="management-desc">Add, edit, and delete faculty members. View all faculty with their assigned teams and manage their information.</div>
                <button class="glass-btn">
                    <i class="fas fa-users"></i> Manage Faculty
                </button>
            </div>

            <div class="management-card ps-card" onclick="window.location.href='@Url.Action("ManageProblemStatements", "Admin")'">
                <i class="fas fa-file-alt management-icon"></i>
                <div class="management-title">Problem Statements</div>
                <div class="management-desc">Upload, add, edit, and manage the bank of problem statements. Bulk upload via Excel or add individually.</div>
                <button class="glass-btn">
                    <i class="fas fa-file-alt"></i> Manage Statements
                </button>
            </div>

            <div class="management-card teams-card" onclick="window.location.href='@Url.Action("ManageTeams", "Admin")'">
                <i class="fas fa-users-cog management-icon"></i>
                <div class="management-title">Team Management</div>
                <div class="management-desc">View all student teams, assign faculty mentors, set problem statements, and manage team assignments.</div>
                <button class="glass-btn">
                    <i class="fas fa-users-cog"></i> Manage Teams
                </button>
            </div>

            <div class="management-card progress-card" onclick="window.location.href='@Url.Action("ViewAllProgress", "Admin")'">
                <i class="fas fa-chart-line management-icon"></i>
                <div class="management-title">Progress & Reports</div>
                <div class="management-desc">Monitor project progress across all teams. Track completion status and review meeting records.</div>
                <button class="glass-btn">
                    <i class="fas fa-chart-bar"></i> View Progress
                </button>
            </div>

            <div class="management-card" style="border-color: #e67e22;" onclick="window.location.href='@Url.Action("ScheduleTeamFormation", "Admin")'">
                <div style="position: absolute; top: 0; left: 0; right: 0; height: 6px; background: linear-gradient(135deg, #e67e22, #28a745);"></div>
                <i class="fas fa-calendar-check management-icon" style="color: #e67e22;"></i>
                <div class="management-title">Schedule Team Selection</div>
                <div class="management-desc">Control when students can form teams. Toggle team member selection on/off for each year in your department.</div>
                <button class="glass-btn" style="background: linear-gradient(135deg, #e67e22, #28a745);">
                    <i class="fas fa-toggle-on"></i> Manage Schedule
                </button>
            </div>

            <div class="management-card" style="border-color: #17a2b8;" onclick="if(confirm('This will migrate all old proof images from file system to database. Continue?')) window.location.href='@Url.Action("MigrateProofImagesToDatabase", "Admin")'">
                <div style="position: absolute; top: 0; left: 0; right: 0; height: 6px; background: linear-gradient(135deg, #17a2b8, #28a745);"></div>
                <i class="fas fa-database management-icon" style="color: #17a2b8;"></i>
                <div class="management-title">Migrate Proof Images</div>
                <div class="management-desc">One-time migration: Move existing proof images from file system (wwwroot) into the database for better security.</div>
                <button class="glass-btn" style="background: linear-gradient(135deg, #17a2b8, #28a745);">
                    <i class="fas fa-exchange-alt"></i> Migrate Now
                </button>
            </div>
        </div>
    </div>

    <!-- Logout Controls -->
    <div class="logout-controls">
        <a href="@Url.Action("Index", "Home")" class="home-btn">
            <i class="fas fa-home"></i> Home
        </a>
        <a href="@Url.Action("Logout", "Admin")" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET</div>
            <div class="footer-line team">With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)</div>
            <div class="footer-line copyright">&copy; All Rights Reserved @@2025</div>
        </div>
    </footer>
</body>
</html>
