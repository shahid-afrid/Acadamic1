@model List<TeamPro1.Models.ProblemStatementBank>

@{
    ViewData["Title"] = "Manage Problem Statements";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Problem Statements - Admin - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39, 64, 96, 0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px var(--card-shadow);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .page-header h1 {
            color: var(--royal-blue);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 15px;
            margin: 0;
            font-size: 2em;
        }

        .page-header p { color: #666; margin: 5px 0 0 0; }

        .ps-section {
            background: rgba(249,250,242,0.95);
            border: 2px solid var(--slate);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .ps-section h3 {
            color: var(--royal-blue);
            font-weight: 700;
            margin: 0;
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white !important;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-family: 'Montserrat', sans-serif;
            font-size: 1em;
        }

        .glass-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white !important;
        }

        .glass-btn:disabled { opacity: 0.6; cursor: not-allowed; transform: none; }

        .btn-sm {
            padding: 8px 16px !important;
            font-size: 0.875rem;
            margin: 2px;
        }

        .btn-success { background: linear-gradient(135deg, #28a745, #20c997); }
        .btn-danger { background: linear-gradient(135deg, #dc3545, #e74c3c); }
        .btn-warning { background: linear-gradient(135deg, #f39c12, #e67e22); }
        .btn-back { background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%); }
        .btn-back:hover { background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%); }

        .ps-table {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            width: 100%;
            border-collapse: collapse;
        }

        .ps-table thead {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
        }

        .ps-table thead th {
            padding: 15px;
            font-weight: 600;
            border: none;
            text-align: left;
        }

        .ps-table tbody td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 3px solid var(--royal-blue);
        }

        .ps-table tbody tr:last-child td { border-bottom: none; }

        .ps-table tbody tr:hover {
            background-color: rgba(111, 66, 193, 0.05);
        }

        .ps-table tbody tr:nth-child(even) {
            background: rgba(249, 250, 242, 0.3);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .filters-row {
            display: flex;
            gap: 15px;
            align-items: center;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .search-input {
            padding: 10px 16px;
            border: 2px solid var(--slate);
            border-radius: 10px;
            font-size: 1em;
            min-width: 300px;
            font-family: 'Montserrat', sans-serif;
            transition: border-color 0.3s;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--cseds-purple);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
        }

        .filter-select {
            padding: 10px 16px;
            border: 2px solid var(--slate);
            border-radius: 10px;
            font-size: 1em;
            font-family: 'Montserrat', sans-serif;
            transition: border-color 0.3s;
            min-width: 150px;
        }

        .filter-select:focus {
            outline: none;
            border-color: var(--cseds-purple);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
        }

        .record-count {
            color: #666;
            font-weight: 600;
            padding: 8px 16px;
            background: rgba(111, 66, 193, 0.1);
            border-radius: 8px;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4em;
            color: var(--cseds-purple);
            margin-bottom: 20px;
        }

        .alert-card {
            background: rgba(255,255,255,0.98);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 20px 30px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .alert-card.success {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            border: 2px solid #28a745;
        }

        .alert-card.error {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            border: 2px solid #dc3545;
        }

        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background-color: rgba(39, 64, 96, 0.75);
            backdrop-filter: blur(4px);
            z-index: 9999;
            align-items: center;
            justify-content: center;
            animation: fadeIn 0.2s ease-out;
        }

        .modal-overlay.show { display: flex; }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .modal-content {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 600px;
            width: 90%;
            overflow: hidden;
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from { transform: translateY(-50px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .modal-header {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 25px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h5 {
            margin: 0;
            font-weight: 700;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .modal-close {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 1.2em;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .modal-close:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(90deg);
        }

        .modal-body { padding: 30px; }
        .modal-body p { color: #666; margin-bottom: 0; font-size: 1.05em; }

        .modal-footer {
            padding: 20px 30px;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
            display: flex;
            justify-content: flex-end;
            gap: 12px;
        }

        .form-group { margin-bottom: 20px; }

        .form-label {
            display: block;
            font-weight: 600;
            font-size: 0.9em;
            color: var(--royal-blue);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 1em;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--cseds-purple);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
        }

        .year-badge {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 4px 14px;
            border-radius: 15px;
            font-weight: 700;
            font-size: 0.9em;
            display: inline-block;
        }

        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            color: #274060;
            border-radius: 20px 20px 0 0;
        }
        .footer-content { max-width: 1200px; margin: 0 auto; }
        .footer-line { margin: 8px 0; line-height: 1.6; }
        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444; margin-bottom: 12px; }
        .footer-line.team { font-size: 0.95em; font-weight: 500; color: #444; }
        .footer-line.copyright { font-size: 0.9em; font-weight: 600; color: #274060; margin-top: 15px; padding-top: 15px; border-top: 2px solid rgba(39,64,96,0.1); }
        .footer-highlight { color: #274060; font-weight: 700; }
        .footer-name { color: #274060; font-weight: 600; }

        /* Toast Notification */
        .toast-container {
            position: fixed;
            top: 30px;
            right: 30px;
            z-index: 99999;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .toast {
            background: #ffffff;
            border-radius: 16px;
            padding: 20px 28px;
            min-width: 340px;
            max-width: 480px;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(0,0,0,0.05);
            display: flex;
            align-items: flex-start;
            gap: 14px;
            animation: toastSlideIn 0.4s ease-out;
            border-left: 5px solid var(--cseds-purple);
        }

        .toast.toast-success {
            border-left-color: var(--success-green);
        }

        .toast.toast-error {
            border-left-color: var(--error-red);
        }

        .toast.toast-warning {
            border-left-color: #f39c12;
        }

        .toast-icon {
            font-size: 1.6em;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .toast-success .toast-icon { color: var(--success-green); }
        .toast-error .toast-icon { color: var(--error-red); }
        .toast-warning .toast-icon { color: #f39c12; }

        .toast-body {
            flex: 1;
        }

        .toast-title {
            font-weight: 700;
            font-size: 1.05em;
            color: var(--royal-blue);
            margin-bottom: 4px;
        }

        .toast-message {
            color: #555;
            font-size: 0.93em;
            line-height: 1.5;
        }

        .toast-close {
            background: none;
            border: none;
            color: #aaa;
            font-size: 1.3em;
            cursor: pointer;
            padding: 0;
            margin-left: 8px;
            flex-shrink: 0;
            transition: color 0.2s;
            margin-top: 2px;
        }

        .toast-close:hover {
            color: var(--royal-blue);
        }

        .toast.toast-hide {
            animation: toastSlideOut 0.35s ease-in forwards;
        }

        @@keyframes toastSlideIn {
            from { transform: translateX(100px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        @@keyframes toastSlideOut {
            from { transform: translateX(0); opacity: 1; }
            to { transform: translateX(100px); opacity: 0; }
        }

        @@media (max-width: 768px) {
            .main-container { padding: 0 15px; }
            .page-header { flex-direction: column; text-align: center; }
            .page-header h1 { font-size: 1.5em; }
            .filters-row { flex-direction: column; }
            .search-input { min-width: 100%; }
            .section-header { flex-direction: column; }
            .ps-table thead { display: none; }
            .ps-table tbody tr {
                display: block; border: 1px solid #ddd;
                border-radius: 10px; margin-bottom: 15px; padding: 15px;
            }
            .ps-table tbody td {
                display: block; text-align: right; border: none; padding: 8px 0;
            }
            .ps-table tbody td::before {
                content: attr(data-label) ": ";
                float: left; font-weight: bold; color: var(--royal-blue);
            }
            .modal-content { width: 95%; }
            .app-footer { padding: 20px 15px; margin-top: 30px; }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header -->
        <div class="page-header">
            <div>
                <h1><i class="fas fa-file-alt"></i> Manage Problem Statements</h1>
                <p>Add, edit, and manage problem statements for <strong>@ViewBag.AdminDepartment</strong> department</p>
            </div>
            <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                <button type="button" class="glass-btn btn-success" onclick="openAddModal()">
                    <i class="fas fa-plus-circle"></i> Add Statement
                </button>
                <button type="button" class="glass-btn btn-warning" onclick="document.getElementById('bulkUploadFile').click()">
                    <i class="fas fa-upload"></i> Upload Bulk Data
                </button>
                <a href="@Url.Action("DownloadProblemStatementTemplate", "Admin")" class="glass-btn" style="background: linear-gradient(135deg, #3498db, #2980b9);">
                    <i class="fas fa-download"></i> Download Template
                </a>
                <button type="button" class="glass-btn" style="background: linear-gradient(135deg, #28a745, #20c997);" onclick="exportExcel()" id="exportExcelBtn">
                    <i class="fas fa-file-excel"></i> Export Excel
                </button>
                <button type="button" class="glass-btn btn-danger" onclick="confirmDeleteAll()" id="deleteAllPsBtn">
                    <i class="fas fa-trash-alt"></i> Delete All
                </button>
                <a href="@Url.Action("Dashboard", "Admin")" class="glass-btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Hidden file input for bulk upload -->
        <form id="bulkUploadForm" method="post" action="@Url.Action("BulkUploadProblemStatements", "Admin")" enctype="multipart/form-data" style="display: none;">
            @Html.AntiForgeryToken()
            <input type="file" id="bulkUploadFile" name="excelFile" accept=".xlsx" onchange="handleBulkUpload()" />
        </form>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-card success">
                <i class="fas fa-check-circle" style="font-size: 2em; color: #28a745;"></i>
                <div>
                    <h4 style="margin: 0; color: #28a745;">Success!</h4>
                    <p style="margin: 5px 0 0 0; color: #155724;">@TempData["SuccessMessage"]</p>
                    @if (TempData["ErrorDetails"] != null)
                    {
                        <p style="margin: 10px 0 0 0; font-size: 0.9em; color: #856404;">
                            <strong>Warnings:</strong> @TempData["ErrorDetails"]
                        </p>
                    }
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-card error">
                <i class="fas fa-exclamation-circle" style="font-size: 2em; color: #dc3545;"></i>
                <div>
                    <h4 style="margin: 0; color: #dc3545;">Error!</h4>
                    <p style="margin: 5px 0 0 0; color: #721c24;">@TempData["ErrorMessage"]</p>
                </div>
            </div>
        }

        <!-- Problem Statements Section -->
        <div class="ps-section">
            <div class="section-header">
                <h3><i class="fas fa-file-alt" style="color: var(--cseds-purple);"></i> Problem Statements (@Model.Count)</h3>
                <span class="record-count" id="psCount">Showing: @Model.Count</span>
            </div>

            <div class="filters-row">
                <input type="text" id="searchInput" class="search-input"
                       placeholder="Search problem statements..."
                       onkeyup="filterStatements()">
                <select id="filterYear" class="filter-select" onchange="filterStatements()">
                    <option value="">All Years</option>
                    @foreach (var year in Model.Select(s => s.Year).Distinct().OrderBy(y => y))
                    {
                        <option value="@year">Year @year</option>
                    }
                </select>
            </div>

            @if (Model.Count == 0)
            {
                <div class="empty-state">
                    <i class="fas fa-file-alt"></i>
                    <h3>No Problem Statements Found</h3>
                    <p>No problem statements have been added yet for your department.</p>
                    <button type="button" class="glass-btn btn-success" style="margin-top: 15px;" onclick="openAddModal()">
                        <i class="fas fa-plus-circle"></i> Add First Statement
                    </button>
                </div>
            }
            else
            {
                <div style="overflow-x: auto;">
                    <table class="ps-table" id="psTable">
                        <thead>
                            <tr>
                                <th style="width: 80px;">#</th>
                                <th>Problem Statement</th>
                                <th style="width: 120px; text-align: center;">Department</th>
                                <th style="width: 100px; text-align: center;">Year</th>
                                <th style="width: 200px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int idx = 1; }
                            @foreach (var ps in Model)
                            {
                                <tr data-ps-id="@ps.Id" data-year="@ps.Year">
                                    <td data-label="#">@idx</td>
                                    <td data-label="Problem Statement"><strong>@ps.Statement</strong></td>
                                    <td data-label="Department" style="text-align: center;">
                                        <span style="background: linear-gradient(135deg, var(--royal-blue), #1a2f47); color: white; padding: 4px 14px; border-radius: 15px; font-weight: 700; font-size: 0.85em; display: inline-block;">@ps.Department</span>
                                    </td>
                                    <td data-label="Year" style="text-align: center;">
                                        <span class="year-badge">Year @ps.Year</span>
                                    </td>
                                    <td data-label="Actions">
                                        <div class="action-buttons">
                                            <button type="button" class="glass-btn btn-sm btn-warning"
                                                    onclick="openEditModal(@ps.Id, '@ps.Statement.Replace("'", "\\'").Replace("\"", "&quot;")', @ps.Year)"
                                                    title="Edit">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button type="button" class="glass-btn btn-sm btn-danger"
                                                    onclick="confirmDelete(@ps.Id, '@ps.Statement.Replace("'", "\\'").Replace("\"", "&quot;")')"
                                                    title="Delete">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                idx++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Add Problem Statement Modal -->
    <div class="modal-overlay" id="addModal">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="fas fa-plus-circle"></i> Add Problem Statement</h5>
                <button class="modal-close" onclick="closeAddModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Problem Statement</label>
                    <textarea id="addStatement" class="form-control" rows="3" placeholder="Enter the problem statement..."></textarea>
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Year</label>
                    <select id="addYear" class="form-control">
                        <option value="1">Year 1</option>
                        <option value="2">Year 2</option>
                        <option value="3" selected>Year 3</option>
                        <option value="4">Year 4</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="glass-btn btn-back" onclick="closeAddModal()">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="glass-btn btn-success" id="saveAddBtn" onclick="saveAdd()">
                    <i class="fas fa-save"></i> Add
                </button>
            </div>
        </div>
    </div>

    <!-- Edit Problem Statement Modal -->
    <div class="modal-overlay" id="editModal">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="fas fa-edit"></i> Edit Problem Statement</h5>
                <button class="modal-close" onclick="closeEditModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editId" />
                <div class="form-group">
                    <label class="form-label">Problem Statement</label>
                    <textarea id="editStatement" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label class="form-label">Year</label>
                    <select id="editYear" class="form-control">
                        <option value="1">Year 1</option>
                        <option value="2">Year 2</option>
                        <option value="3">Year 3</option>
                        <option value="4">Year 4</option>
                    </select>
                </div>
            </div>
