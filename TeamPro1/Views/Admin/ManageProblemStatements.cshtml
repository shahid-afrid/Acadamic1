    <!-- Delete All Problem Statements Confirmation Modal -->
    <div class="modal-overlay" id="deleteAllPsModal">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #dc3545, #c0392b);">
                <h5><i class="fas fa-exclamation-triangle"></i> Delete All Problem Statements</h5>
