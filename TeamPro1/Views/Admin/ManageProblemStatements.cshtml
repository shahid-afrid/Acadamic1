    @Html.AntiForgeryToken()

    <!-- Toast Container -->
    <div class="toast-container" id="toastContainer"></div>

    <script>
        // ===== TOAST NOTIFICATION =====
        function showToast(message, type = 'success', duration = 4000) {
            var container = document.getElementById('toastContainer');
            var toast = document.createElement('div');
            toast.className = 'toast toast-' + type;

            var iconClass = type === 'success' ? 'fa-check-circle'
                          : type === 'error' ? 'fa-exclamation-circle'
                          : 'fa-exclamation-triangle';
            var title = type === 'success' ? 'Success'
                      : type === 'error' ? 'Error'
                      : 'Warning';

            toast.innerHTML = '<i class="fas ' + iconClass + ' toast-icon"></i>'
                + '<div class="toast-body">'
                + '<div class="toast-title">' + title + '</div>'
                + '<div class="toast-message">' + message + '</div>'
                + '</div>'
                + '<button class="toast-close" onclick="dismissToast(this)"><i class="fas fa-times"></i></button>';

            container.appendChild(toast);

            setTimeout(function () {
                dismissToast(toast.querySelector('.toast-close'));
            }, duration);
        }

        function dismissToast(btn) {
            var toast = btn.closest('.toast');
            if (!toast || toast.classList.contains('toast-hide')) return;
            toast.classList.add('toast-hide');
            setTimeout(function () { toast.remove(); }, 350);
        }

        // ===== FILTER =====
        function filterStatements() {
            var input = document.getElementById('searchInput').value.toLowerCase();
            var yearFilter = document.getElementById('filterYear').value;
            var rows = document.querySelectorAll('#psTable tbody tr');
            var visibleCount = 0;

            rows.forEach(function (row) {
                var text = row.textContent.toLowerCase();
                var year = row.getAttribute('data-year');
                var matchSearch = !input || text.includes(input);
                var matchYear = !yearFilter || year === yearFilter;

                if (matchSearch && matchYear) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('psCount').textContent = 'Showing: ' + visibleCount;
        }

        // ===== ADD MODAL =====
        function openAddModal() {
            document.getElementById('addStatement').value = '';
            document.getElementById('addYear').value = '3';
            document.getElementById('addModal').classList.add('show');
        }

        function closeAddModal() {
            document.getElementById('addModal').classList.remove('show');
        }

        async function saveAdd() {
            var statement = document.getElementById('addStatement').value.trim();
            var year = document.getElementById('addYear').value;

            if (!statement) {
                showToast('Please enter a problem statement.', 'warning');
                return;
            }

            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            var formData = new FormData();
            formData.append('statement', statement);
            formData.append('year', year);
            formData.append('__RequestVerificationToken', token);

            try {
                var response = await fetch('@Url.Action("AddProblemStatement", "Admin")', {
                    method: 'POST',
                    body: formData
                });
                var result = await response.json();
                if (result.success) {
                    closeAddModal();
                    showToast(result.message, 'success');
                    setTimeout(function () { location.reload(); }, 1500);
                } else {
                    showToast(result.message, 'error');
                }
            } catch (e) {
                showToast('Error adding problem statement.', 'error');
            }
        }

        // ===== EDIT MODAL =====
        function openEditModal(id, statement, year) {
            document.getElementById('editId').value = id;
            document.getElementById('editStatement').value = statement;
            document.getElementById('editYear').value = year;
            document.getElementById('editModal').classList.add('show');
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.remove('show');
        }

        async function saveEdit() {
            var id = document.getElementById('editId').value;
            var statement = document.getElementById('editStatement').value.trim();
            var year = document.getElementById('editYear').value;

            if (!statement) {
                showToast('Please enter a problem statement.', 'warning');
                return;
            }

            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            var formData = new FormData();
            formData.append('id', id);
            formData.append('statement', statement);
            formData.append('year', year);
            formData.append('__RequestVerificationToken', token);

            try {
                var response = await fetch('@Url.Action("EditProblemStatement", "Admin")', {
                    method: 'POST',
                    body: formData
                });
                var result = await response.json();
                if (result.success) {
                    closeEditModal();
                    showToast(result.message, 'success');
                    setTimeout(function () { location.reload(); }, 1500);
                } else {
                    showToast(result.message, 'error');
                }
            } catch (e) {
                showToast('Error updating problem statement.', 'error');
            }
        }

        // ===== DELETE MODAL =====
        var deletePsId = 0;
        function confirmDelete(id, statement) {
            deletePsId = id;
            document.getElementById('deleteStatementText').textContent = statement;
            document.getElementById('deleteModal').classList.add('show');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('show');
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
            closeDeleteModal();
            try {
                var formData = new FormData();
                formData.append('id', deletePsId);
                var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                var response = await fetch('@Url.Action("DeleteProblemStatement", "Admin")', {
                    method: 'POST',
                    body: formData
                });
                var result = await response.json();
                if (result.success) {
                    var row = document.querySelector('tr[data-ps-id="' + deletePsId + '"]');
                    if (row) row.remove();
                    var currentCount = parseInt(document.getElementById('psCount').textContent.match(/\d+/)[0]);
                    document.getElementById('psCount').textContent = 'Showing: ' + (currentCount - 1);
                    showToast('Problem statement deleted successfully!', 'success');
                } else {
                    showToast(result.message, 'error');
                }
            } catch (e) {
                showToast('Error deleting problem statement.', 'error');
            }
        });

        // ===== DELETE ALL MODAL =====
        function confirmDeleteAll() {
            document.getElementById('deleteAllPsConfirmInput').value = '';
            document.getElementById('confirmDeleteAllPsBtn').disabled = true;
            document.getElementById('deleteAllPsModal').classList.add('show');
        }

        function closeDeleteAllPsModal() {
            document.getElementById('deleteAllPsModal').classList.remove('show');
        }

        document.getElementById('deleteAllPsConfirmInput').addEventListener('input', function () {
            document.getElementById('confirmDeleteAllPsBtn').disabled = this.value.trim() !== 'DELETE ALL';
        });

        document.getElementById('confirmDeleteAllPsBtn').addEventListener('click', async function () {
            closeDeleteAllPsModal();
            var btn = document.getElementById('deleteAllPsBtn');
            var originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';
            btn.disabled = true;

            try {
                var formData = new FormData();
                var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                var response = await fetch('@Url.Action("DeleteAllProblemStatements", "Admin")', {
                    method: 'POST',
                    body: formData
                });
                var result = await response.json();
                if (result.success) {
                    showToast(result.message, 'success');
                    setTimeout(function () { window.location.reload(); }, 1500);
                } else {
                    showToast(result.message, 'error');
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            } catch (e) {
                showToast('Error deleting problem statements.', 'error');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });

        // ===== CLOSE MODALS ON OVERLAY CLICK / ESCAPE =====
        ['addModal', 'editModal', 'deleteModal', 'deleteAllPsModal'].forEach(function (id) {
            document.getElementById(id).addEventListener('click', function (e) {
                if (e.target === this) {
                    this.classList.remove('show');
                }
            });
        });

        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                closeAddModal();
                closeEditModal();
                closeDeleteModal();
                closeDeleteAllPsModal();
            }
        });

        // ===== EXPORT EXCEL =====
        function exportExcel() {
            var btn = document.getElementById('exportExcelBtn');
            var originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Exporting...';
            btn.disabled = true;

            try {
                window.location.href = '@Url.Action("ExportProblemStatementsExcel", "Admin")';
            } catch (error) {
                showToast('Error exporting Excel file.', 'error');
            }

            setTimeout(function () {
                btn.innerHTML = originalText;
                btn.disabled = false;
            }, 2000);
        }

        // ===== BULK UPLOAD =====
        function handleBulkUpload() {
            var fileInput = document.getElementById('bulkUploadFile');
            var file = fileInput.files[0];

            if (!file) return;

            if (!file.name.endsWith('.xlsx')) {
                showToast('Please select a valid Excel file (.xlsx)', 'warning');
                fileInput.value = '';
                return;
            }

            if (!confirm('Are you sure you want to upload ' + file.name + '?\n\nThis will add all problem statements from the Excel file.')) {
                fileInput.value = '';
                return;
            }

            document.getElementById('bulkUploadForm').submit();
        }
    </script>
